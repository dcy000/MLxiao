    <!--选择时间-->
    <LinearLayout
        android:id="@+id/ll_selectTime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_empty"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/selector_btn"
                android:gravity="center"
                android:text="@string/kongfu"
                android:textColor="#6bb7eb"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_an_hour"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:background="@drawable/selector_btn"
                android:gravity="center"
                android:text="@string/an_hour_later"
                android:textColor="#6bb7eb"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_two_hour"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:background="@drawable/selector_btn"
                android:gravity="center"
                android:text="@string/two_hour_later"
                android:textColor="#6bb7eb"
                android:textSize="30sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_three_hour"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/selector_btn"
            android:gravity="center"
            android:text="@string/three_hour_later"
            android:textColor="#6bb7eb"
            android:textSize="30sp" />
    </LinearLayout>
</RelativeLayout>