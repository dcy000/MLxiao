<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.han.referralproject.activity.MarketActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#3f86fc">

        <RelativeLayout
            android:id="@+id/rv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/iv_actionbar_left"
                android:layout_width="22dp"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/common_btn_back" />

            <TextView
                android:id="@+id/tv_actionbar_left"
                style="@style/text_white_32"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_actionbar_left"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="返回"
                android:textColor="@color/common_text_white" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="60pt"
            android:layout_marginEnd="60pt"
            android:background="@drawable/market_search_text_bg">

            <ImageView
                android:id="@+id/iv_search_items"
                android:layout_width="58pt"
                android:layout_height="58pt"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40pt"
                android:background="@drawable/common_search_good"
                android:scaleType="centerCrop" />

            <EditText
                android:id="@+id/et_item_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40pt"
                android:background="@null"
                android:hint="请输入关键词"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="#fff"
                android:textColorHint="#ffffffff"
                android:textSize="48pt" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="400pt"
            android:layout_height="match_parent"
            android:background="#fff5f5f5">

            <RadioGroup
                android:id="@+id/rg_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></RadioGroup>
        </ScrollView>

        <com.gcml.common.widget.MLViewPager
            android:id="@+id/vp_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:paddingLeft="68pt"
            android:paddingRight="68pt" />

    </LinearLayout>
</LinearLayout>
