<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.han.referralproject.measure.MeasureXuetangResultActivity">
    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="594pt"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/tv_measure_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周测量：20次"
            android:textSize="56pt"
            android:textColor="#333"
            android:textStyle="bold"
            android:layout_marginTop="48pt"
            />
        <TextView
            android:id="@+id/tv_gao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="48pt"
            android:text="3次"
            android:layout_gravity="end"
            android:layout_marginRight="115pt"
            android:layout_marginTop="26pt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="-20pt">
            <me.songning.library.CircleView
                android:layout_width="24pt"
                android:layout_height="24pt"
                app:randomColor="false"
                app:circleColor="#FF6100"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="偏高"
                android:textSize="48pt"
                android:textColor="#666666"
                android:layout_marginLeft="16pt"/>
            <com.example.han.referralproject.view.progress.RxRoundProgressBar
                android:id="@+id/rpb_gao"
                android:layout_width="130pt"
                android:layout_height="24pt"
                app:rcBackgroundColor="#eee"
                app:rcProgressColor="#FF6100"
                app:rcRadius="12pt"
                app:rcMax="100"
                app:rcProgress="0"
                android:layout_marginLeft="148pt"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_zhengchang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="115pt"
            android:layout_marginTop="20pt"
            android:text="15次"
            android:textColor="#333"
            android:textSize="48pt" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="-20pt">
            <me.songning.library.CircleView
                android:layout_width="24pt"
                android:layout_height="24pt"
                app:randomColor="false"
                app:circleColor="#5AC628"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正常"
                android:textSize="48pt"
                android:textColor="#666666"
                android:layout_marginLeft="16pt"/>
            <com.example.han.referralproject.view.progress.RxRoundProgressBar
                android:id="@+id/rpb_zhengchang"
                android:layout_width="130pt"
                android:layout_height="24pt"
                app:rcBackgroundColor="#eee"
                app:rcProgressColor="#5AC628"
                app:rcRadius="12pt"
                app:rcMax="100"
                app:rcProgress="0"
                android:layout_marginLeft="148pt"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_di"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="48pt"
            android:text="2次"
            android:layout_gravity="end"
            android:layout_marginRight="115pt"
            android:layout_marginTop="20pt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="-20pt">
            <me.songning.library.CircleView
                android:layout_width="24pt"
                android:layout_height="24pt"
                app:randomColor="false"
                app:circleColor="#FEB70F"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="偏低"
                android:textSize="48pt"
                android:textColor="#666666"
                android:layout_marginLeft="16pt"/>
            <com.example.han.referralproject.view.progress.RxRoundProgressBar
                android:id="@+id/rpb_di"
                android:layout_width="130pt"
                android:layout_height="24pt"
                app:rcBackgroundColor="#eee"
                app:rcProgressColor="#FEB70F"
                app:rcRadius="12pt"
                app:rcMax="100"
                app:rcProgress="0"
                android:layout_marginLeft="148pt"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周平均血糖"
            android:textSize="56pt"
            android:textColor="#333"
            android:textStyle="bold"
            android:layout_marginTop="60pt"/>
        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="48pt"
            android:text="120"
            android:layout_gravity="end"
            android:layout_marginRight="115pt"
            android:layout_marginTop="26pt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="-20pt">
            <me.songning.library.CircleView
                android:layout_width="24pt"
                android:layout_height="24pt"
                app:randomColor="false"
                app:circleColor="#3F86FC"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空腹"
                android:textSize="48pt"
                android:textColor="#666666"
                android:layout_marginLeft="16pt"/>
            <com.example.han.referralproject.view.progress.RxRoundProgressBar
                android:id="@+id/rpb_empty"
                android:layout_width="130pt"
                android:layout_height="24pt"
                app:rcBackgroundColor="#eee"
                app:rcProgressColor="#3F86FC"
                app:rcRadius="12pt"
                app:rcMax="100"
                app:rcProgress="0"
                android:layout_marginLeft="148pt"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="48pt"
            android:text="80"
            android:layout_gravity="end"
            android:layout_marginRight="115pt"
            android:layout_marginTop="20pt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="-20pt">
            <me.songning.library.CircleView
                android:layout_width="24pt"
                android:layout_height="24pt"
                app:randomColor="false"
                app:circleColor="#3F86FC"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="饭后1小时"
                android:textSize="48pt"
                android:textColor="#666666"
                android:layout_marginLeft="16pt"/>
            <com.example.han.referralproject.view.progress.RxRoundProgressBar
                android:id="@+id/rpb_one"
                android:layout_width="130pt"
                android:layout_height="24pt"
                app:rcBackgroundColor="#eee"
                app:rcProgressColor="#3F86FC"
                app:rcRadius="12pt"
                app:rcMax="100"
                app:rcProgress="0"
                android:layout_marginLeft="32pt"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="48pt"
            android:text="80"
            android:layout_gravity="end"
            android:layout_marginRight="115pt"
            android:layout_marginTop="20pt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="-20pt">
            <me.songning.library.CircleView
                android:layout_width="24pt"
                android:layout_height="24pt"
                app:randomColor="false"
                app:circleColor="#3F86FC"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="饭后2小时"
                android:textSize="48pt"
                android:textColor="#666666"
                android:layout_marginLeft="16pt"/>
            <com.example.han.referralproject.view.progress.RxRoundProgressBar
                android:id="@+id/rpb_two"
                android:layout_width="130pt"
                android:layout_height="24pt"
                app:rcBackgroundColor="#eee"
                app:rcProgressColor="#3F86FC"
                app:rcRadius="12pt"
                app:rcMax="100"
                app:rcProgress="0"
                android:layout_marginLeft="32pt"
                />
        </LinearLayout>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ll_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/ll_left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:layout_marginLeft="32pt"
        >
        <LinearLayout
            android:id="@+id/ll_gaodi"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ll_fenshu"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测量结果"
                android:textColor="#333"
                android:textSize="40pt"
                android:layout_marginTop="50pt"/>
            <com.littlejie.circleprogress.CircleProgress
                android:id="@+id/circleprogress"
                android:layout_width="320pt"
                android:layout_height="320pt"
                app:cp_antiAlias="true"
                app:cp_arcWidth="16pt"
                app:cp_bgArcColor="#eee"
                app:cp_bgArcWidth="16pt"
                app:cp_maxValue="10"
                app:cp_startAngle="135"
                app:cp_sweepAngle="270"
                app:cp_unit="mmol/L"
                app:cp_unitSize="40pt"

                app:cp_value="10000"
                app:cp_valueSize="100pt"
                android:layout_marginTop="34pt"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_fenshu"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/ll_gaodi"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康分数"
                android:textColor="#333"
                android:textSize="40pt"
                android:layout_marginTop="50pt"/>
            <com.littlejie.circleprogress.WaveProgress
                android:id="@+id/wave_progress_bar"
                android:layout_width="300pt"
                android:layout_height="300pt"
                android:layout_gravity="center_horizontal"
                app:cp_darkWaveAnimTime="1000"
                app:cp_darkWaveColor="#B372A7FC"
                app:cp_lightWaveAnimTime="2000"
                app:cp_lightWaveColor="#B372A7FC"
                app:cp_lightWaveDirect="R2L"
                app:cp_lockWave="false"
                app:cp_valueSize="105pt"
                app:cp_waveHeight="30pt"
                app:cp_waveNum="1"
                app:cp_circleColor="#eee"
                app:cp_lockCircle="true"
                app:cp_bgCircleColor="#F1F5FF"
                android:layout_marginTop="34pt"
                app:cp_circleWidth="3pt"
                />
        </LinearLayout>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_constraintTop_toBottomOf="@id/ll_fenshu"
            android:background="#bbbbbb"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="60pt"
            android:layout_marginRight="60pt"
            android:layout_marginTop="24pt"/>
        <TextView
            android:id="@+id/tv_suggest_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="健康建议"
            app:layout_constraintTop_toBottomOf="@id/line"
            android:textSize="56pt"
            android:textColor="#333"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="36pt"
            />
        <TextView
            android:id="@+id/tv_suggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_suggest_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="#333"
            android:textSize="48pt"
            android:layout_marginLeft="60pt"
            android:layout_marginRight="60pt"
            android:layout_marginTop="16pt"
            android:text="您好，您血糖偏低，并有下降趋势，低血糖出现饥饿、头昏眼花、面色苍白、心慌手颤、出冷汗、虚弱无力等症状，低血糖还容易诱发心律失常，心绞痛、心肌梗死以及脑血管意外并发症，请持续测量，必要时及时联系医生。"
            android:lineSpacingMultiplier="1.2"/>
        <TextView
            android:id="@+id/tv_something_advice"
            android:layout_width="280pt"
            android:layout_height="100pt"
            android:background="@drawable/measure_result"
            android:text="注意事项"
            android:textColor="@color/white"
            android:textSize="48pt"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/health_knowledge"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginBottom="50pt"
            android:clickable="true"/>
        <TextView
            android:id="@+id/health_knowledge"
            android:layout_width="280pt"
            android:layout_height="100pt"
            android:background="@drawable/measure_result2"
            android:text="健康知识"
            android:textColor="@color/white"
            android:textSize="48pt"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/tv_something_advice"
            app:layout_constraintLeft_toRightOf="@id/tv_something_advice"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="190pt"
            android:clickable="true"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
