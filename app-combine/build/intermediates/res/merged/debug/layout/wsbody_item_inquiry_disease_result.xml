<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/ivHead"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/wsbody_computer_head" />

    <LinearLayout
        android:id="@+id/llDisease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="80dp"
        android:layout_toRightOf="@id/ivHead"
        android:background="@mipmap/wsbody_bg_msg_doctor"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/ws_txt_main_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="根据您的描述分析，您可能患有（点击查看详情）："/>

    </LinearLayout>


</RelativeLayout>
