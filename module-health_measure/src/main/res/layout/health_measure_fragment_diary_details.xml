<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="32pt"
    android:background="#ffffff">

    <TextView
        android:id="@+id/health_diary_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64pt"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="56pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="选择盐摄入"/>

    <TextView
        android:id="@+id/health_diary_tv_count"
        android:layout_width="0pt"
        android:layout_height="200pt"
        android:layout_marginTop="40pt"
        android:gravity="center"
        android:textColor="#3F86FC"
        android:textSize="150pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/health_diary_tv_title"
        tools:text="5s"/>

    <ImageView
        android:id="@+id/health_diary_iv_indicator"
        android:layout_width="46pt"
        android:layout_height="46pt"
        android:layout_marginTop="56pt"
        android:src="@drawable/health_measure_diary_ic_indicator_ruler"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/health_diary_tv_count"/>

    <com.gcml.common.widget.picker.RulerView
        android:id="@+id/health_diary_rv_ruler"
        android:layout_width="0dp"
        android:layout_height="180pt"
        android:layout_marginLeft="60pt"
        android:layout_marginRight="60pt"
        android:layout_marginTop="32pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/health_diary_iv_indicator"
        app:ruler_lineColor="#999999"
        app:ruler_lineMaxHeight="80pt"
        app:ruler_lineMidHeight="60pt"
        app:ruler_lineMinHeight="40pt"
        app:ruler_lineSpaceWidth="40pt"
        app:ruler_lineWidth="8pt"
        app:ruler_textColor="#333333"
        app:ruler_textMarginTop="20pt"
        app:ruler_textSize="56pt"/>

    <View
        android:layout_width="8pt"
        android:layout_height="100pt"
        android:background="@drawable/health_measure_diary_indicator_ruler"
        app:layout_constraintLeft_toLeftOf="@+id/health_diary_rv_ruler"
        app:layout_constraintRight_toRightOf="@+id/health_diary_rv_ruler"
        app:layout_constraintTop_toTopOf="@+id/health_diary_rv_ruler"/>

    <com.gcml.common.widget.picker.SelecterView
        android:id="@+id/health_diary_sv_selecter"
        android:layout_width="400pt"
        android:layout_height="0pt"
        app:layout_constraintBottom_toTopOf="@+id/health_diary_tv_action"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/health_diary_rv_ruler"
        app:selecter_VisibleSize="1"
        app:selecter_SelectedTextColor="@color/config_color_primary"
        app:selecter_SelectedTextSize="60"
        app:selecter_TextColor="@color/config_color_gray_1"
        app:selecter_TextSize="60" />

    <TextView
        android:id="@+id/health_diary_tv_action"
        android:layout_width="360pt"
        android:layout_height="120pt"
        android:background="@drawable/bluetooth_btn_health_history_set"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="56px"
        android:layout_marginBottom="20pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="下一步"/>

</android.support.constraint.ConstraintLayout>
