<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.ml.edu.old.music.SheetDetailFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/old_rv_songs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/old_cl_sheet_header" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/old_cl_sheet_header"
        android:background="@drawable/old_bg_sheet_detail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:paddingTop="55dp">

        <ImageView
            android:id="@+id/old_music_iv_sheet_cover"
            android:layout_width="185dp"
            android:layout_height="185dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/old_music_tv_sheet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:textSize="28sp"
            app:layout_constraintLeft_toRightOf="@+id/old_music_iv_sheet_cover"
            app:layout_constraintTop_toTopOf="@+id/old_music_iv_sheet_cover"
            tools:text="Jar" />

        <TextView
            android:id="@+id/old_music_tv_sheet_listener_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="50dp"
            android:textColor="#999999"
            android:textSize="28sp"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/old_music_iv_sheet_cover"
            app:layout_constraintTop_toTopOf="@+id/old_music_iv_sheet_cover"
            tools:text="1024人听过" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/old_tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/old_ic_back"
        android:drawablePadding="10dp"
        android:text="返回"
        android:textColor="#323E52"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
