<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_good_item_set"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!--android:background="@drawable/bg_shadow"-->
    <LinearLayout
        android:layout_width="442px"
        android:layout_height="680px"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="440px"
            android:layout_height="440px"
            android:layout_marginTop="1px"
            android:src="@drawable/erwenqiang" />

        <TextView
            android:id="@+id/name"
            android:layout_width="376px"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="耳温枪"
            android:textColor="#333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="376px"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:gravity="bottom"
            android:text="￥0.1"
            android:textColor="#FC1023"
            android:textSize="27sp" />
    </LinearLayout>
</LinearLayout>