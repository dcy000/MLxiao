<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="1200pt"
        android:layout_height="wrap_content"
        android:background="@drawable/utils_shape_round_white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="33pt">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24pt"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60pt"
            android:layout_marginRight="60pt"
            android:paddingLeft="6pt"
            android:paddingRight="6pt"
            android:text=""
            android:textColor="#3F51B5"
            android:textSize="60pt"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40pt"
            android:gravity="center"
            android:maxHeight="400pt"
            android:text=""
            android:textColor="#FF000000"
            android:textSize="52pt"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:layout_marginTop="20pt"
            android:background="#D9D9D9"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
           >

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="135pt"
                android:layout_weight="1"
                android:gravity="center"
                android:text="чбошод"
                android:textColor="#3F86FC"
                android:textSize="56pt"
                android:background="?android:attr/selectableItemBackground"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>