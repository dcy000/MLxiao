<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_steps"
            android:layout_width="0dp"
            android:layout_height="470pt"
            android:layout_marginTop="40pt"
            android:background="@drawable/bg_shadow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="30pt"
            android:layout_marginRight="30pt">
            <ImageView
                android:id="@+id/iv_steps"
                android:layout_width="90px"
                android:layout_height="90px"
                android:src="@drawable/bluetooth_steps"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="40pt"
                android:layout_marginTop="50pt"/>
            <TextView
                android:id="@+id/tv_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="步数"
                android:textColor="#333"
                android:textSize="72pt"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/iv_steps"
                app:layout_constraintBottom_toBottomOf="@id/iv_steps"
                app:layout_constraintLeft_toRightOf="@id/iv_steps"
                android:layout_marginLeft="24pt"/>

            <TextView
                android:id="@+id/tv_title_sports_history"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16pt"
                android:gravity="center"
                android:text="运动历史"
                android:textColor="#999"
                android:textSize="56pt"
                app:layout_constraintBottom_toBottomOf="@id/tv_steps"
                app:layout_constraintRight_toLeftOf="@+id/iv_sports_history" />

            <ImageView
                android:id="@+id/iv_sports_history"
                android:layout_width="36pt"
                android:layout_height="50pt"
                android:src="@drawable/bluetooth_goto_next"
                app:layout_constraintBottom_toBottomOf="@id/tv_title_sports_history"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_title_sports_history"
                android:layout_marginRight="40pt"
                android:layout_marginTop="4pt"/>

            <TextView
                android:id="@+id/tv_result_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="140pt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textStyle="bold"
                android:text="0"
                android:layout_marginLeft="40pt"
                android:layout_marginBottom="40pt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="步"
                android:textSize="56pt"
                android:textColor="#666"
                app:layout_constraintBottom_toBottomOf="@id/tv_result_steps"
                app:layout_constraintLeft_toRightOf="@id/tv_result_steps"
                android:layout_marginLeft="24pt"
                android:layout_marginBottom="20pt"
                />
            <TextView
                android:id="@+id/tv_result_kilometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="100pt"
                android:text="0"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="797pt"
                android:layout_marginBottom="50pt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公里"
                android:textSize="56pt"
                android:textColor="#666"
                app:layout_constraintBottom_toBottomOf="@id/tv_result_kilometer"
                app:layout_constraintLeft_toRightOf="@id/tv_result_kilometer"
                android:layout_marginLeft="24pt"
                android:layout_marginBottom="10pt"
                />
            <TextView
                android:id="@+id/tv_result_calorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="100pt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="1462pt"
                android:layout_marginBottom="50pt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="千卡"
                android:textSize="56pt"
                android:textColor="#666"
                app:layout_constraintBottom_toBottomOf="@id/tv_result_calorie"
                app:layout_constraintLeft_toRightOf="@id/tv_result_calorie"
                android:layout_marginLeft="24pt"
                android:layout_marginBottom="10pt"
                />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_rate"
            android:layout_width="0dp"
            android:layout_height="470pt"
            android:background="@drawable/bg_shadow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_steps"
            android:layout_marginLeft="30pt"
            android:layout_marginRight="30pt">
            <ImageView
                android:id="@+id/iv_rate"
                android:layout_width="90px"
                android:layout_height="90px"
                android:src="@drawable/bluetooth_heart_rate"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="40pt"
                android:layout_marginTop="50pt"/>
            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平均心率"
                android:textColor="#333"
                android:textSize="72pt"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/iv_rate"
                app:layout_constraintBottom_toBottomOf="@id/iv_rate"
                app:layout_constraintLeft_toRightOf="@id/iv_rate"
                android:layout_marginLeft="24pt"/>

            <TextView
                android:id="@+id/tv_title_rate_history"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16pt"
                android:gravity="center"
                android:text="心率历史"
                android:textColor="#999"
                android:textSize="56pt"
                app:layout_constraintBottom_toBottomOf="@id/tv_rate"
                app:layout_constraintRight_toLeftOf="@+id/iv_rate_history" />

            <ImageView
                android:id="@+id/iv_rate_history"
                android:layout_width="36pt"
                android:layout_height="50pt"
                android:src="@drawable/bluetooth_goto_next"
                app:layout_constraintBottom_toBottomOf="@id/tv_title_rate_history"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_title_rate_history"
                android:layout_marginRight="40pt"
                android:layout_marginTop="4pt"/>

            <TextView
                android:id="@+id/tv_result_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="140pt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textStyle="bold"
                android:text="0"
                android:layout_marginLeft="40pt"
                android:layout_marginBottom="40pt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="次/分"
                android:textSize="56pt"
                android:textColor="#666"
                app:layout_constraintBottom_toBottomOf="@id/tv_result_rate"
                app:layout_constraintLeft_toRightOf="@id/tv_result_rate"
                android:layout_marginLeft="24pt"
                android:layout_marginBottom="20pt"
                />
            <TextView
                android:id="@+id/tv_result_high_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="100pt"
                android:text="0"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="797pt"
                android:layout_marginBottom="50pt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="次/分"
                android:textSize="56pt"
                android:textColor="#666"
                app:layout_constraintBottom_toBottomOf="@id/tv_result_high_rate"
                app:layout_constraintLeft_toRightOf="@id/tv_result_high_rate"
                android:layout_marginLeft="24pt"
                android:layout_marginBottom="10pt"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最高心率"
                android:textSize="56pt"
                android:textColor="#666"
                app:layout_constraintLeft_toLeftOf="@id/tv_result_high_rate"
                app:layout_constraintBottom_toTopOf="@id/tv_result_high_rate"/>
            <TextView
                android:id="@+id/tv_result_low_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="100pt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="1462pt"
                android:layout_marginBottom="50pt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="次/分"
                android:textSize="56pt"
                android:textColor="#666"
                app:layout_constraintBottom_toBottomOf="@id/tv_result_low_rate"
                app:layout_constraintLeft_toRightOf="@id/tv_result_low_rate"
                android:layout_marginLeft="24pt"
                android:layout_marginBottom="10pt"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最低心率"
                android:textSize="56pt"
                android:textColor="#666"
                app:layout_constraintLeft_toLeftOf="@id/tv_result_low_rate"
                app:layout_constraintBottom_toTopOf="@id/tv_result_low_rate"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="470pt"
            android:background="@drawable/bg_shadow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_rate"
            android:layout_marginLeft="30pt"
            android:layout_marginRight="30pt">
            <ImageView
                android:id="@+id/iv_sleep"
                android:layout_width="90px"
                android:layout_height="90px"
                android:src="@drawable/bluetooth_sleeps"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="40pt"
                android:layout_marginTop="50pt"/>
            <TextView
                android:id="@+id/tv_sleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="睡眠    "
                android:textColor="#333"
                android:textSize="72pt"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/iv_sleep"
                app:layout_constraintBottom_toBottomOf="@id/iv_sleep"
                app:layout_constraintLeft_toRightOf="@id/iv_sleep"
                android:layout_marginLeft="24pt"/>

            <TextView
                android:id="@+id/tv_title_sleep_history"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16pt"
                android:gravity="center"
                android:text="睡眠历史"
                android:textColor="#999"
                android:textSize="56pt"
                app:layout_constraintBottom_toBottomOf="@id/tv_sleep"
                app:layout_constraintRight_toLeftOf="@+id/iv_sleep_history" />

            <ImageView
                android:id="@+id/iv_sleep_history"
                android:layout_width="36pt"
                android:layout_height="50pt"
                android:src="@drawable/bluetooth_goto_next"
                app:layout_constraintBottom_toBottomOf="@id/tv_title_sleep_history"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_title_sleep_history"
                android:layout_marginRight="40pt"
                android:layout_marginTop="4pt"/>

            <TextView
                android:id="@+id/tv_result_shallow_sleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="100pt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textStyle="bold"
                android:text="0"
                android:layout_marginLeft="40pt"
                android:layout_marginBottom="40pt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小时"
                android:textSize="56pt"
                android:textColor="#666"
                app:layout_constraintBottom_toBottomOf="@id/tv_result_shallow_sleep"
                app:layout_constraintLeft_toRightOf="@id/tv_result_shallow_sleep"
                android:layout_marginLeft="24pt"
                android:layout_marginBottom="20pt"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浅睡时间"
                android:textSize="56pt"
                android:textColor="#666"
                app:layout_constraintLeft_toLeftOf="@id/tv_result_shallow_sleep"
                app:layout_constraintBottom_toTopOf="@id/tv_result_shallow_sleep"/>
            <TextView
                android:id="@+id/tv_result_deep_sleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="100pt"
                android:text="0"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="797pt"
                android:layout_marginBottom="50pt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小时"
                android:textSize="56pt"
                android:textColor="#666"
                app:layout_constraintBottom_toBottomOf="@id/tv_result_deep_sleep"
                app:layout_constraintLeft_toRightOf="@id/tv_result_deep_sleep"
                android:layout_marginLeft="24pt"
                android:layout_marginBottom="10pt"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="深睡时间"
                android:textSize="56pt"
                android:textColor="#666"
                app:layout_constraintLeft_toLeftOf="@id/tv_result_deep_sleep"
                app:layout_constraintBottom_toTopOf="@id/tv_result_deep_sleep"/>
            <TextView
                android:id="@+id/tv_result_awake_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="100pt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="1462pt"
                android:layout_marginBottom="50pt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="次"
                android:textSize="56pt"
                android:textColor="#666"
                app:layout_constraintBottom_toBottomOf="@id/tv_result_awake_times"
                app:layout_constraintLeft_toRightOf="@id/tv_result_awake_times"
                android:layout_marginLeft="24pt"
                android:layout_marginBottom="10pt"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清醒次数"
                android:textSize="56pt"
                android:textColor="#666"
                app:layout_constraintLeft_toLeftOf="@id/tv_result_awake_times"
                app:layout_constraintBottom_toTopOf="@id/tv_result_awake_times"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</ScrollView>