<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择您要投屏的设备"
            android:textColor="#999"
            android:textSize="48pt"
            android:layout_marginLeft="60pt"
            android:layout_marginTop="40pt"
            android:layout_marginBottom="40pt"/>
        <ImageView
            android:id="@+id/iv_refresh"
            android:layout_width="56pt"
            android:layout_height="56pt"
            android:src="@drawable/hy_refresh_img"
            android:layout_marginLeft="24pt"/>
    </LinearLayout>
    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="#bbb"
        android:layout_below="@id/ll_title"/>
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_1"
        android:layout_above="@+id/view_2">

    </ListView>
    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="#bbb"
        android:layout_above="@+id/tv_cancle"/>
    <TextView
        android:id="@+id/tv_cancle"
        android:layout_width="match_parent"
        android:layout_height="136pt"
        android:text="取消"
        android:textSize="56pt"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#3F86FC"
        android:gravity="center"

        />
</RelativeLayout>