<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.han.referralproject.qianming.SignatureActivity">

    <TextView
        android:id="@+id/tv_signatrue_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60pt"
        android:layout_marginTop="62pt"
        android:text="请在下方虚线框内签上你的姓名："
        android:textColor="#ff333333"
        android:textSize="56pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_signatrue_cancel"
        android:layout_width="320pt"
        android:layout_height="100pt"
        android:layout_marginEnd="24dp"
        android:background="@drawable/shape_rectangle_cancel"
        android:gravity="center"
        android:text="重写"
        android:textColor="#ff3f86fc"
        android:textSize="56pt"
        app:layout_constraintBottom_toBottomOf="@+id/tv_signatrue_confirm"
        app:layout_constraintEnd_toStartOf="@+id/tv_signatrue_confirm"
        app:layout_constraintTop_toTopOf="@+id/tv_signatrue_confirm" />

    <TextView
        android:id="@+id/tv_signatrue_confirm"
        android:layout_width="320pt"
        android:layout_height="100pt"
        android:layout_marginEnd="60pt"
        android:layout_marginTop="40pt"
        android:background="@drawable/shape_rectangle_next_btn"
        android:gravity="center"
        android:text="确认"
        android:textColor="#fff"
        android:textSize="56pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="1800pt"
        android:layout_height="832pt"
        android:layout_marginTop="180pt"
        android:background="@drawable/bg_signatrue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.han.referralproject.qianming.wrap.PainterView
            android:id="@+id/signature"
            android:layout_width="1798pt"
            android:layout_height="830pt"
            android:background="#f5f5f5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
