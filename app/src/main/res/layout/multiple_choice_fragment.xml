<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="841px"
        android:layout_height="770px"
        android:background="@drawable/ic_fragment_notice_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="59px"
        android:layout_marginTop="100px"
        android:text="1.是否有以下症状? (1/4)"
        android:textColor="#333333"
        android:textSize="64px"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tip_content"
        android:layout_width="1200px"
        android:layout_height="wrap_content"
        android:layout_marginTop="36px"
        android:text="您好，根据系统中显示的3次数据判定，您血压偏低，现系统正为您生成预防高血压方案。"
        android:textColor="#ff999999"
        android:textSize="56px"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100px"
        android:background="@drawable/bg_notice_btn"
        android:paddingBottom="22px"
        android:paddingLeft="38px"
        android:paddingRight="38px"
        android:paddingTop="22px"
        android:text="下一步"
        android:textColor="#FFFFFF"
        android:textSize="48px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_tip_content"
        tools:ignore="MissingConstraints" />

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="59px"
        android:layout_marginTop="72px"
        android:columnWidth="432px"
        android:numColumns="3"
        android:stretchMode="none"
        android:verticalSpacing="30px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tip_content"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>