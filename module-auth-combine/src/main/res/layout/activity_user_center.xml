<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="476pt"
    android:layout_marginTop="258pt"
    android:orientation="horizontal"
    android:paddingLeft="230pt"
    android:paddingRight="230pt">

    <RelativeLayout
        android:id="@+id/rl_inquiry_home_manage"
        android:layout_width="400pt"
        android:layout_height="476pt">

        <com.gcml.lib_widget.EclipseImageView
            android:id="@+id/iv_person_center"
            android:layout_width="380pt"
            android:layout_height="380pt"
            android:background="@drawable/img_user_info" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="个人信息"
            android:textColor="#ff333333"
            android:textSize="64pt" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_inquiry_home_file"
        android:layout_width="400pt"
        android:layout_height="476pt"
        android:layout_marginLeft="160pt">

        <com.gcml.lib_widget.EclipseImageView
            android:id="@+id/iv_health_record"
            android:layout_width="380pt"
            android:layout_height="380pt"
            android:background="@drawable/img_detect_history" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="健康数据"
            android:textColor="#ff333333"
            android:textSize="64pt" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_inquiry_home_home"
        android:layout_width="400pt"
        android:layout_height="476pt"
        android:layout_marginLeft="160pt">

        <com.gcml.lib_widget.EclipseImageView
            android:id="@+id/iv_health_bracelet"
            android:layout_width="380pt"
            android:layout_height="380pt"
            android:background="@drawable/img_bracelet" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="我的设备"
            android:textColor="#ff333333"
            android:textSize="64pt" />

    </RelativeLayout>
</LinearLayout>