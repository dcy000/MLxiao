<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/video_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/livemedia_content_background"/>
    <LinearLayout
        android:id="@+id/loadding_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">
        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:indicatorName="BallClipRotatePulseIndicator"
            app:indicatorColor="#fff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在连接..."
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/live_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/livemedia_back"
            android:layout_width="100pt"
            android:layout_height="100pt"
            android:clickable="true"
            android:src="@drawable/livemedia_cancel_video"
            android:layout_marginLeft="100pt"
            android:layout_marginTop="100pt"/>
        <TextView
            android:id="@+id/live_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="视频"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:id="@+id/connectTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="60pt"
            android:layout_toLeftOf="@+id/startVoice"
            android:layout_marginRight="40pt"
            android:clickable="true">
            <ImageView
                android:layout_width="160pt"
                android:layout_height="160pt"
                android:src="@drawable/hy_connect_tv_set"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投屏"
                android:textSize="48pt"
                android:textColor="@color/white"
                android:layout_marginTop="16pt"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/startVoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="60pt"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60pt"
            android:clickable="true">
            <ImageView
                android:layout_width="160pt"
                android:layout_height="160pt"
                android:src="@drawable/hy_start_speak_set"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="唤醒"
                android:textSize="48pt"
                android:textColor="@color/white"
                android:layout_marginTop="16pt"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/live_control2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/iv_btn_last"
            android:layout_width="84pt"
            android:layout_height="92pt"
            android:src="@drawable/hy_btn_last_set"
            android:layout_marginLeft="100pt"
            android:layout_marginBottom="80pt"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/iv_btn_next"
            android:layout_width="84pt"
            android:layout_height="92pt"
            android:src="@drawable/hy_btn_next_set"
            android:layout_toRightOf="@id/iv_btn_last"
            android:layout_marginLeft="64pt"
            android:clickable="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_onplaying_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#010101"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备"
            android:textSize="72pt"
            android:textColor="@color/white"
            android:layout_marginTop="28pt"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hy_dark_default_tv"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/tv_current_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在连接设备..."
            android:textColor="#fff"
            android:textSize="56pt"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/btn_cancel_cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="56pt"
            android:text="退出"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="144pt"
            android:background="@drawable/hy_btn_tv_cancel_set"
            android:paddingLeft="124pt"
            android:paddingRight="124pt"
            android:paddingTop="32pt"
            android:paddingBottom="32pt"
            android:clickable="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/view_voice"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#33c776"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>
