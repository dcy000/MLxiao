<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="1200pt"
        android:layout_height="800pt"
        android:background="@drawable/common_bg_clear_reset_dialog">

        <ImageView
            android:layout_width="80pt"
            android:id="@+id/iv_close"
            android:layout_height="80pt"
            android:layout_gravity="right|top"
            android:layout_marginTop="32pt"
            android:layout_marginRight="32pt"
            android:src="@drawable/common_ic_clear" />

        <LinearLayout
            android:layout_width="1200pt"
            android:layout_height="800pt"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="101pt"
                android:text="验证手机"
                android:textColor="#ff333333"
                android:textSize="64pt" />

            <RelativeLayout
                android:layout_width="800pt"
                android:layout_height="120pt"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="72pt"
                android:background="@drawable/common_bg_code">

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="800pt"
                    android:layout_height="132pt"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingLeft="36pt"
                    android:textColor="#ff333333"
                    android:textColorHint="#bbb"
                    android:textSize="50pt" />

                <TextView
                    android:id="@+id/tv_send_code"
                    android:layout_width="250pt"
                    android:layout_height="100pt"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10pt"
                    android:background="@drawable/common_bg_btn_86b2ff"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="发送验证码"
                    android:textColor="#ffffffff"
                    android:textSize="40pt" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="800pt"
                android:layout_height="100pt"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="64pt"
                android:background="@drawable/common_bg_next_btn"
                android:gravity="center"
                android:text="下一步"
                android:textColor="#fff"
                android:textSize="50pt" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="799pt"
                android:layout_height="144pt"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32pt"
                android:gravity="center"
                android:text="请输入手机158****1914收到的验证码 验证完成后即可修改头像"
                android:textColor="#ff999999"
                android:textSize="48pt" />

        </LinearLayout>
    </FrameLayout>


</LinearLayout>