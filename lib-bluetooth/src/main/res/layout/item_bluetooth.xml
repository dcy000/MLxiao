<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bind_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth Name"
        android:textColor="#333"
        android:textSize="26pt" />

    <TextView
        android:id="@+id/bind_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:text="69:9A:E2:51:12:B5"
        android:textColor="#999"
        android:textSize="24pt"
        app:layout_constraintTop_toBottomOf="@id/bind_name" />

    <TextView
        android:id="@+id/bind_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20pt"
        android:text="(血氧仪·超思)"
        android:textColor="#333"
        android:textSize="40pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bind_mac"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="信号强度：-24"
        android:textColor="#999"
        android:textSize="24pt"
        app:layout_constraintRight_toLeftOf="@+id/isBind"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="20pt"
        />
    <TextView
        android:id="@+id/isBind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未绑定"
        android:textSize="28pt"
        android:textColor="#ef972c"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="30pt"/>
</android.support.constraint.ConstraintLayout>