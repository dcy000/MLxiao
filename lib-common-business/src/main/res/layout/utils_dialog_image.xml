    <LinearLayout
        android:layout_width="1080pt"
        android:layout_height="1080pt"
        android:background="@drawable/utils_shape_round_white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="800pt"
            android:layout_height="800pt" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20pt"
            android:gravity="center"
            android:maxHeight="660pt"
            tools:text="扫一扫，下载详细报告"
            android:textColor="#333333"
            android:textSize="56pt" />

