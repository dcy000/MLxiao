<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140pt"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageView
                android:layout_width="64pt"
                android:layout_height="64pt"
                android:src="@drawable/hy_service_time"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="60pt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签约时间：2017年2月13日"
                android:gravity="center_vertical"
                android:textColor="#999"
                android:textSize="48pt"
                android:layout_marginLeft="24pt"/>
            <TextView
                android:id="@+id/tv_see_agreements"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="查看签约协议"
                android:textSize="48pt"
                android:textColor="#3F86FC"
                android:gravity="end|center_vertical"
                android:paddingRight="60pt"
                android:clickable="true"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="32pt"
            android:background="#f5f5f5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="56pt"
                android:text="签约团队"
                android:textColor="#333"
                android:layout_marginTop="40pt"
                android:layout_marginLeft="60pt"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="60pt"
                android:layout_marginTop="32pt"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="64pt"
                    android:layout_height="64pt"
                    android:src="@drawable/hy_service_team"/>
                <TextView
                    android:id="@+id/tv_service_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="48pt"
                    android:text="大安街道办事处铜鼓村家庭医生团队"
                    android:layout_marginLeft="24pt"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="60pt"
                android:layout_marginTop="24pt"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="64pt"
                    android:layout_height="64pt"
                    android:src="@drawable/hy_service_location"/>
                <TextView
                    android:id="@+id/tv_service_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40pt"
                    android:text="大安街道办事处铜鼓村家庭医生团队"
                    android:layout_marginLeft="24pt"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:background="#bbb"
                android:layout_marginTop="40pt"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_service_doctors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
