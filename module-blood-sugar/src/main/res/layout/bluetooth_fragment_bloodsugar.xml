<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl1"
        android:layout_width="976pt"
        android:layout_height="314pt"
        android:background="@drawable/bluetooth_bg_measure_corner"
        app:layout_constraintBottom_toTopOf="@+id/cl2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32pt"
            android:text="空腹"
            android:textColor="#333"
            android:textSize="56pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28pt"
            android:text="&lt;3.9"
            android:textColor="#FF3030"
            android:textSize="64pt"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/title1_2"
            app:layout_constraintTop_toBottomOf="@id/title1" />

        <TextView
            android:id="@+id/title1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28pt"
            android:text="3.9~6.1"
            android:textColor="#28DA6B"
            android:textSize="64pt"
            app:layout_constraintLeft_toRightOf="@id/title1_1"
            app:layout_constraintRight_toLeftOf="@+id/title1_3"
            app:layout_constraintTop_toBottomOf="@id/title1" />

        <TextView
            android:id="@+id/title1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28pt"
            android:text="&gt;6.1"
            android:textColor="#FF3030"
            android:textSize="64pt"
            app:layout_constraintLeft_toRightOf="@id/title1_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32pt"
            android:layout_marginLeft="70pt"
            android:text="低血糖"
            android:textColor="#333"
            android:textSize="48pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32pt"
            android:text="正常"
            android:textColor="#333"
            android:textSize="48pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/title1_2"
            app:layout_constraintRight_toRightOf="@id/title1_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32pt"
            android:layout_marginRight="70pt"
            android:text="高血糖"
            android:textColor="#333"
            android:textSize="48pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl2"
        android:layout_width="976pt"
        android:layout_height="314pt"
        android:layout_marginTop="32pt"
        android:background="@drawable/bluetooth_bg_measure_corner"
        app:layout_constraintBottom_toTopOf="@+id/cl3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl1">

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32pt"
            android:text="餐后两小时"
            android:textColor="#333"
            android:textSize="56pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28pt"
            android:text="&lt;3.9"
            android:textColor="#FF3030"
            android:textSize="64pt"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/title2_2"
            app:layout_constraintTop_toBottomOf="@id/title2" />

        <TextView
            android:id="@+id/title2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28pt"
            android:text="3.9~7.8"
            android:textColor="#28DA6B"
            android:textSize="64pt"
            app:layout_constraintLeft_toRightOf="@id/title2_1"
            app:layout_constraintRight_toLeftOf="@+id/title2_3"
            app:layout_constraintTop_toBottomOf="@id/title2" />

        <TextView
            android:id="@+id/title2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28pt"
            android:text="&gt;7.8"
            android:textColor="#FF3030"
            android:textSize="64pt"
            app:layout_constraintLeft_toRightOf="@id/title2_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32pt"
            android:layout_marginLeft="70pt"
            android:text="低血糖"
            android:textColor="#333"
            android:textSize="48pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32pt"
            android:text="正常"
            android:textColor="#333"
            android:textSize="48pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/title2_2"
            app:layout_constraintRight_toRightOf="@id/title2_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32pt"
            android:layout_marginRight="70pt"
            android:text="高血糖"
            android:textColor="#333"
            android:textSize="48pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl3"
        android:layout_width="976pt"
        android:layout_height="314pt"
        android:layout_marginTop="32pt"
        android:background="@drawable/bluetooth_bg_measure_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl2">

        <TextView
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32pt"
            android:text="随机血糖"
            android:textColor="#333"
            android:textSize="56pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28pt"
            android:text="&lt;3.9"
            android:textColor="#FF3030"
            android:textSize="64pt"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/title3_2"
            app:layout_constraintTop_toBottomOf="@id/title3" />

        <TextView
            android:id="@+id/title3_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28pt"
            android:text="3.9~11.1"
            android:textColor="#28DA6B"
            android:textSize="64pt"
            app:layout_constraintLeft_toRightOf="@id/title3_1"
            app:layout_constraintRight_toLeftOf="@+id/title3_3"
            app:layout_constraintTop_toBottomOf="@id/title3" />

        <TextView
            android:id="@+id/title3_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28pt"
            android:text="&gt;11.1"
            android:textColor="#FF3030"
            android:textSize="64pt"
            app:layout_constraintLeft_toRightOf="@id/title3_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32pt"
            android:layout_marginLeft="70pt"
            android:text="低血糖"
            android:textColor="#333"
            android:textSize="48pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32pt"
            android:text="正常"
            android:textColor="#333"
            android:textSize="48pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/title3_2"
            app:layout_constraintRight_toRightOf="@id/title3_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32pt"
            android:layout_marginRight="70pt"
            android:text="高血糖"
            android:textColor="#333"
            android:textSize="48pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>
    <View
        android:layout_width="880pt"
        android:layout_height="match_parent"
        android:background="#ffffff" />
    <include
        android:id="@+id/bottom_btn"
        layout="@layout/bluetooth_layout_two_button"
        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_btn"
        app:layout_constraintLeft_toLeftOf="@id/bottom_btn"
        app:layout_constraintRight_toRightOf="@id/bottom_btn">
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="402pt"
            android:layout_height="174pt"
            android:background="@drawable/bluetooth_celiang_shape"
            android:gravity="center"
            android:text="0.00"
            android:textColor="#333"
            android:textSize="120pt"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="血糖"
            android:textColor="#333"
            android:textSize="88pt"
            app:layout_constraintRight_toLeftOf="@id/tv_result"
            app:layout_constraintTop_toTopOf="@id/tv_result"
            app:layout_constraintBottom_toBottomOf="@id/tv_result"
            android:layout_marginRight="48pt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40pt"
            android:textColor="#999"
            android:text="(mmol/L)"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintLeft_toLeftOf="@id/tv_title"
            app:layout_constraintRight_toRightOf="@id/tv_title"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>