<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context="com.example.han.referralproject.com.gcml.module_doctor_advisory.ui.DoctorAskGuideActivity">

    <LinearLayout
        android:id="@+id/ll_call_family"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ll_qianyue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginLeft="40dp">

        <com.gcml.lib_widget.EclipseImageView
            android:id="@+id/call_family"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/qianyue_call_family"
            android:clickable="true"
            android:gravity="center"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="联系家人"
            android:textColor="#333333"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_qianyue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ll_call_family"
        app:layout_constraintRight_toLeftOf="@+id/ll_zaixian"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/doctor_yuyue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/qianyue_doc_set"
            android:clickable="true"
            android:gravity="center"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="我的健康顾问"
            android:textColor="#333333"
            android:textSize="36sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_zaixian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ll_qianyue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="40dp">

        <ImageView
            android:id="@+id/doctor_zaixian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/online_doc_set"
            android:clickable="true"
            android:gravity="center"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="在线健康顾问"
            android:textColor="#333333"
            android:textSize="36sp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
