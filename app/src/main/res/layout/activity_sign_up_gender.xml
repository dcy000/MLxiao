<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medlink.danbogh.register.SignUp2GenderActivity">

    <TextView

        android:id="@+id/tv_sign_up_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90pt"
        android:gravity="center"
        android:text="目前是否怀孕"
        android:textColor="#FF333333"
        android:textSize="72pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_sign_up_man"
        android:layout_width="512pt"
        android:layout_height="512pt"
        android:layout_marginStart="344pt"
        android:layout_marginTop="54pt"
        android:src="@drawable/ic_huaiyun_not"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_gender" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24pt"
        android:text="否"
        android:textColor="#FF666666"
        android:textSize="72pt"
        app:layout_constraintBottom_toBottomOf="@+id/iv_rb_sign_up_man"
        app:layout_constraintStart_toEndOf="@+id/iv_rb_sign_up_man"
        app:layout_constraintTop_toTopOf="@+id/iv_rb_sign_up_man" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24pt"
        android:text="是"
        android:textColor="#FF666666"
        android:textSize="72pt"
        app:layout_constraintBottom_toBottomOf="@+id/iv_rb_sign_up_woman"
        app:layout_constraintStart_toEndOf="@+id/iv_rb_sign_up_woman"
        app:layout_constraintTop_toTopOf="@+id/iv_rb_sign_up_woman" />

    <ImageView
        android:clickable="true"
        android:id="@+id/iv_sign_up_woman"
        android:layout_width="512pt"
        android:layout_height="512pt"
        android:layout_marginStart="208pt"
        android:src="@drawable/ic_huaiyun"
        app:layout_constraintBottom_toBottomOf="@+id/iv_sign_up_man"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/iv_sign_up_man"
        app:layout_constraintTop_toTopOf="@+id/iv_sign_up_man" />

    <ImageView
        android:id="@+id/iv_rb_sign_up_man"
        android:layout_width="60pt"
        android:layout_height="60pt"
        android:layout_marginStart="522pt"
        android:layout_marginTop="53pt"
        android:src="@drawable/bg_huaiyun_set"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_sign_up_man" />

    <ImageView
        android:id="@+id/iv_rb_sign_up_woman"
        android:layout_width="60pt"
        android:layout_height="60pt"
        android:layout_marginStart="563pt"
        android:layout_marginTop="14dp"
        android:src="@drawable/bg_huaiyun_set"
        app:layout_constraintBottom_toBottomOf="@+id/iv_rb_sign_up_man"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/iv_sign_up_woman" />

    <include layout="@layout/include_sign_up_tab"
        android:visibility="gone"
        />

    <include layout="@layout/include_sign_up_nav"/>
</android.support.constraint.ConstraintLayout>
