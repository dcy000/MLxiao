<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/item_risk">
    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="64pt"
        android:textColor="#333"
        android:text="1.你的父母兄弟、兄弟姐妹是够有高血压？"
        android:layout_marginTop="56pt"
        android:layout_marginLeft="60pt"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="60pt"
        >
        <RadioButton
            android:id="@+id/answer_true"
            android:layout_width="450pt"
            android:layout_height="wrap_content"
            android:text="是"
            android:textSize="56pt"
            android:textColor="#666"
            android:button="@null"
            android:paddingLeft="30pt"
            android:paddingTop="48pt"
            android:paddingBottom="40pt"
            android:gravity="center_vertical"
            android:drawablePadding="30pt"
            android:drawableLeft="@drawable/radiobutton_set"
            />
        <RadioButton
            android:id="@+id/answer_false"
            android:layout_width="450pt"
            android:layout_height="wrap_content"
            android:text="否"
            android:layout_marginLeft="50pt"
            android:textSize="56pt"
            android:textColor="#666"
            android:button="@null"
            android:drawableLeft="@drawable/radiobutton_set"
            android:paddingLeft="30pt"
            android:paddingTop="48pt"
            android:paddingBottom="40pt"
            android:gravity="center_vertical"
            android:drawablePadding="30pt"/>
    </RadioGroup>
</LinearLayout>