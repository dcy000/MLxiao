<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/config_color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/config_color_appthema">

        <RelativeLayout
            android:id="@+id/rl_family_left"
            android:layout_width="188dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_family_left"
                android:layout_width="22dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/common_btn_back"/>

            <TextView
                android:id="@+id/tv_family_left"
                style="@style/text_white_32"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_family_left"
                android:gravity="center_vertical"
                android:maxLength="2"
                android:singleLine="true"
                android:text="返回"
                android:textColor="@color/common_text_white" />

        </RelativeLayout>

        <RadioGroup
            android:id="@+id/rg_family"
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_family_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:checked="true"
                android:text="家人列表"
                android:textSize="32sp"
                android:textColor="@drawable/selector_redio_text"
                android:background="@drawable/selector_redio_left"/>

            <RadioButton
                android:id="@+id/rb_family_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:text="好友列表"
                android:textSize="32dp"
                android:textColor="@drawable/selector_redio_text"
                android:background="@drawable/selector_redio_right"/>

        </RadioGroup>

        <RelativeLayout
            android:id="@+id/rl_family_right"
            android:layout_width="188dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_family_right"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:src="@drawable/btn_family_more"/>

        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_family"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>
