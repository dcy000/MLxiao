<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="184dp"
        android:layout_height="169dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="34dp"
        android:background="#555"
        app:layout_constraintEnd_toEndOf="@+id/iv_qianyue"
        app:layout_constraintStart_toStartOf="@+id/iv_qianyue"
        app:layout_constraintTop_toBottomOf="@+id/iv_qianyue" />

    <ImageView
        android:id="@+id/iv_qianyue"
        android:layout_width="184dp"
        android:layout_height="169dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="30dp"
        android:background="#333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/celianglishi"
        android:layout_width="600dp"
        android:layout_height="94dp"
        android:layout_marginBottom="31dp"
        android:layout_marginTop="25dp"
        android:background="#966"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_qianyue"
        app:layout_constraintTop_toBottomOf="@+id/iv_head" />

    <ImageView
        android:id="@+id/tijian"
        android:layout_width="356dp"
        android:layout_height="374dp"
        android:layout_marginStart="57dp"
        android:background="#166"
        app:layout_constraintStart_toEndOf="@+id/iv_head"
        app:layout_constraintTop_toTopOf="@+id/iv_qianyue" />

    <ImageView
        android:id="@+id/zhengzhuangzichan"
        android:layout_width="199dp"
        android:layout_height="169dp"
        android:layout_marginEnd="61dp"
        android:layout_marginStart="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_qianyue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tijian"
        app:layout_constraintTop_toTopOf="@+id/tijian"
        app:srcCompat="@drawable/__leak_canary_icon" />

    <ImageView
        android:id="@+id/yishengjianyi"
        android:layout_width="200dp"
        android:layout_height="178dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toTopOf="@+id/jiankangketang"
        app:layout_constraintEnd_toEndOf="@+id/zhengzhuangzichan"
        app:layout_constraintStart_toStartOf="@+id/zhengzhuangzichan"
        app:layout_constraintTop_toTopOf="@+id/iv_head"
        app:srcCompat="@drawable/abdomen_selected" />

    <ImageView
        android:id="@+id/jiankangketang"
        android:layout_width="203dp"
        android:layout_height="93dp"
        android:layout_marginEnd="57dp"
        android:layout_marginStart="43dp"
        android:background="#0ff"
        app:layout_constraintBottom_toBottomOf="@+id/celianglishi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/celianglishi"
        app:layout_constraintTop_toTopOf="@+id/celianglishi" />

</android.support.constraint.ConstraintLayout>