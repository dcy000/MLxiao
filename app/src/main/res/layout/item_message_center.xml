<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:clickable="true">
    <TextView
        android:id="@+id/doctor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:textSize="64pt"
        android:text="陈医生"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="48pt"
        android:layout_marginLeft="48pt"
        />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5分钟"
        android:textSize="48pt"
        android:textColor="#999"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64pt"
        android:layout_marginRight="48pt"/>
    <TextView
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/doctor_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="48pt"
        android:layout_marginRight="48pt"
        android:layout_marginBottom="48pt"
        android:layout_marginTop="32pt"
        android:textColor="#999"
        android:textSize="56pt"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="你好，你的情况目前建议你应该积极治疗，建议你遵循医生的意见，及时治疗，如需换肝，医生会跟你说明..."
        />
</android.support.constraint.ConstraintLayout>