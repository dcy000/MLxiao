<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.gcml.lib_widget.CircleImageView
        android:id="@+id/swtich"
        android:layout_width="300pt"
        android:layout_height="300pt"
        android:background="@drawable/sel_switch"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="400pt"
        />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3cfd2e"
        android:textSize="60pt"
        app:layout_constraintTop_toBottomOf="@id/swtich"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40pt"
        android:layout_marginTop="60pt"/>
    <VideoView
        android:id="@+id/video"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/swtich"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>