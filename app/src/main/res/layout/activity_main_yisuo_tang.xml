<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ll_anim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_anim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_battery"
        android:layout_width="50pt"
        android:layout_height="25pt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5pt"
        android:layout_marginTop="5pt"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/person_info"
        android:layout_width="594pt"
        android:layout_height="328pt"
        android:layout_marginStart="45pt"
        android:layout_marginTop="120pt"
        android:background="@drawable/ic_person_info_set"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/call_family"
        android:layout_width="594pt"
        android:layout_height="328pt"
        android:layout_marginTop="24pt"
        app:layout_constraintStart_toStartOf="@+id/person_info"
        app:layout_constraintTop_toBottomOf="@+id/yule_center"
        android:background="@drawable/ic_call_family_set" />

    <ImageView
        android:id="@+id/yule_center"
        android:layout_width="594pt"
        android:layout_height="328pt"
        android:layout_marginTop="24pt"
        android:background="@drawable/ic_yule_set"
        app:layout_constraintStart_toStartOf="@+id/person_info"
        app:layout_constraintTop_toBottomOf="@+id/person_info" />

    <ImageView
        android:id="@+id/health_test"
        android:layout_width="594pt"
        android:layout_height="504pt"
        android:layout_marginStart="24pt"
        app:layout_constraintBottom_toBottomOf="@+id/call_family"
        app:layout_constraintStart_toEndOf="@+id/call_family"
        android:background="@drawable/ic_health_test_set" />

    <ImageView
        android:id="@+id/robot_con"
        android:layout_width="594pt"
        android:layout_height="504pt"
        android:layout_marginStart="24pt"
        app:layout_constraintStart_toEndOf="@+id/person_info"
        app:layout_constraintTop_toTopOf="@+id/person_info"
        android:background="@drawable/ic_robot_set" />

    <ImageView
        android:id="@+id/health_class"
        android:layout_width="594pt"
        android:layout_height="504pt"
        android:layout_marginStart="24pt"
        app:layout_constraintBottom_toBottomOf="@+id/health_test"
        app:layout_constraintStart_toEndOf="@+id/health_test"
       android:background="@drawable/ic_shop_set" />

    <ImageView
        android:id="@+id/doctor_ask"
        android:layout_width="594pt"
        android:layout_height="504pt"
        android:layout_marginStart="24pt"
        app:layout_constraintEnd_toEndOf="@+id/health_class"
        app:layout_constraintStart_toEndOf="@+id/robot_con"
        app:layout_constraintTop_toTopOf="@+id/robot_con"
        android:background="@drawable/ic_doctor_ask_set" />

    <FrameLayout
        android:id="@+id/fl_status_bar"
        android:layout_width="0dp"
        android:layout_height="50pt"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="38pt"
        android:layout_marginStart="38pt"
        android:layout_marginTop="30pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>