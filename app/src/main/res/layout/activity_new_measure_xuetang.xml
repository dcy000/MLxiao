        android:layout_marginLeft="32pt"
        android:layout_marginBottom="32pt"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="56pt"
            android:textColor="#333"
            android:textStyle="bold"
            android:text="本周目标血糖"
            android:layout_marginTop="60pt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="饭前"
                android:textSize="40pt"
                android:textColor="#999"
                android:layout_marginLeft="40pt"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="50pt"
                android:text="120"
                android:textColor="#333"
                android:textSize="40pt" />
        </LinearLayout>
        <com.example.han.referralproject.view.progress.RxRoundProgressBar
            android:layout_width="match_parent"
            android:layout_height="32pt"
            app:rcBackgroundColor="#eee"
            app:rcProgressColor="#3F86FC"
            app:rcRadius="0pt"
            app:rcMax="100"
            app:rcProgress="0"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="17pt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="饭后1小时"
                android:textSize="40pt"
                android:textColor="#999"
                android:layout_marginLeft="40pt"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="50pt"
                android:text="120"
                android:textColor="#333"
                android:textSize="40pt" />
        </LinearLayout>
        <com.example.han.referralproject.view.progress.RxRoundProgressBar
            android:layout_width="match_parent"
            android:layout_height="32pt"
            app:rcBackgroundColor="#eee"
            app:rcProgressColor="#3F86FC"
            app:rcRadius="0pt"
            app:rcMax="100"
