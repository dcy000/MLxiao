<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/old_bg_home"
    tools:context="com.ml.edu.old.TheOldHomeActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/old_rv_items"
        android:layout_width="0dp"
        android:layout_height="340dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:id="@+id/old_iv_home_back"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="18dp"
        android:padding="30dp"
        android:src="@drawable/old_ic_home_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="64dp"
        android:layout_height="124dp"
        android:layout_marginBottom="93dp"
        android:layout_marginLeft="240dp"
        android:background="@drawable/old_ic_home_music_indicator"
        android:ems="1"
        android:gravity="center"
        android:text="收\n音\n机"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="64dp"
        android:layout_height="124dp"
        android:layout_marginBottom="93dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/old_ic_home_music_indicator"
        android:ems="1"
        android:gravity="center"
        android:text="音\n乐\n播\n放"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="155dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="320dp"
        android:background="@drawable/old_ic_home_video_indicator"
        android:ems="1"
        android:gravity="center"
        android:text="视\n频\n播\n放"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
