<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="140pt"
        android:layout_height="140pt"
        android:src="@drawable/hy_service_default_head"
        android:layout_marginLeft="60pt"
        android:layout_marginTop="40pt"
        android:layout_marginBottom="40pt"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/iv_head"
        android:layout_centerVertical="true"
        android:layout_marginLeft="32pt">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="56pt"
            android:textColor="#333"/>
        <TextView
            android:id="@+id/tv_prof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40pt"
            android:textColor="#bbb"
            android:text="职称"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_is_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预约家庭医生"
        android:textColor="#3F86FC"
        android:textSize="56pt"
        android:background="@drawable/hy_bg_is_sign"
        android:paddingLeft="24pt"
        android:paddingTop="20pt"
        android:paddingRight="24pt"
        android:paddingBottom="20pt"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="60pt"/>
</RelativeLayout>