<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/common_toolbar_bg">

    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/utils_toolbar_set"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="40dp">

        <ImageView
            android:id="@+id/iv_top_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/utils_icon_back" />

        <TextView
            android:id="@+id/tv_top_left"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_top_left"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_top_title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/tv_top_right"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="60dp"
        android:paddingRight="30dp"
        android:background="@drawable/utils_toolbar_set"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/iv_top_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/utils_toolbar_set"
        android:paddingLeft="60dp"
        android:paddingRight="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/utils_icon_home"
        android:visibility="visible" />
</RelativeLayout>
