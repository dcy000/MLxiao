<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1200pt"
    android:layout_height="658pt">

    <RelativeLayout
        android:layout_width="1200pt"
        android:layout_height="658pt"
        android:background="@drawable/shape_bg_account_info"
        android:gravity="center_horizontal"
        android:paddingLeft="200pt"
        android:paddingRight="200pt">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100pt"
            android:gravity="center"
            android:text="@string/business_perimission_dialog_title"
            android:textColor="#ff333333"
            android:textSize="64pt" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="120pt"
            android:layout_marginTop="236pt"
            android:background="@drawable/common_bg_input_gray"
            android:gravity="center_vertical"
            android:hint="@string/business_perimission_dialog_title"
            android:inputType="textPassword"
            android:paddingLeft="36pt"
            android:textColor="#ff333333"
            android:textColorHint="#ffbbbbbb"
            android:textSize="50pt" />

        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="match_parent"
            android:layout_height="120pt"
            android:layout_marginTop="428pt"
            android:background="@drawable/shape_rectangle_next_btn"
            android:gravity="center"
            android:text="@string/business_common_complete"
            android:textColor="#fff"
            android:textSize="50pt" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="80pt"
        android:layout_height="80pt"
        android:layout_gravity="right|top"
        android:layout_marginRight="32pt"
        android:layout_marginTop="32pt"
        android:background="@drawable/img_common_delete" />

</FrameLayout>