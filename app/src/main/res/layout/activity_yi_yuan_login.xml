<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.han.referralproject.yiyuan.activity.YiYuanLoginActivity">

    <ImageView
        android:id="@+id/login_idcard"
        android:layout_width="456pt"
        android:layout_height="288pt"
        android:src="@drawable/login_sfz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8pt"
        android:layout_marginTop="14dp"
        android:text="身份证登录"
        android:textColor="#ff333333"
        android:textSize="64pt"
        app:layout_constraintEnd_toEndOf="@+id/login_idcard"
        app:layout_constraintStart_toStartOf="@+id/login_idcard"
        app:layout_constraintTop_toBottomOf="@+id/login_idcard" />

    <ImageView
        android:id="@+id/iv_yiyuan_wifi"
        android:layout_width="90pt"
        android:layout_height="90pt"
        android:layout_marginEnd="60pt"
        android:layout_marginTop="19pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/yiyua_wifi_icon" />


</android.support.constraint.ConstraintLayout>
