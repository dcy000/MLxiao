<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.han.referralproject.measure.fragment.XueyangFragment">


    <ImageView
        android:id="@+id/iv_xueyang"
        android:layout_width="550dp"
        android:layout_height="180dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/video_xueyang"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



    <RelativeLayout
        android:id="@+id/rl_xueyang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rl_maibo"
        app:layout_constraintVertical_chainStyle="packed">

        <TextView
            android:id="@+id/test_xueyang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/xue_yang"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test_xueyang"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="@string/xue_yang1"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_xue_yang"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/test_xueyang"
            android:background="@drawable/celiang_shape"
            android:gravity="center"
            android:text="0.0"
            android:textSize="50sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_maibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout_xueyang"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_xueyang"
        app:layout_constraintBottom_toTopOf="@+id/ll_xueyang">

        <TextView
            android:id="@+id/test_maibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/maibo"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test_maibo"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="@string/maibo1"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tv_xueyang_pulse"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_marginLeft="90dp"
            android:layout_toRightOf="@+id/test_maibo"
            android:background="@drawable/celiang_shape"
            android:gravity="center"
            android:text="0.0"
            android:textSize="50sp" />


    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_xueyang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_maibo"
        android:layout_marginTop="100dp">


        <Button
            android:id="@+id/btn_history"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="@drawable/shape_phone"
            android:gravity="center"
            android:text="历史记录"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />


        <Button
            android:id="@+id/btn_video"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/shape_show"
            android:gravity="center"
            android:text="使用演示"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
