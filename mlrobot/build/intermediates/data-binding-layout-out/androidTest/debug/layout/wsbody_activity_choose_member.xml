<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

            

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.witspring.unitbody.ChooseMemberActivity" android:tag="layout/wsbody_activity_choose_member_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <include
            android:id="@+id/toolbar"
            layout="@layout/ws_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/wsbody_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@mipmap/wsbody_doctor_big" />

        <TextView
            android:id="@+id/wsbody_textview3"
            style="@style/ws_txt_main_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="20dp"
            android:text="请选择查诊人："
            app:layout_constraintStart_toEndOf="@+id/wsbody_imageview"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <com.nex3z.flowlayout.FlowLayout
            android:id="@+id/flowlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            app:flChildSpacing="32dp"
            app:flChildSpacingForLastRow="align"
            app:flRowSpacing="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/wsbody_imageview"
            app:layout_constraintTop_toBottomOf="@+id/wsbody_textview3" />

        <LinearLayout
            android:id="@+id/llOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/wsbody_imageview"
            app:layout_constraintTop_toBottomOf="@+id/flowlayout"
            android:onClick="llOther">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/ws_font_medium"
                android:textColor="@color/ws_main"
                android:text="若为其他人诊查，请点击这里 "/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="1dp"
                android:background="@color/ws_main"/>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
         