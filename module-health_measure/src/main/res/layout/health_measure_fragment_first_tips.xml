<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <ImageView
        android:id="@+id/ivGrayBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/health_measure_ic_gray_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="60pt"
        android:layout_marginTop="40pt"/>
    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="124pt"
        android:gravity="center"
        android:text="恭喜您完成问卷，下面让我们进行身体指标检测吧!"
        android:textSize="72pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#333333"/>

    <ImageView
        android:id="@+id/health_iv_robot"
        android:layout_width="766pt"
        android:layout_height="780pt"
        android:src="@drawable/health_measure_ic_robot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/health_measure_image_pattern_left"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="368pt"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/health_measure_image_pattern_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="121pt"/>

</android.support.constraint.ConstraintLayout>