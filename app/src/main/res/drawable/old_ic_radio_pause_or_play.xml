<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <selector>
            <item android:state_selected="true" android:drawable="@drawable/radio_pause_click"/>
            <item android:drawable="@drawable/radio_play_click"/>
        </selector>
    </item>
    <item android:state_pressed="false">
        <selector>
            <item android:state_selected="true" android:drawable="@drawable/radio_pause"/>
            <item android:drawable="@drawable/radio_play"/>
        </selector>
    </item>
</selector>