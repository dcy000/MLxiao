<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shadow">
    
    <ImageView
        android:id="@+id/iv_family_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="28dp"
        android:src="@drawable/common_ic_robot"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_family_icon"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_family_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="32sp"
            android:textColor="@color/config_color_base_3" />

        <TextView
            android:id="@+id/tv_family_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_family_name"
            android:background="@drawable/shape_family_tag"
            android:layout_marginTop="12dp"
            android:layout_centerVertical="true"
            android:text=""
            android:textSize="24sp"
            android:textColor="@color/config_color_appthema"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_family_phone"
        android:layout_width="70dp"
        android:layout_height="42dp"
        android:layout_margin="28dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_family_radio"/>

</RelativeLayout>