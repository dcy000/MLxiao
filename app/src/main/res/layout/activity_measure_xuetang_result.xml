<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="com.example.han.referralproject.measure.MeasureXuetangResultActivity">

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="594pt"
        android:layout_height="match_parent"
        android:layout_marginBottom="32pt"
        android:layout_marginLeft="32pt"
        android:layout_marginTop="32pt"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_measure_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28pt"
            android:text="周测量：20次"
            android:textColor="#333"
            android:textSize="56pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="32pt"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="偏高"
                android:textColor="#999"
                android:textSize="40pt" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_gao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="0次"
                android:textColor="#333"
                android:textSize="40pt" />
        </LinearLayout>

        <com.example.han.referralproject.view.progress.RxRoundProgressBar
            android:id="@+id/rpb_gao"
            android:layout_width="match_parent"
            android:layout_height="32pt"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="17pt"
            app:rcBackgroundColor="#eee"
            app:rcMax="100"
            app:rcProgress="0"
            app:rcProgressColor="#3F86FC"
            app:rcRadius="12pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="32pt"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正常"
                android:textColor="#999"
                android:textSize="40pt" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_zhengchang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="0次"
                android:textColor="#333"
                android:textSize="40pt" />
        </LinearLayout>

        <com.example.han.referralproject.view.progress.RxRoundProgressBar
            android:id="@+id/rpb_zhengchang"
            android:layout_width="match_parent"
            android:layout_height="32pt"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="17pt"
            app:rcBackgroundColor="#eee"
            app:rcMax="100"
            app:rcProgress="0"
            app:rcProgressColor="#3ACC61"
            app:rcRadius="12pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="32pt"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="偏低"
                android:textColor="#999"
                android:textSize="40pt" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_di"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="0次"
                android:textColor="#333"
                android:textSize="40pt" />
        </LinearLayout>

        <com.example.han.referralproject.view.progress.RxRoundProgressBar
            android:id="@+id/rpb_di"
            android:layout_width="match_parent"
            android:layout_height="32pt"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="17pt"
            app:rcBackgroundColor="#eee"
            app:rcMax="100"
            app:rcProgress="0"
            app:rcProgressColor="#3ACC61"
            app:rcRadius="12pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60pt"
            android:text="周平均血糖"
            android:textColor="#333"
            android:textSize="56pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="32pt"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空腹"
                android:textColor="#999"
                android:textSize="40pt" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="120"
                android:textColor="#333"
                android:textSize="40pt" />
        </LinearLayout>

        <com.example.han.referralproject.view.progress.RxRoundProgressBar
            android:id="@+id/rpb_empty"
            android:layout_width="match_parent"
            android:layout_height="32pt"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="17pt"
            app:rcBackgroundColor="#eee"
            app:rcMax="100"
            app:rcProgress="0"
            app:rcProgressColor="#3F86FC"
            app:rcRadius="12pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="32pt"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="饭后1小时"
                android:textColor="#999"
                android:textSize="40pt" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="80"
                android:textColor="#333"
                android:textSize="40pt" />
        </LinearLayout>

        <com.example.han.referralproject.view.progress.RxRoundProgressBar
            android:id="@+id/rpb_one"
            android:layout_width="match_parent"
            android:layout_height="32pt"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="17pt"
            app:rcBackgroundColor="#eee"
            app:rcMax="100"
            app:rcProgress="0"
            app:rcProgressColor="#3F86FC"
            app:rcRadius="12pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="32pt"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="饭后1小时"
                android:textColor="#999"
                android:textSize="40pt" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="80"
                android:textColor="#333"
                android:textSize="40pt" />
        </LinearLayout>

        <com.example.han.referralproject.view.progress.RxRoundProgressBar
            android:id="@+id/rpb_two"
            android:layout_width="match_parent"
            android:layout_height="32pt"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="17pt"
            app:rcBackgroundColor="#eee"
            app:rcMax="100"
            app:rcProgress="0"
            app:rcProgressColor="#3F86FC"
            app:rcRadius="12pt" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ll_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="32pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ll_left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_gaodi"
            android:layout_width="0pt"
            android:layout_height="358pt"
            android:layout_marginTop="32pt"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ll_fenshu"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40pt"
                android:layout_marginTop="36pt"
                android:text="本次测量结果"
                android:textColor="#666"
                android:textSize="40pt" />

            <TextView
                android:id="@+id/measure_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40pt"
                android:layout_marginTop="40pt"
                android:text="空腹"
                android:textColor="#333"
                android:textSize="56pt" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40pt"
                android:layout_marginTop="16pt"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currentXuetang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.12"
                    android:textColor="#3F86FC"
                    android:textSize="110pt" />

                <TextView
                    android:id="@+id/currentXuetang_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mmol/L"
                    android:textColor="#3F86FC"
                    android:textSize="56pt" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fenshu"
            android:layout_width="0pt"
            android:layout_height="358pt"
            android:layout_marginLeft="32pt"
            android:layout_marginRight="32pt"
            android:layout_marginTop="32pt"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintLeft_toRightOf="@id/ll_gaodi"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40pt"
                android:layout_marginTop="40pt"
                android:text="健康分数"
                android:textColor="#666"
                android:textSize="40pt" />

            <com.littlejie.circleprogress.WaveProgress
                android:id="@+id/wave_progress_bar"
                android:layout_width="273pt"
                android:layout_height="273pt"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="80pt"
                app:cp_bgCircleColor="#F1F5FF"
                app:cp_circleColor="#eee"
                app:cp_circleWidth="3pt"
                app:cp_darkWaveAnimTime="1000"
                app:cp_darkWaveColor="#B372A7FC"
                app:cp_lightWaveAnimTime="2000"
                app:cp_lightWaveColor="#B372A7FC"
                app:cp_lightWaveDirect="R2L"
                app:cp_lockCircle="true"
                app:cp_lockWave="false"
                app:cp_valueSize="105pt"
                app:cp_waveHeight="30pt"
                app:cp_waveNum="1" />
        </LinearLayout>
        <!--<View-->
        <!--android:id="@+id/line"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--app:layout_constraintTop_toBottomOf="@id/ll_gaodi"-->
        <!--android:background="#bbbbbb"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--android:layout_marginLeft="60pt"-->
        <!--android:layout_marginRight="60pt"-->
        <!--android:layout_marginTop="24pt"/>-->
        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="32pt"
            android:layout_marginRight="32pt"
            android:layout_marginTop="32pt"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_gaodi">

            <TextView
                android:id="@+id/tv_suggest_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40pt"
                android:text="健康建议"
                android:textColor="#333"
                android:textSize="56pt"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_suggest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60pt"
                android:layout_marginRight="60pt"
                android:layout_marginTop="32pt"
                android:lineSpacingMultiplier="1.2"
                android:textColor="#333"
                android:textSize="48pt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_suggest_title" />

            <TextView
                android:id="@+id/tv_something_advice"
                android:layout_width="280pt"
                android:layout_height="100pt"
                android:layout_marginBottom="40pt"
                android:background="@drawable/measure_result"
                android:clickable="true"
                android:gravity="center"
                android:text="风险评估"
                android:textColor="@color/white"
                android:textSize="48pt"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/health_knowledge" />

            <TextView
                android:id="@+id/health_knowledge"
                android:layout_width="280pt"
                android:layout_height="100pt"
                android:layout_marginLeft="190pt"
                android:background="@drawable/measure_result2"
                android:clickable="true"
                android:gravity="center"
                android:text="健康报告"
                android:textColor="@color/white"
                android:textSize="48pt"
                app:layout_constraintBottom_toBottomOf="@id/tv_something_advice"
                app:layout_constraintLeft_toRightOf="@id/tv_something_advice"
                app:layout_constraintRight_toRightOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
