<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/hy_iv_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/hy_head"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/hy_iv_head"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp">
        <TextView
            android:id="@+id/hy_tv_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textColor="#333"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/hy_tv_doctor_positon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="头衔"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/hy_tv_isMydoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预约家庭医生"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:textSize="14sp"
        android:textColor="#3672e9"/>
</RelativeLayout>