<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="WelcomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/xien_ic_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--<style name="XDialog" parent="@android:style/Theme.Dialog">-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!--<item name="android:colorBackgroundCacheHint">@null</item>-->
        <!--<item name="android:windowSoftInputMode">adjustPan</item>-->
        <!--<item name="android:windowIsFloating">true</item>-->
    <!--</style>-->

    <style name="VoiceDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>

        <item name="android:windowAnimationStyle">@style/voiceDialogAction</item>
    </style>

    <!-- voiceDialogAction进出动画 -->
    <style name="voiceDialogAction" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/action_voice_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/action_voice_dialog_out</item>
    </style>

    <style name="XDialog_pup" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="jiaohu">
        <item name="android:textColor">#b6b2b2</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <declare-styleable name="SignView">
        <attr name="lineColor" format="color" />
        <attr name="lineWidth" format="dimension" />
    </declare-styleable>
</resources>
