<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="841pt"
        android:layout_height="770pt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_fragment_notice_bg" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="59pt"
        android:layout_marginTop="100pt"
        android:text="1.是否有以下症状? (1/4)"
        android:textColor="#333333"
        android:textSize="64pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_tip_content"
        android:layout_width="1200pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="36pt"
        android:text="您好，根据系统中显示的3次数据判定，您血压偏低，现系统正为您生成预防高血压方案。"
        android:textColor="#ff999999"
        android:textSize="56pt"
        android:visibility="gone" />


    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_marginTop="220pt"
        android:columnWidth="432pt"
        android:numColumns="3"
        android:stretchMode="none"
        android:verticalSpacing="30pt" />

    <TextView
        android:gravity="center"
        android:id="@+id/tv_button"
        android:layout_width="320pt"
        android:layout_height="100pt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="100pt"
        android:layout_marginLeft="59pt"
        android:background="@drawable/bg_notice_btn"
        android:paddingBottom="22pt"
        android:paddingLeft="38pt"
        android:paddingRight="38pt"
        android:paddingTop="22pt"
        android:text="下一步"
        android:textColor="#FFFFFF"
        android:textSize="48pt" />

</RelativeLayout>