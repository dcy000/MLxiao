<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shadow">

    <RelativeLayout
        android:id="@+id/rl_total_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="22dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_task_result_left"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_total_title"/>

        <TextView
            android:id="@+id/tv_total_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/Overall_analysis"
            android:textSize="32sp"
            android:textColor="@color/task_color_base"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_task_result_right"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_total_title"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_total_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_task_result_line"
        android:layout_centerVertical="true"
        android:layout_below="@+id/rl_total_title"/>

    <LinearLayout
        android:id="@+id/ll_total_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_total_line"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Subjective_consciousness"
            android:textSize="28sp"
            android:textColor="@color/config_color_base_9"/>

        <TextView
            android:id="@+id/tv_total_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="28sp"
            android:textColor="@color/config_color_base_3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_total_content1"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Behavioral_attitude"
            android:textSize="28sp"
            android:textColor="@color/config_color_base_9"/>

        <TextView
            android:id="@+id/tv_total_content3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="28sp"
            android:textColor="@color/config_color_base_3"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_total_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iv_total_line"
        android:layout_marginRight="130dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Compliance_behavior"
            android:textSize="28sp"
            android:textColor="@color/config_color_base_9"/>

        <TextView
            android:id="@+id/tv_total_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="28sp"
            android:textColor="@color/config_color_base_3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_total_content2"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/ll_total_content2"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Perceptual_behavior"
            android:textSize="28sp"
            android:textColor="@color/config_color_base_9"/>

        <TextView
            android:id="@+id/tv_total_content4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="28sp"
            android:textColor="@color/config_color_base_3"/>

    </LinearLayout>

</RelativeLayout>