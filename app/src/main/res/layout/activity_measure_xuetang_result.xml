<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="com.example.han.referralproject.measure.MeasureXuetangResultActivity">
    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="594pt"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="32pt"
        android:layout_marginLeft="32pt"
        android:layout_marginBottom="32pt">
        <TextView
            android:id="@+id/tv_measure_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周测量：20次"
            android:textSize="56pt"
            android:textColor="#333"
            android:textStyle="bold"
            android:layout_marginTop="48pt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="32pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="偏高"
                android:textSize="40pt"
                android:textColor="#999"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_gao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="40pt"
                android:text="3次"
                android:layout_gravity="end"
                />
        </LinearLayout>

        <com.example.han.referralproject.view.progress.RxRoundProgressBar
            android:id="@+id/rpb_gao"
            android:layout_width="match_parent"
            android:layout_height="32pt"
            app:rcBackgroundColor="#eee"
            app:rcProgressColor="#3F86FC"
            app:rcRadius="12pt"
            app:rcMax="100"
            app:rcProgress="0"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="17pt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="32pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正常"
                android:textSize="40pt"
                android:textColor="#999"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_zhengchang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="15次"
                android:textColor="#333"
                android:textSize="40pt" />
        </LinearLayout>

        <com.example.han.referralproject.view.progress.RxRoundProgressBar
            android:id="@+id/rpb_zhengchang"
            android:layout_width="match_parent"
            android:layout_height="32pt"
            app:rcBackgroundColor="#eee"
            app:rcProgressColor="#3ACC61"
            app:rcRadius="12pt"
            app:rcMax="100"
            app:rcProgress="0"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="17pt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="32pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="偏低"
                android:textSize="40pt"
                android:textColor="#999"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_di"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="40pt"
                android:text="2次"
                android:layout_gravity="end"
                />
        </LinearLayout>

        <com.example.han.referralproject.view.progress.RxRoundProgressBar
            android:id="@+id/rpb_di"
            android:layout_width="match_parent"
            android:layout_height="32pt"
            app:rcBackgroundColor="#eee"
            app:rcProgressColor="#3ACC61"
            app:rcRadius="12pt"
            app:rcMax="100"
            app:rcProgress="0"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="17pt"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周平均血糖"
            android:textSize="56pt"
            android:textColor="#333"
            android:textStyle="bold"
            android:layout_marginTop="60pt"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="32pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空腹"
                android:textSize="40pt"
                android:textColor="#999"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="40pt"
                android:text="120"
                android:layout_gravity="end"
                />
        </LinearLayout>

        <com.example.han.referralproject.view.progress.RxRoundProgressBar
            android:id="@+id/rpb_empty"
            android:layout_width="match_parent"
            android:layout_height="32pt"
            app:rcBackgroundColor="#eee"
            app:rcProgressColor="#3F86FC"
            app:rcRadius="12pt"
            app:rcMax="100"
            app:rcProgress="0"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="17pt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="32pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="饭后1小时"
                android:textSize="40pt"
                android:textColor="#999"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="40pt"
                android:text="80"
                android:layout_gravity="end"
                />
        </LinearLayout>

        <com.example.han.referralproject.view.progress.RxRoundProgressBar
            android:id="@+id/rpb_one"
            android:layout_width="match_parent"
            android:layout_height="32pt"
            app:rcBackgroundColor="#eee"
            app:rcProgressColor="#3F86FC"
            app:rcRadius="12pt"
            app:rcMax="100"
            app:rcProgress="0"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="17pt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="32pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="饭后1小时"
                android:textSize="40pt"
                android:textColor="#999"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="40pt"
                android:text="80"
                android:layout_gravity="end"
                />
        </LinearLayout>

        <com.example.han.referralproject.view.progress.RxRoundProgressBar
            android:id="@+id/rpb_two"
            android:layout_width="match_parent"
            android:layout_height="32pt"
            app:rcBackgroundColor="#eee"
            app:rcProgressColor="#3F86FC"
            app:rcRadius="12pt"
            app:rcMax="100"
            app:rcProgress="0"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="17pt"
            />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ll_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/ll_left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="32pt"
        >
        <LinearLayout
            android:id="@+id/ll_gaodi"
            android:layout_width="0pt"
            android:layout_height="358pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ll_fenshu"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="32pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本次测量结果"
                android:textColor="#666"
                android:textSize="40pt"
                android:layout_marginTop="36pt"
                android:layout_marginLeft="40pt"/>
            <TextView
                android:id="@+id/measure_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="56pt"
                android:textColor="#333"
                android:text="空腹"
                android:layout_marginLeft="40pt"
                android:layout_marginTop="40pt"/>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginLeft="40pt"
               android:layout_marginTop="16pt">
               <TextView
                   android:id="@+id/currentXuetang"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="3.12"
                   android:textColor="#3F86FC"
                   android:textSize="110pt"/>
               <TextView
                   android:id="@+id/currentXuetang_unit"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="56pt"
                   android:textColor="#3F86FC"
                   android:text="mmol/L"/>
           </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_fenshu"
            android:layout_width="0pt"
            android:layout_height="358pt"
            app:layout_constraintLeft_toRightOf="@id/ll_gaodi"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:layout_marginLeft="32pt"
            android:background="@color/white"
            android:layout_marginTop="32pt"
            android:layout_marginRight="32pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康分数"
                android:textColor="#666"
                android:textSize="40pt"
                android:layout_marginTop="40pt"
                android:layout_marginLeft="40pt"/>
            <com.littlejie.circleprogress.WaveProgress
                android:id="@+id/wave_progress_bar"
                android:layout_width="273pt"
                android:layout_height="273pt"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="80pt"
                app:cp_darkWaveAnimTime="1000"
                app:cp_darkWaveColor="#B372A7FC"
                app:cp_lightWaveAnimTime="2000"
                app:cp_lightWaveColor="#B372A7FC"
                app:cp_lightWaveDirect="R2L"
                app:cp_lockWave="false"
                app:cp_valueSize="105pt"
                app:cp_waveHeight="30pt"
                app:cp_waveNum="1"
                app:cp_circleColor="#eee"
                app:cp_lockCircle="true"
                app:cp_bgCircleColor="#F1F5FF"
                app:cp_circleWidth="3pt"
                />
        </LinearLayout>
        <!--<View-->
            <!--android:id="@+id/line"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1px"-->
            <!--app:layout_constraintTop_toBottomOf="@id/ll_gaodi"-->
            <!--android:background="#bbbbbb"-->
            <!--app:layout_constraintLeft_toLeftOf="parent"-->
            <!--app:layout_constraintRight_toRightOf="parent"-->
            <!--android:layout_marginLeft="60pt"-->
            <!--android:layout_marginRight="60pt"-->
            <!--android:layout_marginTop="24pt"/>-->
        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_gaodi"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/white"
            android:layout_marginTop="32pt"
            android:layout_marginRight="32pt"
            android:layout_marginBottom="32pt">
            <TextView
                android:id="@+id/tv_suggest_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康建议"
                android:textSize="56pt"
                android:textColor="#333"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="40pt"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/tv_suggest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_suggest_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="#333"
                android:textSize="48pt"
                android:layout_marginLeft="60pt"
                android:layout_marginRight="60pt"
                android:layout_marginTop="32pt"
                android:text="主人，您血糖偏低，并有下降趋势，低血糖出现饥饿、头昏眼花、面色苍白、心慌手颤、出冷汗、虚弱无力等症状，低血糖还容易诱发心律失常，心绞痛、心肌梗死以及脑血管意外并发症，请持续测量，必要时及时联系医生。"
                android:lineSpacingMultiplier="1.2"/>
            <TextView
                android:id="@+id/tv_something_advice"
                android:layout_width="280pt"
                android:layout_height="100pt"
                android:background="@drawable/measure_result"
                android:text="风险评估"
                android:textColor="@color/white"
                android:textSize="48pt"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/health_knowledge"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:layout_marginBottom="40pt"
                android:clickable="true"/>
            <TextView
                android:id="@+id/health_knowledge"
                android:layout_width="280pt"
                android:layout_height="100pt"
                android:background="@drawable/measure_result2"
                android:text="健康报告"
                android:textColor="@color/white"
                android:textSize="48pt"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@id/tv_something_advice"
                app:layout_constraintLeft_toRightOf="@id/tv_something_advice"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="190pt"
                android:clickable="true"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
