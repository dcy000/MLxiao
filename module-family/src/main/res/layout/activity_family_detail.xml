<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <com.gcml.common.widget.toolbar.TranslucentToolBar
        android:id="@+id/tb_family_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:padding="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_content_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <com.gcml.lib_widget.CircleImageView
                android:id="@+id/iv_user_icon"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:clickable="true"
                android:src="@drawable/avatar_placeholder" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="用户"
                android:textColor="#333333"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/tv_user_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_family_tag"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:textSize="24sp"
                android:textColor="@color/config_color_appthema"/>

            <TextView
                android:id="@+id/tv_health_recode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_family_health_recode"
                android:layout_marginTop="68dp"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:textSize="28sp"
                android:textColor="@color/config_color_appthema"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_content_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="16dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:layout_gravity="center_horizontal"
                android:text="个人信息"
                android:textColor="@color/config_color_base_3"
                android:textSize="32sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:gravity="center"
                    android:text="手机号码"
                    android:textColor="@color/config_color_base_9"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/tv_user_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:text="18310081008"
                    android:textColor="@color/config_color_base_3"
                    android:textSize="28sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:gravity="center"
                    android:text="年龄"
                    android:textColor="@color/config_color_base_9"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/tv_user_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:text="26岁"
                    android:textColor="@color/config_color_base_3"
                    android:textSize="28sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:gravity="center"
                    android:text="城市"
                    android:textColor="@color/config_color_base_9"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/tv_user_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:text="浙江省杭州市"
                    android:textColor="@color/config_color_base_3"
                    android:textSize="28sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:gravity="center"
                    android:text="列表位置"
                    android:textColor="@color/config_color_base_9"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/tv_family_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_family_list"
                    android:layout_marginRight="8dp"
                    android:text="家人列表"
                    android:textColor="@color/config_color_base_3"
                    android:textSize="28sp" />

                <ImageView
                    android:id="@+id/iv_family_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dp"
                    android:src="@drawable/common_ic_more"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

