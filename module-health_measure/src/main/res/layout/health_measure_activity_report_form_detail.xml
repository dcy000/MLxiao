<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="根据您提供的相关病史结果，您已经患有糖尿"
        android:textColor="#333"
        android:textSize="56pt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60pt"
        android:layout_marginLeft="80pt"
        android:layout_marginRight="80pt"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="60pt"
        android:layout_marginRight="60pt"
        android:layout_marginBottom="58pt"
        android:layout_marginTop="72pt"
        android:background="@drawable/bg_shadow"
        >
        <TextView
            android:id="@+id/tv_headline_influencing_factors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="指导建议"
            android:textColor="#3F86FC"
            android:textSize="64pt"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56pt"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/health_measure_decorate_left"
            app:layout_constraintRight_toLeftOf="@id/tv_headline_influencing_factors"
            app:layout_constraintTop_toTopOf="@id/tv_headline_influencing_factors"
            app:layout_constraintBottom_toBottomOf="@id/tv_headline_influencing_factors"
            android:layout_marginRight="12pt"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/health_measure_decorate_right"
            app:layout_constraintLeft_toRightOf="@id/tv_headline_influencing_factors"
            app:layout_constraintTop_toTopOf="@id/tv_headline_influencing_factors"
            app:layout_constraintBottom_toBottomOf="@id/tv_headline_influencing_factors"
            android:layout_marginLeft="12pt"/>
        <TextView
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/health_measure_blue_dotted_line"
            android:layerType="software"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_headline_influencing_factors"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="48pt"/>
        <TextView
            android:id="@+id/tv_advice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginBottom="56pt"
            android:layout_marginTop="40pt"
            android:text="病程较长、控制较差的糖尿病人常伴有各种并发症，如多种感染、酮症酸中毒、肾脏病变、眼底病变、神经病变等。请密切监测血糖，积极治疗，同时注意保持健康的生活方式如均衡饮食、控制每日摄入总热量、适量运动等。"
            android:textSize="48pt"
            android:textColor="#666"
            android:lineSpacingMultiplier="1.5"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>