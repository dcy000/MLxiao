<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/call_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="账号"/>

    <!--doctor_18940866150-->
    <!--doctor_18940866149-->
    <EditText
        android:id="@+id/call_et_id"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="doctor_18940866150"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/call_tv_action"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/call_tv_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:onClick="onActionClicked"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/call_et_id"
        app:layout_constraintLeft_toRightOf="@+id/call_et_id"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="登录"/>
</android.support.constraint.ConstraintLayout>
