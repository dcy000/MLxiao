<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:color="@color/color_333">
        <shape >
            <solid android:color="#3F86FC"/>
            <size android:width="64pt" android:height="12pt"/>
            <corners android:radius="6pt"/>
        </shape>
    </item>
    <item android:state_checked="false" android:color="@color/color_999">
        <shape>
            <solid android:color="#003F86FC"/>
            <size android:width="64pt" android:height="12pt"/>
            <corners android:radius="6pt"/>
        </shape>
    </item>
</selector>