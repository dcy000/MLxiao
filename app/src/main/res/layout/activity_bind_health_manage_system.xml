<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.han.referralproject.require2.register.activtiy.IDCardNumberRegisterActivity">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="59pt"
        android:layout_marginTop="100pt"
        android:text="绑定公共卫生服务管理 V3.0账号"
        android:textColor="#ff333333"
        android:textSize="64pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36pt"
        android:text="(身份证号将与您的居民健康档案绑定，请确认是否填写正确)"
        android:textColor="#ff999999"
        android:textSize="48pt"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <com.example.han.referralproject.require2.wrap.CanClearEditText
        android:id="@+id/ccet_phone"
        android:layout_width="880pt"
        android:layout_height="132pt"
        android:layout_marginStart="59pt"
        android:layout_marginTop="37pt"
        android:textSize="56pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18"></com.example.han.referralproject.require2.wrap.CanClearEditText>


    <TextView
        android:id="@+id/tv_next"
        android:layout_width="320pt"
        android:layout_height="100pt"
        android:layout_marginBottom="348pt"
        android:layout_marginLeft="59pt"
        android:background="@drawable/shape_rectangle_next_btn"
        android:enabled="false"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#fff"
        android:textSize="56pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="841pt"
        android:layout_height="770pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_pages_right_bg" />

    <EditText
        android:id="@+id/et_pass_word"
        android:layout_width="880pt"
        android:layout_height="132pt"
        android:layout_marginStart="59pt"
        android:layout_marginTop="17pt"
        android:background="@null"
        android:hint="请输入您的公共卫生服务管理密码"
        android:inputType="textPassword"
        android:textSize="56pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ccet_phone" />

    <View
        android:layout_width="880pt"
        android:layout_height="1pt"
        android:layout_marginStart="59pt"
        android:background="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_pass_word" />


</android.support.constraint.ConstraintLayout>
