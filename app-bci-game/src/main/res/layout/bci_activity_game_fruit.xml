<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bci_cl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bci_bg_fruit_game"
    tools:context="com.ml.bci.game.BciGameFruitActivity">

    <ImageView
        android:id="@+id/bci_iv_flower_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/bci_bg_flower_up"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bci_iv_fruit_emitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bci_ic_fruit_emitter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bci_tv_fruit_indicator"
        android:layout_width="135dp"
        android:layout_height="150dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/bci_bg_fruit_indicator"
        android:gravity="bottom|center"
        android:paddingBottom="25dp"
        android:textColor="#FFBB36"
        android:textSize="38sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="梨子" />

    <ImageView
        android:id="@+id/bci_iv_choose_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:src="@drawable/bci_ic_choose_indicator"
        app:layout_constraintBottom_toTopOf="@+id/bci_iv_fruit_emitter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bci_rv_fruits"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="130dp"
        app:layout_constraintBottom_toBottomOf="@+id/bci_iv_fruit_emitter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bci_iv_fruit_emitter" />


    <ImageView
        android:id="@+id/bci_iv_fruit_basket_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bci_ic_fruit_basket_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/bci_iv_choose_fruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:src="@drawable/bci_ic_fruit_pear" />

    <ImageView
        android:id="@+id/bci_iv_fruit_basket_front"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bci_ic_fruit_basket_front"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/bci_iv_flower_down"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/bci_bg_flower_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/bci_tv_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="0"
        android:textColor="#FF9700"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/bci_pb_attention"
        app:layout_constraintLeft_toLeftOf="@+id/bci_pb_attention"
        app:layout_constraintRight_toRightOf="@+id/bci_pb_attention" />

    <TextView
        android:id="@+id/bci_tv_blink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="0"
        android:textColor="#FF9700"
        android:textSize="35sp"
        app:layout_constraintLeft_toLeftOf="@+id/bci_pb_attention"
        app:layout_constraintRight_toRightOf="@+id/bci_pb_attention"
        app:layout_constraintTop_toBottomOf="@+id/bci_pb_attention" />

    <TextView
        android:id="@+id/bci_tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="0"
        android:textColor="#FF9700"
        android:textSize="35sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ProgressBar
        android:id="@+id/bci_pb_attention"
        android:layout_width="28dp"
        android:layout_height="258dp"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="60dp"
        android:indeterminateOnly="false"
        android:max="100"
        android:progress="25"
        android:progressDrawable="@drawable/bci_pb_attention"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/bci_pb_attention_decorator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bci_fg_attention_decorator"
        app:layout_constraintBottom_toBottomOf="@+id/bci_pb_attention"
        app:layout_constraintLeft_toLeftOf="@+id/bci_pb_attention"
        app:layout_constraintRight_toRightOf="@+id/bci_pb_attention"
        app:layout_constraintTop_toTopOf="@+id/bci_pb_attention" />
</android.support.constraint.ConstraintLayout>
