<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    tools:context="com.witspring.unitbody.AddMemberActivity">

    <TextView
        style="@style/ws_txt_main_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="32dp"
        android:text="设置年龄性别，查询更加准确！"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/wpSex"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:wheel_data="@array/wsbody_sex"
            app:wheel_visible_item_count="7"
            app:wheel_item_text_size="@dimen/ws_font_large"
            app:wheel_item_text_color="@color/ws_gray_77"
            app:wheel_selected_item_text_color="@color/ws_main"
            app:wheel_curved="true"
            app:wheel_atmospheric="true"
            app:wheel_indicator="true"
            app:wheel_indicator_color="@color/ws_gray_da"
            app:wheel_indicator_size="1dp"
            app:wheel_same_width="true"/>
        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/wpYear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:wheel_data="@array/wsbody_age_year"
            app:wheel_visible_item_count="7"
            app:wheel_item_text_size="@dimen/ws_font_large"
            app:wheel_item_text_color="@color/ws_gray_77"
            app:wheel_selected_item_text_color="@color/ws_main"
            app:wheel_curved="true"
            app:wheel_atmospheric="true"
            app:wheel_indicator="true"
            app:wheel_indicator_color="@color/ws_gray_da"
            app:wheel_indicator_size="1dp"
            app:wheel_same_width="true"/>
        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/wpMonth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:wheel_data="@array/wsbody_age_month_empty"
            app:wheel_visible_item_count="7"
            app:wheel_item_text_size="@dimen/ws_font_large"
            app:wheel_item_text_color="@color/ws_gray_77"
            app:wheel_selected_item_text_color="@color/ws_main"
            app:wheel_curved="true"
            app:wheel_atmospheric="true"
            app:wheel_indicator="true"
            app:wheel_indicator_color="@color/ws_gray_da"
            app:wheel_indicator_size="1dp"
            app:wheel_same_width="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEnsure"
            style="@style/ws_txt_white_large"
            android:background="@drawable/ws_round_btn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="88dp"
            android:paddingLeft="88dp"
            android:text="确定"
            android:onClick="btnEnsure"/>

        <Button
            android:id="@+id/btnCancel"
            style="@style/ws_txt_main_large"
            android:background="@drawable/ws_round_gray"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginLeft="32dp"
            android:paddingRight="88dp"
            android:paddingLeft="88dp"
            android:text="取消"
            android:onClick="btnEnsure"/>

    </LinearLayout>

</LinearLayout>
