<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_brightness_set"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/selector_setting_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="亮度设置"
                android:textColor="#333333"
                android:textSize="28sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="28dp"
                android:src="@drawable/ic_fh"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#DDDDDD"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_voice_set"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/selector_setting_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="音量设置"
                android:textColor="#333333"
                android:textSize="28sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="28dp"
                android:src="@drawable/ic_fh"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#DDDDDD"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_netless_toggle"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/selector_setting_item_bg">

            <TextView
                android:id="@+id/tv_netless_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:textColor="#333333"
                android:textSize="28sp"
                android:text="离线模式"/>

            <com.suke.widget.SwitchButton
                android:id="@+id/sb_enable_offline_mode"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="40dp"
                app:sb_checked_color="#00CD79"
                app:sb_show_indicator="false"
                app:sb_uncheck_color="#C4C6C8"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#DDDDDD"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_netless"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/selector_setting_item_bg">

            <TextView
                android:id="@+id/tv_netless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="无网模式"
                android:textColor="#333333"
                android:textSize="28sp"/>

            <com.suke.widget.SwitchButton
                android:id="@+id/sb_enable_no_network_mode"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="40dp"
                app:sb_checked_color="#00CD79"
                app:sb_show_indicator="false"
                app:sb_uncheck_color="#C4C6C8"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#DDDDDD"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_wifi_set"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/selector_setting_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="WIFI设置"
                android:textColor="#333333"
                android:textSize="28sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="28dp"
                android:src="@drawable/ic_fh"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#DDDDDD"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_set_keyword"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/selector_setting_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="关键词设置"
                android:textColor="#333333"
                android:textSize="28sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/view3"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_fh"/>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#DDDDDD"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_set_voice_name"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/selector_setting_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="发音人设置"
                android:textColor="#333333"
                android:textSize="28sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="28dp"
                android:src="@drawable/ic_fh"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#DDDDDD"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_set_talk_type"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/selector_setting_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="聊天模式设置"
                android:textColor="#333333"
                android:textSize="28sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="28dp"
                android:src="@drawable/ic_fh"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#DDDDDD"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_update"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/selector_setting_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="检查更新"
                android:textColor="#333333"
                android:textSize="28sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="28dp"
                android:src="@drawable/ic_fh"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#DDDDDD"/>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="#fff5f5f5"/>

        <RelativeLayout
            android:id="@+id/rl_about"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/selector_setting_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="关于"
                android:textColor="#333333"
                android:textSize="28sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="28dp"
                android:src="@drawable/ic_fh"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#DDDDDD"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_reset"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/selector_setting_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="恢复出厂设置"
                android:textColor="#333333"
                android:textSize="28sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="28dp"
                android:src="@drawable/ic_fh"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#DDDDDD"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp"
                android:text="清除缓存"
                android:textColor="#333333"
                android:textSize="28sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_fh"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#DDDDDD"/>


        </RelativeLayout>


    </LinearLayout>
</ScrollView>
