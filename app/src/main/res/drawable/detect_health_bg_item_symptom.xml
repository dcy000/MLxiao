<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <stroke android:color="@color/colorSaltyPreference"/>
            <solid android:color="@color/colorSaltyPreference"/>
            <corners android:radius="60pt"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:color="@color/colorSaltyPreference" android:width="2pt"/>
            <solid android:color="@color/white"/>
            <corners android:radius="60pt"/>
        </shape>
    </item>
</selector>