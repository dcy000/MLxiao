<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/medical_consultation"
    tools:context="com.example.han.referralproject.yisuotang.MedicalConsultationActivity">

    <ImageView
        android:id="@+id/community_drugstore"
        android:layout_width="600pt"
        android:layout_height="600pt"
        android:layout_marginStart="40pt"
        android:layout_marginTop="40pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/community_drugstore" />

    <ImageView
        android:id="@+id/community_doctor"
        android:layout_width="600pt"
        android:layout_height="600pt"
        android:layout_marginTop="32pt"
        app:layout_constraintStart_toStartOf="@+id/community_drugstore"
        app:layout_constraintTop_toBottomOf="@+id/community_drugstore"
        app:srcCompat="@drawable/community_doctor" />

    <ImageView
        android:id="@+id/health_mannager"
        android:layout_width="600pt"
        android:layout_height="600pt"
        android:layout_marginStart="32pt"
        app:layout_constraintStart_toEndOf="@+id/community_drugstore"
        app:layout_constraintTop_toTopOf="@+id/community_drugstore"
        app:srcCompat="@drawable/health_mannager" />

    <ImageView
        android:id="@+id/contract_doctor"
        android:layout_width="600pt"
        android:layout_height="600pt"
        android:layout_marginStart="32pt"
        android:layout_marginTop="32pt"
        app:layout_constraintBottom_toBottomOf="@+id/community_doctor"
        app:layout_constraintStart_toEndOf="@+id/community_doctor"
        app:layout_constraintTop_toBottomOf="@+id/health_mannager"
        app:srcCompat="@drawable/contract_doctor" />
</android.support.constraint.ConstraintLayout>
