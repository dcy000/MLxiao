<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF4FD">

    <LinearLayout
        android:id="@+id/linearlayou1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">


        <com.gcml.lib_widget.imageview.CircleImageView
            android:id="@+id/circleImageView1"
            android:layout_width="204dp"
            android:layout_height="204dp"
            android:clickable="true"
            android:src="@drawable/avatar_placeholder" />

        <TextView
            android:id="@+id/doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="赵曼林"
            android:textColor="@color/name_color"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/doctor_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="职级：主任"
            android:textColor="@color/name_color"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/doctor_feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="擅长：高血压，糖尿病"
            android:textColor="@color/name_good_at"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/pay_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="收费标准：10元/分钟"
            android:textColor="@color/name_pay"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayou"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/linearlayou1"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="@string/appraise"
            android:textColor="@color/appraise"
            android:textSize="50sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/star1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:src="@drawable/stars" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:clickable="true"
                android:src="@drawable/stars" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:clickable="true"
                android:src="@drawable/stars" />

            <ImageView
                android:id="@+id/star4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:clickable="true"
                android:src="@drawable/stars" />

            <ImageView
                android:id="@+id/star5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:clickable="true"
                android:src="@drawable/stars" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:background="@drawable/appraise_selector"
                android:gravity="center"
                android:text="医德高尚"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/appraise_selector"
                android:gravity="center"
                android:text="认真负责"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/appraise_selector"
                android:gravity="center"
                android:text="周到细致"
                android:textSize="30sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:background="@drawable/appraise_selector"
                android:gravity="center"
                android:text="缺乏耐心"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/appraise_selector"
                android:gravity="center"
                android:text="不够专业"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/appraise_selector"
                android:gravity="center"
                android:text="不够细致"
                android:textSize="30sp" />
        </LinearLayout>

        <Button
            android:id="@+id/niming_appraise"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_nimin"
            android:gravity="center"
            android:text="匿名评价"
            android:textColor="#FFFFFF"
            android:textSize="43sp" />


    </LinearLayout>


</RelativeLayout>
