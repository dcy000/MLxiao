<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/popup_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7f000000">

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/popup_content"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_alert_dialog"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_popup_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="添加联系人"
            android:textSize="32sp"
            android:textColor="@color/config_color_base_3"/>

        <EditText
            android:id="@+id/et_popup_friend"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="18dp"
            android:background="@drawable/common_bg_popup_edit"
            android:maxLength="11"
            android:inputType="number"
            android:hint="请输入对方手机号"
            android:textColorHint="@color/config_color_quarantine"
            android:text=""
            android:textSize="28sp"
            android:textColor="@color/config_color_base_3"/>

        <EditText
            android:id="@+id/et_popup_lable"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="18dp"
            android:background="@drawable/common_bg_popup_edit"
            android:maxLength="3"
            android:inputType="text"
            android:hint="请输入对方标签"
            android:textColorHint="@color/config_color_quarantine"
            android:text=""
            android:textSize="28sp"
            android:textColor="@color/config_color_base_3"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_popup_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="50dp"
            android:text="该用户不存在，请确认后重新输入"
            android:textSize="26sp"
            android:textColor="@color/config_color_base_9"
            android:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/ll_popup_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/tv_popup_hint_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:id="@+id/tv_popup_hint_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="30dp"
                android:text="魏某人"
                android:textSize="26sp"
                android:textColor="@color/config_color_base_3"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_popup_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/common_bg_btn_next"
            android:text="下一步"
            android:textSize="26sp"
            android:textColor="@color/common_text_white"/>

    </LinearLayout>

</RelativeLayout>

