<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="30dp"
    tools:context="com.example.han.referralproject.settting.activity.VoiceSettingActivity">

    <ImageView
        android:id="@+id/iv_min"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:src="@drawable/ic_voice_min" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:progressDrawable="@drawable/seekbar_look_like"
        android:thumb="@drawable/ic_voice_thumb" />

    <ImageView
        android:id="@+id/iv_max"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:src="@drawable/ic_voice_min" />

</LinearLayout>
