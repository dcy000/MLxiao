<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1200pt"
    android:layout_height="658pt">

    <LinearLayout
        android:layout_width="1200pt"
        android:layout_height="658pt"
        android:background="@drawable/shape_bg_account_info"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="152pt"
            android:gravity="center"
            android:text="公卫数据加载失败,"
            android:textColor="#ff333333"
            android:textSize="72pt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="46pt"
            android:gravity="center"
            android:text="请联系工作人员进行处理"
            android:textColor="#ff333333"
            android:textSize="72pt" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2pt"
            android:layout_marginTop="150pt"
            android:background="#ffbbbbbb" />

        <TextView
            android:id="@+id/tv_dialog_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确认"
            android:textColor="#ff3f86fc"
            android:textSize="64pt" />
    </LinearLayout>


</FrameLayout>