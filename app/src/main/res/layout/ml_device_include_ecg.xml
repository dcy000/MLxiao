<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_xindian"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/normal_bg"
    android:visibility="gone"
    tools:showIn="@layout/activity_detect">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/test_xindian"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:visibility="visible"/>
    <!--<ImageView-->
    <!--android:id="@+id/onDetect"-->
    <!--android:layout_width="90dp"-->
    <!--android:layout_height="90dp"-->
    <!--android:src="@drawable/heart_img"-->
    <!--android:layout_centerInParent="true"-->
    <!--/>-->
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/onDetect"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/toolbar_bg"
        app:indicatorName="LineScaleIndicator"/>

    <TextView
        android:id="@+id/tv_xindian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:textSize="40sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/history4"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="@drawable/shape_phone"
            android:gravity="center"
            android:text="历史记录"
            android:textColor="#FFFFFF"
            android:textSize="35sp"/>

        <Button
            android:id="@+id/xindian_video"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/shape_show"
            android:gravity="center"
            android:text="使用演示"
            android:textColor="#FFFFFF"
            android:textSize="35sp"/>
    </LinearLayout>
</RelativeLayout>