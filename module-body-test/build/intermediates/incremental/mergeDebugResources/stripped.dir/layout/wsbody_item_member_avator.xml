<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="110dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ivAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fresco:actualImageScaleType="fitXY"
            fresco:placeholderImage="@mipmap/wsbody_avator_defaut"
            fresco:placeholderImageScaleType="fitXY"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/tvShort"
            style="@style/ws_txt_white_large"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/wsbody_circle_avator"
            android:gravity="center"
            android:text="äº®"
            android:textSize="@dimen/ws_font_larger"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvName"
        style="@style/ws_txt_main_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:maxLines="1" />

</LinearLayout>
