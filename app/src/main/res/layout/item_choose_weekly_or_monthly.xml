<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_monthly"
        android:layout_width="match_parent"
        android:layout_height="120pt"
        android:background="@drawable/bg_popwindow"
        android:text="单疗程治疗计划"
        android:textColor="#333"
        android:textSize="56pt"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:clickable="true"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="#bbb"
        app:layout_constraintTop_toBottomOf="@id/tv_monthly"/>
    <TextView
        android:id="@+id/tv_weekly"
        android:layout_width="match_parent"
        android:layout_height="120pt"
        android:background="@drawable/bg_popwindow"
        android:text="周健康报告"
        android:textColor="#333"
        android:textSize="56pt"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:clickable="true"/>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="32pt"
        app:layout_constraintTop_toBottomOf="@id/tv_weekly"/>
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="120pt"
        android:background="@drawable/bg_popwindow"
        android:text="取消"
        android:textColor="#333"
        android:textSize="56pt"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1"
        android:clickable="true"
        />
</android.support.constraint.ConstraintLayout>