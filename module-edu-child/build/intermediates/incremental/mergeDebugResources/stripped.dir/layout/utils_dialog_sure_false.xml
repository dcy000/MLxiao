<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1200pt"
    android:layout_height="558pt"
    android:background="@drawable/utils_shape_round_white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="33pt">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24pt" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40pt" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="1000pt"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40pt"
        android:layout_marginRight="40pt"
        android:layout_marginTop="20pt"
        android:gravity="center"
        android:paddingLeft="6pt"
        android:paddingRight="6pt"
        android:text="是否退出登录？"
        android:textColor="#333333"
        android:textSize="56pt" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginTop="60pt"
        android:background="#D9D9D9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="135pt"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认"
            android:textColor="#3F86FC"
            android:textSize="56pt"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:layout_width="1pt"
            android:layout_height="match_parent"
            android:background="#D9D9D9" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="135pt"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#bbbbbb"
            android:textSize="56pt"
            android:background="?android:attr/selectableItemBackground"/>
    </LinearLayout>
</LinearLayout>
