<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="1280pt"
    android:layout_height="840pt"
    android:background="#bb000000"
    >

    <ImageView
        android:id="@+id/health_record_iv_qrcode"
        android:layout_width="520pt"
        android:layout_height="520pt"
        android:layout_marginTop="30pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:text="扫描二维码下载"
        android:textColor="#FFFF"
        android:textSize="60pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/health_record_iv_qrcode"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/health_diary_tv_week_report"
        android:layout_width="360pt"
        android:layout_height="120pt"
        android:layout_marginBottom="30pt"
        android:background="@drawable/health_diary_bg_tv_action"
        android:gravity="center"
        android:text="周报告"
        android:textColor="#ffffff"
        android:textSize="56pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/health_diary_tv_month_report"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/health_diary_tv_month_report"
        android:layout_width="360pt"
        android:layout_height="120pt"
        android:layout_marginBottom="30pt"
        android:background="@drawable/health_diary_bg_tv_action"
        android:gravity="center"
        android:text="月报告"
        android:textColor="#ffffff"
        android:textSize="56pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/health_diary_tv_week_report"/>

</android.support.constraint.ConstraintLayout>