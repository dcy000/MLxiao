<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/shangcheng"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="30dp"
        android:background="#426"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/yule"
        app:layout_constraintTop_toBottomOf="@+id/yule" />

    <ImageView
        android:id="@+id/yule"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:background="#426"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/shezhi"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_marginEnd="66dp"
        android:layout_marginTop="30dp"
        android:background="#426"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tuichu"
        app:layout_constraintTop_toBottomOf="@+id/tuichu" />

    <ImageView
        android:id="@+id/tuichu"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_marginEnd="66dp"
        android:layout_marginStart="66dp"
        android:background="#426"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/yule"
        app:layout_constraintTop_toTopOf="@+id/yule" />

    <ImageView
        android:id="@+id/liaotian"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="66dp"
        android:layout_marginTop="84dp"
        android:background="#426"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tuichu"
        app:layout_constraintTop_toBottomOf="@+id/shezhi" />
</android.support.constraint.ConstraintLayout>