<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   
            
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ws_white_trans"
        tools:context="com.witspring.unitbody.BodyActivity" android:tag="layout/wsbody_activity_body_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <include
            android:id="@+id/toolbar"
            layout="@layout/ws_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.Guideline
            android:id="@+id/wsbody_guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/wsbody_textview"
            style="@style/ws_txt_main_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="常见症状"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <TextView
            android:id="@+id/wsbody_textview2"
            style="@style/ws_txt_gray99_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="更快捷选择症状"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wsbody_textview" />

        <com.witspring.view.pageflow.PageFlowView
            android:id="@+id/pageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/wsbody_guideline1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wsbody_textview2" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/wsbody_guideline1"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:background="@color/ws_white"
            android:padding="4dp">

            <com.witspring.view.TouchImageView
                android:id="@+id/touchView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/wsbody_front_man"/>

            <ImageView
                android:id="@+id/ivCheck"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="matrix"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/wsbody_bodytxt1"
                style="@style/ws_txt_main_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="人体自诊"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/wsbody_bodytxt2"
                style="@style/ws_txt_gray99_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="哪里不适点哪里"
                android:layout_below="@+id/wsbody_bodytxt1" />

            <CheckedTextView
                android:id="@+id/ctvSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:checked="true"
                android:checkMark="@mipmap/wsbody_switch_front_back"
                android:onClick="ctvSwitch"/>

            <CheckedTextView
                android:id="@+id/ctvAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ctvSwitch"
                android:layout_marginTop="30dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:checkMark="@mipmap/wsbody_all"
                android:onClick="ctvAll"/>
        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
         