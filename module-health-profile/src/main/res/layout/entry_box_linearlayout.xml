<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_entry_box"
    android:layout_width="match_parent"
    android:layout_height="120pt"
    android:layout_marginTop="20pt"
    android:background="@drawable/common_bg_input_gray"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_question_name"
        android:layout_width="wrap_content"
        android:layout_height="120pt"
        android:gravity="center_vertical"
        android:textColor="#ff666666"
        android:textSize="56pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120pt"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_question_name"
        android:background="@drawable/common_bg_input_gray"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_value"
            android:layout_width="0pt"
            android:layout_height="120pt"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingLeft="32pt"
            android:paddingRight="32pt"
            android:textSize="56pt" />

        <TextView
            android:id="@+id/tv_question_unit"
            android:layout_width="wrap_content"
            android:layout_height="120pt"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="单位"
            android:textColor="#ff333333"
            android:textSize="56pt" />
    </LinearLayout>


</RelativeLayout>