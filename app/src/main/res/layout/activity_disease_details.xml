<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/normal_bg"
    tools:context="com.example.han.referralproject.activity.DiseaseDetailsActivity">

    <RadioGroup
        android:id="@+id/rg_disease"
        android:layout_width="0pt"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rb_reason"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_rb_health_record1"
            android:button="@null"
            android:gravity="center"
            android:text="疾病原因"
            android:textSize="29sp"
            android:textColor="@color/white"

            />

        <RadioButton
            android:id="@+id/rb_suggest"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_rb_health_record2"
            android:button="@null"
            android:gravity="center"
            android:text="顾问建议"
            android:textColor="#999"
            android:textSize="29sp"/>

        <RadioButton
            android:id="@+id/rb_eating"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_rb_health_record3"
            android:button="@null"
            android:gravity="center"
            android:text="饮食调理"
            android:textColor="#999"
            android:textSize="29sp"/>

        <RadioButton
            android:id="@+id/rb_sport"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_rb_health_record4"
            android:button="@null"
            android:gravity="center"
            android:text="运动建议"
            android:textColor="#999"
            android:textSize="29sp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/rg_disease"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="29sp"
        android:textColor="#333"
        android:padding="22dp"
        android:background="@color/white"
        android:lineSpacingMultiplier="1.2"/>
</android.support.constraint.ConstraintLayout>
