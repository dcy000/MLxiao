<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.han.referralproject.require2.register.activtiy.PhoneAndCodeActivity">

    <com.example.han.referralproject.require2.wrap.PhoneVerificationCodeView
        android:id="@+id/phone_view"
        android:layout_width="880pt"
        android:layout_height="wrap_content"
        android:layout_marginStart="59pt"
        android:layout_marginTop="100pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </com.example.han.referralproject.require2.wrap.PhoneVerificationCodeView>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="320pt"
        android:layout_height="100pt"
        android:layout_marginStart="59pt"
        android:layout_marginTop="142pt"
        android:background="@drawable/shape_rectangle_next_btn"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#fff"
        android:textSize="56pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_view" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="841pt"
        android:layout_height="770pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_pages_right_bg" />

    <TextView
        android:id="@+id/tv_code_phone_add_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48pt"
        android:text="没有手机号?请点击"
        android:textColor="#ff3f86fc"
        android:textSize="48pt"
        app:layout_constraintEnd_toEndOf="@+id/phone_view"
        app:layout_constraintTop_toBottomOf="@+id/phone_view"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>
