<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="562pt"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="32pt"
        android:layout_marginLeft="32pt"
        android:layout_marginBottom="32pt">
        <TextView
            android:id="@+id/tv_measure_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本周测量次数"
            android:textSize="56pt"
            android:textColor="#333"
            android:textStyle="bold"
            android:layout_marginTop="60pt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="偏高"
                android:textSize="48pt"
                android:textColor="#999"
                android:layout_marginLeft="40pt"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_gao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="50pt"
                android:text="0次"
                android:textColor="#333"
                android:textSize="48pt" />
        </LinearLayout>
        <com.gcml.lib_widget.progressbar.RoundProgressBar
            android:id="@+id/rpb_gao"
            android:layout_width="match_parent"
            android:layout_height="32pt"
            app:rcBackgroundColor="#eee"
            app:rcProgressColor="#F56C6C"
            app:rcRadius="0pt"
            app:rcMax="100"
            app:rcProgress="0"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="17pt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正常"
                android:textSize="48pt"
                android:textColor="#999"
                android:layout_marginLeft="40pt"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_zhengchang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="48pt"
                android:text="0次"
                android:layout_gravity="end"
                android:layout_marginRight="50pt"
                />
        </LinearLayout>
        <com.gcml.lib_widget.progressbar.RoundProgressBar
            android:id="@+id/rpb_zhengchang"
            android:layout_width="match_parent"
            android:layout_height="32pt"
            app:rcBackgroundColor="#eee"
            app:rcProgressColor="#3ACC61"
            app:rcRadius="0pt"
            app:rcMax="100"
            app:rcProgress="0"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="17pt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="偏低"
                android:textSize="48pt"
                android:textColor="#999"
                android:layout_marginLeft="40pt"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_di"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="48pt"
                android:text="0次"
                android:layout_gravity="end"
                android:layout_marginRight="50pt"
                />
        </LinearLayout>
        <com.gcml.lib_widget.progressbar.RoundProgressBar
            android:id="@+id/rpb_di"
            android:layout_width="match_parent"
            android:layout_height="32pt"
            app:rcBackgroundColor="#eee"
            app:rcProgressColor="#F56C6C"
            app:rcRadius="0pt"
            app:rcMax="100"
            app:rcProgress="0"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="17pt"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本周平均血压"
            android:textSize="56pt"
            android:textColor="#333"
            android:textStyle="bold"
            android:layout_marginTop="60pt"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高压"
                android:textSize="48pt"
                android:textColor="#999"
                android:layout_marginLeft="40pt"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_gaoya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="48pt"
                android:text="120"
                android:layout_gravity="end"
                android:layout_marginRight="50pt"
                />
        </LinearLayout>

        <com.gcml.lib_widget.progressbar.RoundProgressBar
            android:id="@+id/rpb_gaoya"
            android:layout_width="match_parent"
            android:layout_height="32pt"
            app:rcBackgroundColor="#eee"
            app:rcProgressColor="#3F86FC"
            app:rcRadius="0pt"
            app:rcMax="100"
            app:rcProgress="0"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="17pt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="低压"
                android:textSize="48pt"
                android:textColor="#999"
                android:layout_marginLeft="40pt"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_diya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="48pt"
                android:text="80"
                android:layout_gravity="end"
                android:layout_marginRight="50pt"
                />
        </LinearLayout>

        <com.gcml.lib_widget.progressbar.RoundProgressBar
            android:id="@+id/rpb_diya"
            android:layout_width="match_parent"
            android:layout_height="32pt"
            app:rcBackgroundColor="#eee"
            app:rcProgressColor="#3ACC61"
            app:rcRadius="0pt"
            app:rcMax="100"
            app:rcProgress="0"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="17pt"
            />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ll_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/ll_left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="32pt"
        android:layout_marginTop="32pt"
        android:layout_marginBottom="32pt"
        android:layout_marginRight="32pt"
        >
        <android.support.constraint.ConstraintLayout
            android:id="@+id/ll_gaodi"
            android:layout_width="0pt"
            android:layout_height="416pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            app:layout_constraintRight_toLeftOf="@+id/ll_fenshu">
            <TextView
                android:id="@+id/tv_result_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本次测量结果"
                android:textSize="40pt"
                android:textColor="#999"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="56pt"
                android:layout_marginLeft="40pt"/>

            <LinearLayout
                android:id="@+id/ll_gaoya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="@id/tv_result_title"
                app:layout_constraintTop_toBottomOf="@id/tv_result_title"
                android:layout_marginTop="67pt">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="56pt"
                    android:textColor="#333"
                    android:text="高压"/>
                <TextView
                    android:id="@+id/current_gaoya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textSize="120pt"
                    android:textStyle="bold"
                    android:textColor="#3F86FC"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@id/ll_gaoya"
                app:layout_constraintTop_toBottomOf="@id/tv_result_title"
                android:layout_marginLeft="95pt"
                android:layout_marginTop="67pt">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="56pt"
                    android:textColor="#333"
                    android:text="低压"/>
                <TextView
                    android:id="@+id/current_diya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80"
                    android:textSize="120pt"
                    android:textStyle="bold"
                    android:textColor="#3ACC61"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/ll_fenshu"
            android:layout_width="0pt"
            android:layout_height="416pt"
            app:layout_constraintLeft_toRightOf="@id/ll_gaodi"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="32pt"
            android:background="@color/white">
            <TextView
                android:id="@+id/tv_score_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康分数"
                android:textColor="#999"
                android:textSize="40pt"
                android:layout_marginTop="41pt"
                android:layout_marginLeft="40pt"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正常"
                android:textSize="56pt"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tv_score_title"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="40pt"
                android:layout_marginTop="36pt"
                android:textColor="#3ACC61"/>
            <com.littlejie.circleprogress.WaveProgress
                android:id="@+id/wave_progress_bar"
                android:layout_width="293pt"
                android:layout_height="293pt"
                android:layout_gravity="center_horizontal"
                app:cp_darkWaveAnimTime="1000"
                app:cp_darkWaveColor="#B372A7FC"
                app:cp_lightWaveAnimTime="2000"
                app:cp_lightWaveColor="#B372A7FC"
                app:cp_lightWaveDirect="R2L"
                app:cp_lockWave="false"
                app:cp_valueSize="105pt"
                app:cp_waveHeight="30pt"
                app:cp_waveNum="1"
                app:cp_circleColor="#eee"
                app:cp_lockCircle="true"
                app:cp_bgCircleColor="#F1F5FF"
                app:cp_circleWidth="3pt"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="60pt"
                android:layout_marginBottom="40pt"
                />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="560pt"
            app:layout_constraintTop_toBottomOf="@id/ll_gaodi"
            android:background="@color/white"
            android:layout_marginTop="32pt">
            <TextView
                android:id="@+id/tv_suggest_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康建议"

                android:textSize="56pt"
                android:textColor="#333"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="36pt"
                />
            <TextView
                android:id="@+id/tv_suggest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_suggest_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="#333"
                android:textSize="48pt"
                android:layout_marginLeft="60pt"
                android:layout_marginRight="60pt"
                android:layout_marginTop="16pt"
                android:text="主人，您血糖偏低，并有下降趋势，低血糖出现饥饿、头昏眼花、面色苍白、心慌手颤、出冷汗、虚弱无力等症状，低血糖还容易诱发心律失常，心绞痛、心肌梗死以及脑血管意外并发症，请持续测量，必要时及时联系医生。"
                android:lineSpacingMultiplier="1.2"/>
            <TextView
                android:id="@+id/tv_something_advice"
                android:layout_width="340pt"
                android:layout_height="100pt"
                android:background="@drawable/health_measure_selector_btn_risk_assessment"
                android:text="风险评估"
                android:textColor="@color/white"
                android:textSize="48pt"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/health_knowledge"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:layout_marginBottom="50pt"
                android:clickable="true"/>
            <TextView
                android:id="@+id/health_knowledge"
                android:layout_width="340pt"
                android:layout_height="100pt"
                android:background="@drawable/health_measure_selector_btn_health_program"
                android:text="健康方案"
                android:textColor="@color/white"
                android:textSize="48pt"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@id/tv_something_advice"
                app:layout_constraintLeft_toRightOf="@id/tv_something_advice"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="102pt"
                android:clickable="true"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>