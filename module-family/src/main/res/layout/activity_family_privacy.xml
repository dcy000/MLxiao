<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.gcml.common.widget.toolbar.TranslucentToolBar
        android:id="@+id/tb_family_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"/>

    <TextView
        android:id="@+id/tv_privacy_look"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:drawableRight="@drawable/common_ic_more"
        android:background="@drawable/common_bg_menu_setting"
        android:padding="24dp"
        android:text="查看档案权限"
        android:textColor="#333333"
        android:textSize="28sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="#DDDDDD" />

    <TextView
        android:id="@+id/tv_privacy_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:drawableRight="@drawable/common_ic_more"
        android:background="@drawable/common_bg_menu_setting"
        android:padding="24dp"
        android:text="修改档案权限"
        android:textColor="#333333"
        android:textSize="28sp" />

</LinearLayout>


