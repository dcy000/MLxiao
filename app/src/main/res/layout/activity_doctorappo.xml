    <LinearLayout
        android:id="@+id/linearlayou"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/icon_back" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/doctor_yuyue"
        android:textColor="@color/white"
        android:textSize="40sp" />


    <ImageView
        android:id="@+id/icon_home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:src="@drawable/icon_wifi" />

    <LinearLayout
        android:id="@+id/linearlayou1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayou"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">


        <com.example.han.referralproject.imageview.CircleImageView
            android:id="@+id/circleImageView1"
            android:layout_width="204dp"
            android:layout_height="204dp"
            android:clickable="true"
            android:src="@drawable/avatar_placeholder" />

        <TextView
            android:id="@+id/docotor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="赵曼林"
            android:textColor="@color/name_color"
            android:textSize="40sp" />


        <TextView
            android:id="@+id/docotor_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="职级：主任医师"
            android:textColor="@color/name_color"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/docotor_feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="擅长：高血压、糖尿病"
            android:textColor="@color/name_good_at"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/service_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="收费标准：10元/分钟"
            android:textColor="@color/name_pay"
            android:textSize="30sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlayou2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayou"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/linearlayou1"
        android:orientation="vertical">

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_yuyue"
            android:gravity="center"
            android:text="已 预 约"
            android:textColor="@android:color/white"
            android:textSize="30sp" />


        <LinearLayout
            android:id="@+id/linearlayou7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/yuyue_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="#8c8c8c"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="45dp"
                android:src="#8c8c8c" />


            <TextView
                android:id="@+id/yuyue_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="#8c8c8c"
                android:textSize="25sp" />


            <Button
                android:id="@+id/cancel_yuyue"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_yuyue"
                android:gravity="center"
                android:text="取消预约"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearlayou8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/yuyue_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="#8c8c8c"
                android:textSize="25sp" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="45dp"
                android:src="#8c8c8c" />


            <TextView
                android:id="@+id/yuyue_time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="#8c8c8c"
                android:textSize="25sp" />


            <Button
                android:id="@+id/cancel_yuyue1"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_yuyue"
                android:gravity="center"
                android:text="取消预约"
                android:textColor="@android:color/white"
                android:textSize="25sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearlayou9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/yuyue_time4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="#8c8c8c"
                android:textSize="25sp" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="45dp"
                android:src="#8c8c8c" />


            <TextView
                android:id="@+id/yuyue_time5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="#8c8c8c"
                android:textSize="25sp" />


            <Button
                android:id="@+id/cancel_yuyue2"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_yuyue"
                android:gravity="center"
                android:text="取消预约"
                android:textColor="@android:color/white"
                android:textSize="25sp" />


        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/video_doctor"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/video_selector"
        android:gravity="center"
        android:text="视频医生"
        android:textColor="#FFFFFF"
        android:textSize="35sp" />


    <Button
        android:id="@+id/add_yuyue"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/add_yuyues"
        android:gravity="center"
        android:text="添加预约"
        android:textColor="#FF9AFF"
        android:textSize="37sp" />

</RelativeLayout>
