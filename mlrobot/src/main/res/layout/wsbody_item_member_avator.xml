<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivAvatar"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_centerHorizontal="true"
        fresco:roundAsCircle="true"
        fresco:placeholderImageScaleType="fitXY"
        fresco:actualImageScaleType="fitXY"
        fresco:placeholderImage="@mipmap/wsbody_avator_defaut"/>

    <TextView
        android:id="@+id/tvShort"
        style="@style/ws_txt_white_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ivAvatar"
        android:layout_alignRight="@id/ivAvatar"
        android:layout_alignTop="@id/ivAvatar"
        android:layout_alignBottom="@id/ivAvatar"
        android:background="@drawable/wsbody_circle_avator"
        android:text="äº®"
        android:textSize="@dimen/ws_font_larger"
        android:visibility="gone"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvName"
        style="@style/ws_txt_main_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ivAvatar"
        android:layout_alignRight="@id/ivAvatar"
        android:layout_below="@id/ivAvatar"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:maxLines="1"/>

</RelativeLayout>
