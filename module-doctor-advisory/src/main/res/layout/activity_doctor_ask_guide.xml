<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">


    <LinearLayout
        android:id="@+id/ll_qianyue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ll_zaixian"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/doctor_yuyue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/qianyue_doc_set"
            android:clickable="true"
            android:gravity="center"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="签约医生"
            android:textColor="#333333"
            android:textSize="36sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_zaixian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ll_qianyue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/doctor_zaixian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/online_doc_set"
            android:clickable="true"
            android:gravity="center"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="在线医生"
            android:textColor="#333333"
            android:textSize="36sp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
