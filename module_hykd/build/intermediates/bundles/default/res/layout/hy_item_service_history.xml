<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/hy_recycleview_item_set"
    android:clickable="true">
    <LinearLayout
        android:id="@+id/ll_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ll_line2"
        android:layout_marginTop="62pt"
        android:layout_marginLeft="62pt">
        <ImageView
            android:layout_width="60pt"
            android:layout_height="60pt"
            android:src="@drawable/hy_sign_time_defalut"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务时间："
            android:textSize="48pt"
            android:textColor="#999"
            android:layout_marginLeft="26pt"/>
        <TextView
            android:id="@+id/tv_service_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="56pt"
            android:text="2017年12月4日"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ll_line1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="62pt"
        android:layout_marginTop="34pt"
        android:layout_marginBottom="62pt">
        <ImageView
            android:layout_width="60pt"
            android:layout_height="60pt"
            android:src="@drawable/hy_doctor_default"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务医生："
            android:textSize="48pt"
            android:textColor="#999"
            android:layout_marginLeft="26pt"/>
        <TextView
            android:id="@+id/tv_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="56pt"
            android:text="陈全傅"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hy_goto_next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="61pt"/>
</android.support.constraint.ConstraintLayout>