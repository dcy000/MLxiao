<?xml version="1.0" encoding="utf-8"?>

                                                   
            
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.witspring.unitdisease.DiseaseActivity" android:tag="layout/wsdise_activity_disease_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <include
            android:id="@+id/toolbar"
            layout="@layout/ws_toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar">
            <RadioGroup
                android:id="@+id/wsdise_rg_left"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:background="@color/ws_white">
                <RelativeLayout
                    android:id="@+id/rl_tab1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ws_main"
                    android:layout_weight="1">
                    <com.witspring.view.CenterRadioButton
                        android:id="@+id/wsdise_rb1"
                        style="@style/ws_tab_disease"
                        android:layout_centerInParent="true"
                        android:drawableTop="@drawable/wsdise_selector_tab_info"
                        android:textColor="@drawable/wsdise_selector_disease_btn"
                        android:drawablePadding="8dp"
                        android:text="@string/wsdise_jbgs" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ws_white"/>

                <RelativeLayout
                    android:id="@+id/rl_tab2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ws_main"
                    android:layout_weight="1">
                    <com.witspring.view.CenterRadioButton
                        android:id="@+id/wsdise_rb2"
                        style="@style/ws_tab_disease"
                        android:layout_centerInParent="true"
                        android:drawableTop="@drawable/wsdise_selector_tab_jbzd"
                        android:textColor="@drawable/wsdise_selector_disease_btn"
                        android:drawablePadding="8dp"
                        android:text="@string/wsdise_jbzd" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ws_white"/>

                <RelativeLayout
                    android:id="@+id/rl_tab3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ws_main"
                    android:layout_weight="1">
                    <com.witspring.view.CenterRadioButton
                        android:id="@+id/wsdise_rb3"
                        style="@style/ws_tab_disease"
                        android:layout_centerInParent="true"
                        android:drawableTop="@drawable/wsdise_selector_tab_jbzl"
                        android:textColor="@drawable/wsdise_selector_disease_btn"
                        android:drawablePadding="8dp"
                        android:text="@string/wsdise_jbzl" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ws_white"/>

                <RelativeLayout
                    android:id="@+id/rl_tab4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ws_main"
                    android:layout_weight="1">
                    <com.witspring.view.CenterRadioButton
                        android:id="@+id/wsdise_rb4"
                        style="@style/ws_tab_disease"
                        android:layout_centerInParent="true"
                        android:drawableTop="@drawable/wsdise_selector_tab_xgyw"
                        android:drawablePadding="8dp"
                        android:textColor="@drawable/wsdise_selector_disease_btn"
                        android:text="@string/wsdise_xgyp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ws_white"/>
            </RadioGroup>

            <FrameLayout
                android:id="@+id/wsdise_fl_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </RelativeLayout>
         