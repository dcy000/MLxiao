<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shadow">

    <RelativeLayout
        android:id="@+id/rl_sport_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="22dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_task_result_left"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_sport_tag"/>

        <TextView
            android:id="@+id/tv_sport_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="运动计划"
            android:textSize="32sp"
            android:textColor="@color/task_color_base"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_task_result_right"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_sport_tag"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_task_result_line"
        android:layout_centerVertical="true"
        android:layout_below="@+id/rl_sport_top"/>

    <LinearLayout
        android:id="@+id/ll_sport_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="运动计划"
            android:textSize="28sp"
            android:textColor="@color/config_color_base_9"/>

        <TextView
            android:id="@+id/tv_sport_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text=""
            android:textSize="36sp"
            android:textColor="@color/config_color_base_3"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sport_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="运动时长"
            android:textSize="28sp"
            android:textColor="@color/config_color_base_9"/>

        <TextView
            android:id="@+id/tv_sport_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text=""
            android:textSize="36sp"
            android:textColor="@color/config_color_base_3"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sport_content3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_alignParentRight="true"
        android:layout_marginRight="130dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体重目标"
            android:layout_gravity="center_horizontal"
            android:textSize="28sp"
            android:textColor="@color/config_color_base_9"/>

        <TextView
            android:id="@+id/tv_sport_content3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text=""
            android:textSize="36sp"
            android:textColor="@color/config_color_base_3"/>

    </LinearLayout>

</RelativeLayout>