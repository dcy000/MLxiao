<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60pt"
        android:layout_marginTop="90pt"
        android:text="是否有药物过敏史？"
        android:textColor="#333"
        android:textSize="72pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60pt"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/title1"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/qingmeisu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60pt"
            android:clickable="true"
            android:drawableLeft="@drawable/bg_huaiyun_set"
            android:drawablePadding="24pt"
            android:gravity="center"
            android:text="青霉素"
            android:textColor="#666"
            android:textIsSelectable="true"
            android:textSize="72pt" />

        <TextView
            android:id="@+id/toubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="136pt"
            android:clickable="true"
            android:drawableLeft="@drawable/bg_huaiyun_set"
            android:drawablePadding="24pt"
            android:gravity="center"
            android:text="头孢"
            android:textColor="#666"
            android:textIsSelectable="true"
            android:textSize="72pt" />

        <TextView
            android:id="@+id/huanganlei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="208pt"
            android:clickable="true"
            android:drawableLeft="@drawable/bg_huaiyun_set"
            android:drawablePadding="24pt"
            android:gravity="center"
            android:text="磺胺类"
            android:textColor="#666"
            android:textIsSelectable="true"
            android:textSize="72pt" />

        <TextView
            android:id="@+id/qita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="136pt"
            android:clickable="true"
            android:drawableLeft="@drawable/bg_huaiyun_set"
            android:drawablePadding="24pt"
            android:gravity="center"
            android:text="其他"
            android:textColor="#666"
            android:textIsSelectable="true"
            android:textSize="72pt" />
    </LinearLayout>

    <TextView
        android:id="@+id/wu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60pt"
        android:layout_marginTop="40pt"
        android:clickable="true"
        android:drawableLeft="@drawable/bg_huaiyun_set"
        android:drawablePadding="24pt"
        android:gravity="center"
        android:text="无"
        android:textColor="#666"
        android:textIsSelectable="true"
        android:textSize="72pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_1" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60pt"
        android:layout_marginTop="68pt"
        android:text="是否有疾病史？"
        android:textColor="#333"
        android:textSize="72pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wu1" />

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60pt"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/title2">

        <TextView
            android:id="@+id/gaouxeya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60pt"
            android:clickable="true"
            android:drawableLeft="@drawable/bg_huaiyun_set"
            android:drawablePadding="24pt"
            android:gravity="center"
            android:text="高血压"
            android:textColor="#666"
            android:textIsSelectable="true"
            android:textSize="72pt" />

        <TextView
            android:id="@+id/tangniaobing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="136pt"
            android:clickable="true"
            android:drawableLeft="@drawable/bg_huaiyun_set"
            android:drawablePadding="24pt"
            android:gravity="center"
            android:text="糖尿病"
            android:textColor="#666"
            android:textIsSelectable="true"
            android:textSize="72pt" />

        <TextView
            android:id="@+id/shexian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="136pt"
            android:clickable="true"
            android:drawableLeft="@drawable/bg_huaiyun_set"
            android:drawablePadding="24pt"
            android:gravity="center"
            android:text="冠心病"
            android:textColor="#666"
            android:textIsSelectable="true"
            android:textSize="72pt" />

        <TextView
            android:id="@+id/xiaochuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="136pt"
            android:clickable="true"
            android:drawableLeft="@drawable/bg_huaiyun_set"
            android:drawablePadding="24pt"
            android:gravity="center"
            android:text="哮喘"
            android:textColor="#666"
            android:textIsSelectable="true"
            android:textSize="72pt" />
    </LinearLayout>

    <include layout="@layout/include_sign_up_nav" />

    <TextView
        android:id="@+id/qita2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60pt"
        android:layout_marginTop="40pt"
        android:clickable="true"
        android:drawableLeft="@drawable/bg_huaiyun_set"
        android:drawablePadding="24pt"
        android:gravity="center"
        android:text="其他"
        android:textColor="#666"
        android:textIsSelectable="true"
        android:textSize="72pt"
        app:layout_constraintStart_toStartOf="@+id/ll_2"
        app:layout_constraintTop_toBottomOf="@+id/ll_2" />

    <TextView
        android:id="@+id/wu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:clickable="true"
        android:drawableLeft="@drawable/bg_huaiyun_set"
        android:drawablePadding="24pt"
        android:gravity="center"
        android:text="无"
        android:textColor="#666"
        android:textIsSelectable="true"
        android:textSize="72pt"
        app:layout_constraintBottom_toBottomOf="@+id/qita2"
        app:layout_constraintStart_toEndOf="@+id/qita2"
        app:layout_constraintTop_toTopOf="@+id/qita2"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>