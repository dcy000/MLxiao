<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/hy_sign_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="签约时间：2017年07月14日"
        android:textColor="#333"
        android:textSize="16sp"
        android:layout_margin="15dp"/>
    <View
        android:id="@+id/hy_view1"
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="#666"
        android:layout_below="@id/hy_sign_time"/>
    <TextView
        android:id="@+id/hy_tv_sign_team_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="签约团队"
        android:textSize="16sp"
        android:textColor="#333"
        android:layout_below="@id/hy_view1"
        android:layout_margin="15dp"/>
    <TextView
        android:id="@+id/hy_tv_team_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dddddd"
        android:layout_below="@id/hy_tv_sign_team_title"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
    <TextView
        android:id="@+id/hy_tv_team_hospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hy_tv_team_name"
        android:text="cccccccc"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="4dp"/>
    <View
        android:id="@+id/hy_view2"
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="#666"
        android:layout_below="@id/hy_tv_team_hospital"
        android:layout_marginLeft="15dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/hy_team_doctors_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hy_view2">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>