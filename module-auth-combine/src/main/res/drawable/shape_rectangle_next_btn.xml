<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="300pt" android:height="132pt" android:state_enabled="true" android:state_pressed="true">

        <shape android:shape="rectangle">

            <!--圆角-->
            <corners android:radius="66pt" />
            <!--填充颜色-->
            <solid android:color="#993F86FC" />

        </shape>


    </item>
    <item android:width="300pt" android:height="132pt" android:state_enabled="true" android:state_pressed="false">

        <shape android:shape="rectangle">
            <!--圆角-->
            <corners android:radius="66pt" />
            <!--填充颜色-->
            <solid android:color="#ff3f86fc" />

        </shape>


    </item>

    <item

        android:width="300pt" android:height="132pt" android:state_enabled="false">

        <shape android:shape="rectangle">
            <!--圆角-->
            <corners android:radius="66pt" />
            <!--填充颜色-->
            <solid android:color="#ffbdd6fc" />

        </shape>


    </item>


</selector>