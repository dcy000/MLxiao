    <LinearLayout
        android:id="@+id/linearlayou1"
        android:layout_width="350dp"
        android:layout_height="570dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <com.example.han.referralproject.imageview.CircleImageView
            android:id="@+id/per_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:src="@drawable/avatar_placeholder" />

        <TextView
            android:id="@+id/per_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="用户"
            android:textColor="#333333"
            android:textSize="30sp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额"
                android:textColor="#999999"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:text="¥0"
                android:textColor="#333333"
                android:textSize="30sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签约状态"
                android:textColor="#999999"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/doctor_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:text="未签约"
                android:textColor="#FF5A5A"
                android:textSize="30sp" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签约医生"
                android:textColor="#999999"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:text="暂无"
                android:textColor="#333333"
                android:textSize="30sp" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlayou2"
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/linearlayou1"
        android:background="#FFFFFF"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="健康工具"
            android:textColor="#999999"
            android:textSize="30sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_check"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:clickable="true"
                    android:background="@drawable/zhengzhuang_set" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="症状自查"
                    android:textColor="#333333"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_record"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/celiang_set" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="测量历史"
                    android:textColor="#333333"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_message"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:clickable="true"
                    android:background="@drawable/jianyi_set" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="医生建议"
                    android:textColor="#333333"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_alarm"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:clickable="true"
                    android:background="@drawable/chiyao_set"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="吃药提醒"
                    android:textColor="#333333"
                    android:textSize="30sp" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="健康生活"
            android:textColor="#999999"
            android:textSize="30sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_pay"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:clickable="true"
                    android:background="@drawable/zhanghu_set" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="账户充值"
                    android:textColor="#333333"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_shopping"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:clickable="true"
                    android:background="@drawable/jiankang_set"/>


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="健康课堂"
                    android:textColor="#333333"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_order"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:clickable="true"
                    android:background="@drawable/dingdan_set"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="我的订单"
                    android:textColor="#333333"
                    android:textSize="30sp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/view_change"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:gravity="center"
        android:text="切换账户"
        android:textColor="#999999"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/view_wifi"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_wifi"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:visibility="gone">

        <View
            android:id="@+id/view_health"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:background="@drawable/icon_health" />

        <View
            android:id="@+id/btn_record"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_history" />

        <View
            android:id="@+id/btn_logout"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_account" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="检查更新"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:textColor="#999999"/>
</RelativeLayout>
