<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_task_prompt_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/common_icon_back"/>

    <TextView
        android:id="@+id/tv_task_prompt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:text=""
        android:textSize="36sp"
        android:textColor="@color/config_color_base_3"/>

    <TextView
        android:id="@+id/tv_task_prompt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_task_prompt_title"
        android:text=""
        android:textSize="36sp"
        android:textColor="@color/config_color_base_3"/>

    <ImageView
        android:layout_width="132dp"
        android:layout_height="150dp"
        android:layout_marginBottom="184dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/img_task_prompt_left"/>

    <ImageView
        android:layout_width="384dp"
        android:layout_height="390dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/img_task_prompt_robot"/>

    <ImageView
        android:layout_width="132dp"
        android:layout_height="150dp"
        android:layout_marginBottom="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/img_task_prompt_right"/>

</RelativeLayout>
