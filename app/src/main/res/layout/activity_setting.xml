<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.gcml.common.widget.toolbar.TranslucentToolBar
        android:id="@+id/tb_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_setting_wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/common_bg_menu_setting"
                android:drawableRight="@drawable/common_ic_more"
                android:padding="24dp"
                android:text="WIFI设置"
                android:textColor="#333333"
                android:textSize="28sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#DDDDDD" />

            <TextView
                android:id="@+id/tv_setting_voice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/common_bg_menu_setting"
                android:drawableRight="@drawable/common_ic_more"
                android:padding="24dp"
                android:text="音量设置"
                android:textColor="#333333"
                android:textSize="28sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#DDDDDD" />

            <View
                android:layout_width="match_parent"
                android:layout_height="32pt"
                android:background="#FFF5F5F5" />

            <TextView
                android:id="@+id/tv_setting_keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/common_bg_menu_setting"
                android:drawableRight="@drawable/common_ic_more"
                android:padding="24dp"
                android:text="关键词设置"
                android:textColor="#333333"
                android:textSize="28sp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#DDDDDD"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_setting_informant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/common_bg_menu_setting"
                android:drawableRight="@drawable/common_ic_more"
                android:padding="24dp"
                android:text="发音人设置"
                android:textColor="#333333"
                android:textSize="28sp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#DDDDDD"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_setting_talktype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/common_bg_menu_setting"
                android:drawableRight="@drawable/common_ic_more"
                android:padding="24dp"
                android:text="聊天模式设置"
                android:textColor="#333333"
                android:textSize="28sp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#DDDDDD"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_setting_clearcache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/common_bg_menu_setting"
                android:drawableRight="@drawable/common_ic_more"
                android:padding="24dp"
                android:text="清除缓存"
                android:textColor="#333333"
                android:textSize="28sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#DDDDDD" />

            <TextView
                android:id="@+id/tv_setting_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/common_bg_menu_setting"
                android:drawableRight="@drawable/common_ic_more"
                android:padding="24dp"
                android:text="检查更新"
                android:textColor="#333333"
                android:textSize="28sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="#f5f5f5" />

            <TextView
                android:id="@+id/tv_setting_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/common_bg_menu_setting"
                android:drawableRight="@drawable/common_ic_more"
                android:padding="24dp"
                android:text="关于"
                android:textColor="#333333"
                android:textSize="28sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#DDDDDD" />

            <View
                android:layout_width="match_parent"
                android:layout_height="32pt"
                android:background="#FFF5F5F5" />

            <TextView
                android:id="@+id/tv_setting_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/common_bg_menu_setting"
                android:drawableRight="@drawable/common_ic_more"
                android:padding="24dp"
                android:text="恢复出厂设置"
                android:textColor="#333333"
                android:textSize="28sp" />

            <View
                android:id="@+id/line_setting_reset"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#DDDDDD"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="32pt"
                android:background="#FFF5F5F5" />

            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/common_bg_menu_setting"
                android:gravity="center"
                android:padding="24dp"
                android:text="退出当前医生账号"
                android:textColor="#fff43e37"
                android:textSize="28sp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>


