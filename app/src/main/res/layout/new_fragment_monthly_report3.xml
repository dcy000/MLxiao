<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="562pt"
        android:layout_height="match_parent"
        android:layout_margin="32pt"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40pt"
            android:layout_marginTop="40pt"
            android:text="健康分析"
            android:textColor="#333"
            android:textSize="56pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40pt"
            android:layout_marginTop="60pt"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:background="#49DF84"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16pt"
                android:text="目标值"
                android:textColor="#333"
                android:textSize="48pt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40pt"
            android:layout_marginTop="32pt"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:background="#FF5747"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16pt"
                android:text="实际值"
                android:textColor="#333"
                android:textSize="48pt" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="1262pt"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_margin="32pt"
        android:background="@color/white"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="394pt"
            android:paddingTop="30pt"
            android:layout_marginLeft="40pt"
            android:paddingBottom="24pt">
            <RadioButton
                android:id="@+id/rb_first"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="第一周"
                android:button="@null"
                android:gravity="center"
                android:drawableBottom="@drawable/radiobutton_bottom_blue_line"
                android:drawablePadding="16pt"
                android:textSize="64pt"
                android:textColor="@drawable/radiobutton_bottom_blue_line"/>
            <RadioButton
                android:id="@+id/rb_second"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="第二周"
                android:button="@null"
                android:gravity="center"
                android:drawableBottom="@drawable/radiobutton_bottom_blue_line"
                android:drawablePadding="16pt"
                android:textSize="64pt"
                android:textColor="@drawable/radiobutton_bottom_blue_line"/>
            <RadioButton
                android:id="@+id/rb_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="第三周"
                android:button="@null"
                android:gravity="center"
                android:drawableBottom="@drawable/radiobutton_bottom_blue_line"
                android:drawablePadding="16pt"
                android:textSize="64pt"
                android:textColor="@drawable/radiobutton_bottom_blue_line"/>
            <RadioButton
                android:id="@+id/rb_four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="第四周"
                android:button="@null"
                android:gravity="center"
                android:drawableBottom="@drawable/radiobutton_bottom_blue_line"
                android:drawablePadding="16pt"
                android:textSize="64pt"
                android:textColor="@drawable/radiobutton_bottom_blue_line"
                />
        </RadioGroup>
        <!--表格-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="39pt"
            android:layout_marginRight="39pt"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:background="@color/line3" />
            <!--第一行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="116pt"
                android:background="#eee"
                android:orientation="horizontal">

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />

                <TextView
                    android:layout_width="256pt"
                    android:layout_height="match_parent"
                    android:text="" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />

                <TextView
                    android:layout_width="230pt"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="盐(g)"
                    android:textColor="#333"
                    android:textSize="48pt" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />

                <TextView
                    android:layout_width="231pt"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="运动(min)"
                    android:textColor="#333"
                    android:textSize="48pt" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />

                <TextView
                    android:layout_width="230pt"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="体重(kg)"
                    android:textColor="#333"
                    android:textSize="48pt" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />

                <TextView
                    android:layout_width="231pt"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="饮酒(ml)"
                    android:textColor="#333"
                    android:textSize="48pt" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:background="@color/line3" />
            <!--第二行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="116pt"
                android:orientation="horizontal">

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />

                <TextView
                    android:layout_width="256pt"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="生活目标"
                    android:textColor="#333"
                    android:textSize="48pt" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />

                <TextView
                    android:id="@+id/tab_mb_yan"
                    android:layout_width="230pt"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#333"
                    android:textSize="56pt"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />

                <TextView
                    android:id="@+id/tab_mb_yundong"
                    android:layout_width="231pt"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#333"
                    android:textSize="56pt"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />

                <TextView
                    android:id="@+id/tab_mb_tizhong"
                    android:layout_width="230pt"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#333"
                    android:textSize="56pt"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />

                <TextView
                    android:id="@+id/tab_mb_yinjiu"
                    android:layout_width="231pt"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#333"
                    android:textSize="56pt"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:background="@color/line3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="116pt"
                android:orientation="horizontal">

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />

                <TextView
                    android:layout_width="256pt"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="实际情况"
                    android:textColor="#333"
                    android:textSize="48pt" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />

                <TextView
                    android:id="@+id/tab_sj_yan"
                    android:layout_width="230pt"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#F4843E"
                    android:textSize="56pt"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />

                <TextView
                    android:id="@+id/tab_sj_yundong"
                    android:layout_width="231pt"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#F4843E"
                    android:textSize="56pt"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />

                <TextView
                    android:id="@+id/tab_sj_tizhong"
                    android:layout_width="230pt"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#F4843E"
                    android:textSize="56pt"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />

                <TextView
                    android:id="@+id/tab_sj_yinjiu"
                    android:layout_width="231pt"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#F4843E"
                    android:textSize="56pt"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:background="@color/line3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="116pt"
                android:orientation="horizontal">

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />

                <TextView
                    android:layout_width="256pt"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="目标偏差"
                    android:textColor="#333"
                    android:textSize="48pt" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />

                <LinearLayout
                    android:layout_width="230pt"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_yan"
                        android:layout_width="32pt"
                        android:layout_height="44pt" />

                    <TextView
                        android:id="@+id/pc_yan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8pt"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FF5747"
                        android:textSize="56pt"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />

                <LinearLayout
                    android:layout_width="231pt"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_yundong"
                        android:layout_width="32pt"
                        android:layout_height="44pt" />

                    <TextView
                        android:id="@+id/pc_yundong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8pt"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FF5747"
                        android:textSize="56pt"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />

                <LinearLayout
                    android:layout_width="230pt"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_tizhong"
                        android:layout_width="32pt"
                        android:layout_height="44pt" />

                    <TextView
                        android:id="@+id/pc_tizhong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8pt"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FF5747"
                        android:textSize="56pt"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />

                <LinearLayout
                    android:layout_width="231pt"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_yinjiu"
                        android:layout_width="32pt"
                        android:layout_height="44pt" />

                    <TextView
                        android:id="@+id/pc_yinjiu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8pt"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FF5747"
                        android:textSize="56pt"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line3" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:background="@color/line3" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50pt"
            android:layout_marginTop="30pt"
            android:text="完成进度"
            android:textColor="#333"
            android:textSize="56pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8pt">
            <com.example.han.referralproject.view.progress.RxTextRoundProgressBar
                android:id="@+id/rpb_sum"
                app:rcBackgroundColor="#eee"
                app:rcMax="100"
                app:rcProgress="0"
                app:rcProgressColor="#F78237"
                app:rcRadius="20pt"
                app:rcTextProgressMargin="10dp"
                android:layout_width="1011pt"
                android:layout_height="40pt"
                android:layout_marginLeft="40pt" />
            <TextView
                android:id="@+id/tv_progress3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="40pt"
                android:text="72%"
                android:textColor="#333"
                android:textSize="72pt"
                android:textStyle="bold"
                android:layout_marginLeft="24pt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="24pt">
            <TextView
                android:id="@+id/treatment_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape"
                android:text="治疗方案"
                android:textColor="@color/white"
                android:paddingTop="28pt"
                android:paddingBottom="28pt"
                android:paddingLeft="88pt"
                android:paddingRight="88pt"
                android:textSize="56pt"
                android:clickable="true"/>
            <TextView
                android:id="@+id/view_competion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape"
                android:text="查看完成"
                android:textColor="@color/white"
                android:paddingTop="28pt"
                android:paddingBottom="28pt"
                android:paddingLeft="88pt"
                android:paddingRight="88pt"
                android:textSize="56pt"
                android:layout_marginLeft="44pt"
                android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>

    <com.github.mikephil.charting.charts.RadarChart
        android:id="@+id/chart"
        android:layout_width="600pt"
        android:layout_height="600pt"
        android:layout_alignParentBottom="true" />
</RelativeLayout>