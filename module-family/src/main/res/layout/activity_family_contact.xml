<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <com.gcml.common.widget.toolbar.TranslucentToolBar
        android:id="@+id/tb_family_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:padding="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_content_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <com.gcml.lib_widget.CircleImageView
                android:id="@+id/iv_user_icon"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:clickable="true"
                android:src="@drawable/avatar_placeholder" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="用户"
                android:textColor="#333333"
                android:textSize="32sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_content_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="16dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:layout_gravity="center_horizontal"
                android:text="个人信息"
                android:textColor="@color/config_color_base_3"
                android:textSize="32sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:gravity="center"
                    android:text="手机号码"
                    android:textColor="@color/config_color_base_9"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/tv_user_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:text="18310081008"
                    android:textColor="@color/config_color_base_3"
                    android:textSize="28sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:gravity="center"
                    android:text="年龄"
                    android:textColor="@color/config_color_base_9"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/tv_user_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:text="26岁"
                    android:textColor="@color/config_color_base_3"
                    android:textSize="28sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:gravity="center"
                    android:text="城市"
                    android:textColor="@color/config_color_base_9"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/tv_user_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:text="浙江省杭州市"
                    android:textColor="@color/config_color_base_3"
                    android:textSize="28sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_friend_lable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24sp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:gravity="center"
                    android:text="列表位置"
                    android:textColor="@color/config_color_base_9"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/tv_family_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:text="家人列表"
                    android:textColor="@color/config_color_base_3"
                    android:textSize="28sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_family_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/common_bg_next_btn"
                    android:layout_marginBottom="40dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingRight="54dp"
                    android:paddingLeft="54dp"
                    android:text="添加"
                    android:textColor="@color/config_color_white"
                    android:textSize="28sp" />

                <RelativeLayout
                    android:id="@+id/rl_friend_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="40dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_family_sure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_family_sure"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingRight="54dp"
                        android:paddingLeft="54dp"
                        android:text="同意"
                        android:textColor="@color/config_color_white"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/tv_family_false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_family_sure"
                        android:layout_marginLeft="88dp"
                        android:background="@drawable/btn_family_false"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingRight="54dp"
                        android:paddingLeft="54dp"
                        android:text="拒绝"
                        android:textColor="@color/config_color_white"
                        android:textSize="28sp" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

