<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="841pt"
        android:layout_height="770pt"
        android:background="@drawable/ic_fragment_notice_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="59pt"
        android:layout_marginTop="100pt"
        android:text="温馨提示"
        android:textColor="#333333"
        android:textSize="64pt"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tip_content"
        android:layout_width="1200pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="36pt"
        android:text="您好，根据系统中显示的3次数据判定，您血压偏低，现系统正为您生成预防高血压方案。"
        android:textColor="#666666"
        android:textSize="56pt"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80pt"
        android:background="@drawable/bg_notice_btn"
        android:paddingBottom="22pt"
        android:paddingLeft="38pt"
        android:paddingRight="38pt"
        android:paddingTop="22pt"
        android:text="生成健康方案(关闭5S)"
        android:textColor="#FFFFFF"
        android:textSize="48pt"
        app:layout_constraintStart_toStartOf="@+id/tv_tip_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_tip_content"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>