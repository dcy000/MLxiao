<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl1"
        android:layout_width="976pt"
        android:layout_height="314pt"
        android:background="@drawable/bluetooth_bg_measure_corner"
        app:layout_constraintBottom_toTopOf="@+id/cl2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32pt"
            android:text="哮喘严重程度(PEF)"
            android:textColor="#333"
            android:textSize="56pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28pt"
            android:text="≥80%"
            android:textColor="#28DA6B"
            android:textSize="64pt"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/title1_2"
            app:layout_constraintTop_toBottomOf="@id/title1" />

        <TextView
            android:id="@+id/title1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28pt"
            android:text="&lt;80%"
            android:textColor="#FF6100"
            android:textSize="64pt"
            app:layout_constraintLeft_toRightOf="@id/title1_1"
            app:layout_constraintRight_toLeftOf="@+id/title1_3"
            app:layout_constraintTop_toBottomOf="@id/title1" />

        <TextView
            android:id="@+id/title1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28pt"
            android:text="&lt;60%"
            android:textColor="#FF3030"
            android:textSize="64pt"
            app:layout_constraintLeft_toRightOf="@id/title1_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32pt"
            android:layout_marginLeft="70pt"
            android:text="正常"
            android:textColor="#333"
            android:textSize="48pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32pt"
            android:text="警告"
            android:textColor="#333"
            android:textSize="48pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/title1_2"
            app:layout_constraintRight_toRightOf="@id/title1_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32pt"
            android:layout_marginRight="70pt"
            android:text="危险"
            android:textColor="#333"
            android:textSize="48pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl2"
        android:layout_width="976pt"
        android:layout_height="314pt"
        android:layout_marginTop="32pt"
        android:background="@drawable/bluetooth_bg_measure_corner"
        app:layout_constraintBottom_toTopOf="@+id/cl3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl1">

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32pt"
            android:text="阻塞指数(FEV1)"
            android:textColor="#333"
            android:textSize="56pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56pt"
            android:layout_marginTop="28pt"
            android:text="≥80%"
            android:textColor="#28DA6B"
            android:textSize="64pt"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/title2_2"
            app:layout_constraintTop_toBottomOf="@id/title2" />

        <TextView
            android:id="@+id/title2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;80%"
            android:textSize="64pt"
            android:textColor="#FF6100"
            android:layout_marginTop="28pt"
            app:layout_constraintTop_toBottomOf="@id/title2"
            app:layout_constraintLeft_toRightOf="@id/title2_1"
            app:layout_constraintRight_toLeftOf="@+id/title2_3"/>
        <TextView
            android:id="@+id/title2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="56pt"
            android:layout_marginTop="28pt"
            android:text="&lt;30%"
            android:textColor="#FF3030"
            android:textSize="64pt"
            app:layout_constraintLeft_toRightOf="@id/title2_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32pt"
            android:layout_marginLeft="70pt"
            android:text="正常"
            android:textColor="#333"
            android:textSize="48pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32pt"
            android:text="警告"
            android:textColor="#333"
            android:textSize="48pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/title2_2"
            app:layout_constraintRight_toRightOf="@id/title2_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32pt"
            android:layout_marginRight="70pt"
            android:text="重度"
            android:textColor="#333"
            android:textSize="48pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl3"
        android:layout_width="976pt"
        android:layout_height="314pt"
        android:layout_marginTop="32pt"
        android:background="@drawable/bluetooth_bg_measure_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl2">

        <TextView
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32pt"
            android:text="COPD分级(FEV1/FVC)"
            android:textColor="#333"
            android:textSize="56pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#28DA6B"
            android:textSize="64pt"
            android:text="&gt;70%"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title3"
            android:layout_marginTop="28pt"
            android:layout_marginLeft="56pt"/>
        <TextView
            android:id="@+id/title3_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF6100"
            android:textSize="64pt"
            android:text="&lt;70%"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title3"
            android:layout_marginTop="28pt"
            android:layout_marginRight="56pt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32pt"
            android:layout_marginLeft="70pt"
            android:text="正常"
            android:textColor="#333"
            android:textSize="48pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32pt"
            android:layout_marginRight="70pt"
            android:text="警告"
            android:textColor="#333"
            android:textSize="48pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>




    <include
        android:id="@+id/bottom_btn"
        layout="@layout/bluetooth_layout_two_button" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/cl5"
        app:layout_constraintLeft_toLeftOf="@id/bottom_btn"
        app:layout_constraintRight_toRightOf="@id/bottom_btn"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_gaoya"
            android:layout_width="240pt"
            android:layout_height="160pt"
            android:background="@drawable/celiang_shape"
            android:gravity="center"
            android:text="0"
            android:textColor="#333"
            android:textSize="100pt"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@+id/tv_gaoya_percent"/>
        <TextView
            android:id="@+id/tv_gaoya_percent"
            android:layout_width="240pt"
            android:layout_height="160pt"
            android:background="@drawable/celiang_shape"
            android:text="0%"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="100pt"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/tv_gaoya"
            android:layout_marginLeft="32pt"/>

        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="48pt"
            android:text="流量值"
            android:textColor="#333"
            android:textSize="72pt"
            app:layout_constraintBottom_toBottomOf="@id/tv_gaoya"
            app:layout_constraintRight_toLeftOf="@id/tv_gaoya"
            app:layout_constraintTop_toTopOf="@id/tv_gaoya" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(PEF)"
            android:textColor="#999"
            android:textSize="40pt"
            app:layout_constraintLeft_toLeftOf="@id/tv_title1"
            app:layout_constraintRight_toRightOf="@id/tv_title1"
            app:layout_constraintTop_toBottomOf="@id/tv_title1" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/cl6"
        app:layout_constraintLeft_toLeftOf="@id/bottom_btn"
        app:layout_constraintRight_toRightOf="@id/bottom_btn"
        app:layout_constraintTop_toBottomOf="@id/cl4">

        <TextView
            android:id="@+id/tv_diya"
            android:layout_width="240pt"
            android:layout_height="160pt"
            android:background="@drawable/celiang_shape"
            android:gravity="center"
            android:text="0.00"
            android:textColor="#333"
            android:textSize="100pt"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@+id/tv_diya_percent" />
        <TextView
            android:id="@+id/tv_diya_percent"
            android:layout_width="240pt"
            android:layout_height="160pt"
            android:background="@drawable/celiang_shape"
            android:text="0%"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="100pt"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/tv_diya"
            android:layout_marginLeft="32pt"/>

        <TextView
            android:id="@+id/tv_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="48pt"
            android:text="呼气量"
            android:textColor="#333"
            android:textSize="72pt"
            app:layout_constraintBottom_toBottomOf="@id/tv_diya"
            app:layout_constraintRight_toLeftOf="@id/tv_diya"
            app:layout_constraintTop_toTopOf="@id/tv_diya" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(FEV1)"
            android:textColor="#999"
            android:textSize="40pt"
            app:layout_constraintLeft_toLeftOf="@id/tv_title2"
            app:layout_constraintRight_toRightOf="@id/tv_title2"
            app:layout_constraintTop_toBottomOf="@id/tv_title2" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/bottom_btn"
        app:layout_constraintLeft_toLeftOf="@id/bottom_btn"
        app:layout_constraintRight_toRightOf="@id/bottom_btn"
        app:layout_constraintTop_toBottomOf="@id/cl5">

        <TextView
            android:id="@+id/tv_maibo"
            android:layout_width="240pt"
            android:layout_height="160pt"
            android:background="@drawable/celiang_shape"
            android:gravity="center"
            android:text="0.00"
            android:textColor="#333"
            android:textSize="100pt"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@+id/tv_maibo_percent"/>
        <TextView
            android:id="@+id/tv_maibo_percent"
            android:layout_width="240pt"
            android:layout_height="160pt"
            android:background="@drawable/celiang_shape"
            android:text="0%"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="100pt"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/tv_maibo"
            android:layout_marginLeft="32pt"/>
        <TextView
            android:id="@+id/tv_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="48pt"
            android:text="肺活量"
            android:textColor="#333"
            android:textSize="72pt"
            app:layout_constraintBottom_toBottomOf="@id/tv_maibo"
            app:layout_constraintRight_toLeftOf="@id/tv_maibo"
            app:layout_constraintTop_toTopOf="@id/tv_maibo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(FVC)"
            android:textColor="#999"
            android:textSize="40pt"
            app:layout_constraintLeft_toLeftOf="@id/tv_title3"
            app:layout_constraintRight_toRightOf="@id/tv_title3"
            app:layout_constraintTop_toBottomOf="@id/tv_title3" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>