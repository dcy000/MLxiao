<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff5f5f5"
    tools:context="com.example.han.referralproject.recyclerview.DoctorappoActivity">


    <LinearLayout
        android:id="@+id/linearlayou1"
        android:layout_width="608pt"
        android:layout_height="1008pt"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        android:orientation="vertical">


        <com.example.han.referralproject.imageview.CircleImageView
            android:id="@+id/circleImageView1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:src="@drawable/avatar_placeholder" />

        <TextView
            android:id="@+id/docotor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="赵曼林"
            android:textColor="#333333"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/docotor_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/zhiji"
            android:textColor="#333333"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/docotor_feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/shanchang"
            android:textColor="#333333"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/service_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/shoufei"
            android:textColor="#3F86FC"
            android:textSize="30sp" />

    </LinearLayout>


    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="1216pt"
        android:layout_height="570dp"
        android:layout_below="@+id/linearlayou"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/linearlayou1"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约时间"
                android:textColor="#999999"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/yuyue_lishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:clickable="true"
                android:text="预约历史"
                android:textColor="#333333"
                android:textSize="30sp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/yuyue_lishi"
                android:layout_marginTop="10dp"
                android:src="#BBBBBB" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/linearlayou7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/yuyue_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="#8c8c8c"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="45dp"
                android:src="#8c8c8c" />


            <TextView
                android:id="@+id/yuyue_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="#8c8c8c"
                android:textSize="25sp" />


            <Button
                android:id="@+id/cancel_yuyue"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@null"
                android:gravity="center"
                android:text="取消预约"
                android:textColor="#FFFF9A5D"
                android:textSize="25sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearlayou8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/yuyue_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="#8c8c8c"
                android:textSize="25sp" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="45dp"
                android:src="#8c8c8c" />


            <TextView
                android:id="@+id/yuyue_time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="#8c8c8c"
                android:textSize="25sp" />


            <Button
                android:id="@+id/cancel_yuyue1"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@null"
                android:gravity="center"
                android:text="取消预约"
                android:textColor="#FFFF9A5D"
                android:textSize="25sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearlayou9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/yuyue_time4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="#8c8c8c"
                android:textSize="25sp" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="45dp"
                android:src="#8c8c8c" />


            <TextView
                android:id="@+id/yuyue_time5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="#8c8c8c"
                android:textSize="25sp" />


            <Button
                android:id="@+id/cancel_yuyue2"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@null"
                android:gravity="center"
                android:text="取消预约"
                android:textColor="#FFFF9A5D"
                android:textSize="25sp" />


        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/call_doctor"
        android:layout_width="320pt"
        android:layout_height="120pt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="695pt"
        android:background="@drawable/video_selector"
        android:gravity="center"
        android:text="视频医生"
        android:textColor="#FFFFFF"
        android:textSize="56pt" />


    <Button
        android:id="@+id/add_yuyue"
        android:layout_width="320pt"
        android:layout_height="120pt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="199pt"
        android:background="@drawable/add_yuyues_set"
        android:gravity="center"
        android:text="添加预约"
        android:textColor="#FFFFFF"
        android:textSize="56pt" />


</RelativeLayout>
