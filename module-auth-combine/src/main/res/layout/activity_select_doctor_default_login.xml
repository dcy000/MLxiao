<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.gcml.common.widget.toolbar.TranslucentToolBar
        android:id="@+id/tb_select_doctor_default_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="170pt">

        <RelativeLayout
            android:id="@+id/rl_face_login"
            android:layout_width="468pt"
            android:layout_height="648pt">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_select_login_face" />

            <ImageView
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="40pt"
                android:layout_marginTop="24pt"
                android:background="@drawable/bg_select_login_select" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_account_login"
            android:layout_width="468pt"
            android:layout_height="648pt"
            android:layout_marginLeft="-10pt">

            <ImageView
                android:layout_width="468pt"
                android:layout_height="648pt"
                android:background="@drawable/bg_select_login_account" />

            <ImageView
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="40pt"
                android:layout_marginTop="24pt"
                android:background="@drawable/bg_select_login_select" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>