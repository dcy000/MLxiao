<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180pt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180pt"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1">

            <com.gcml.lib_widget.CircleImageView
                android:id="@+id/item_iv_head"
                android:layout_width="160pt"
                android:layout_height="160pt"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/item_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="36pt"
                android:layout_toRightOf="@+id/item_iv_head"
                android:gravity="center"
                android:text="郭志强"
                android:textColor="#ff303133"
                android:textSize="56pt" />

            <TextView
                android:id="@+id/tv_item_type"
                android:layout_width="192pt"
                android:layout_height="68pt"
                android:layout_centerVertical="true"
                android:layout_marginLeft="36pt"
                android:layout_toRightOf="@+id/item_tv_name"
                android:background="@drawable/bg_shape_guardian_item"
                android:gravity="center"
                android:textColor="#ff3f86fc"
                android:textSize="40pt"
                tools:text="签约医生" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="36pt"
                android:layout_toLeftOf="@+id/tv_item_phoe"
                android:gravity="center_vertical"
                android:text="手机: "
                android:textColor="#ff666666"
                android:textSize="56pt" />

            <TextView
                android:id="@+id/tv_item_phoe"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="18655212892"
                android:textColor="#ff666666"
                android:textSize="56pt" />


        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>