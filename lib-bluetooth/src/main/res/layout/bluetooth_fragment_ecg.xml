<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluetooth_bg_ecg">

    <!--<com.borsam.ble.widget.ECGSingleGuideView-->
    <!--android:id="@+id/ecgView"-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="0dp"-->
    <!--app:layout_constraintBottom_toBottomOf="parent"-->
    <!--app:layout_constraintLeft_toLeftOf="parent"-->
    <!--app:layout_constraintRight_toRightOf="parent"-->
    <!--app:layout_constraintTop_toTopOf="parent" />-->
    <com.gcml.module_blutooth_devices.ecg_devices.ECGSingleGuideView
        android:id="@+id/ecgView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/measure_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="60pt"
        android:layout_marginTop="60pt"
        android:text="距离测量结束还有**s"
        android:textColor="@color/bluetooth_white"
        android:textSize="56pt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60pt"
        android:layout_marginTop="60pt"
        android:text="检测设备：博声心电仪"
        android:textColor="@color/bluetooth_white"
        android:textSize="56pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_change_device"
        android:layout_width="260pt"
        android:layout_height="100pt"
        android:layout_marginLeft="60pt"
        android:layout_marginTop="40pt"
        android:background="@drawable/health_measure_change_ecg_device"
        android:gravity="center"
        android:text="切换"
        android:textColor="@color/bluetooth_white"
        android:textSize="56pt"
        app:layout_constraintLeft_toRightOf="@id/tv_device_name"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/bottom_btn"
        layout="@layout/bluetooth_layout_two_button" />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="320pt"
        android:layout_height="120pt"
        android:layout_marginBottom="100pt"
        android:layout_marginRight="100pt"
        android:background="@drawable/bluetooth_btn_health_history_set"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#FFFFFF"
        android:textSize="56pt"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>