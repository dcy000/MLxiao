<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/lastweek_trend_fl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/conclusion"
        app:layout_constraintTop_toTopOf="parent"
        >

    </FrameLayout>
    <TextView
        android:id="@+id/conclusion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/follow_the_specific_plan"
        android:textColor="#333"
        android:textSize="56pt"
        android:gravity="center"
        android:layout_marginBottom="117pt"
        android:layout_marginLeft="60pt"
        android:layout_marginRight="60pt"/>
</android.support.constraint.ConstraintLayout>