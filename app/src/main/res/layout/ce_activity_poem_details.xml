<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5595FF"
    tools:context="com.example.han.referralproject.children.study.ChildEduPoemDetailsActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ce_poem_details_cl_poem"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="98dp"
        android:layout_marginRight="98dp"
        android:layout_marginTop="45dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ce_poem_details_tv_poem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#333333"
            android:textSize="36sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="寻隐者不遇"/>

        <TextView
            android:id="@+id/ce_poem_details_tv_poem_author_and_dynasty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:textColor="#999999"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ce_poem_details_tv_poem_title"
            tools:text="加到·糖"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ce_poem_details_rv_poem_sentences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ce_poem_details_tv_poem_author_and_dynasty"/>

        <TextView
            android:id="@+id/ce_poem_details_tv_read_again"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/ce_poem_details_tv_read_again"
            android:gravity="center"
            android:text="重读"
            android:textColor="#333333"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/ce_poem_details_tv_last_sentence"
            android:layout_width="135dp"
            android:layout_height="90dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/ce_poem_details_tv_read_again"
            android:gravity="center"
            android:text="下一句"
            android:textColor="#333333"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/ce_poem_details_tv_next_sentence"
            android:layout_width="135dp"
            android:layout_height="90dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/ce_poem_details_tv_read_again"
            android:gravity="center"
            android:text="上一句"
            android:textColor="#333333"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@+id/ce_poem_details_tv_last_sentence"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
