<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_doctor_info"
        android:layout_width="608pt"
        android:layout_height="998pt"
        android:layout_marginLeft="32pt"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cl_doctor_info"
        app:layout_constraintTop_toTopOf="parent">

        <com.gcml.lib_widget.imageview.CircleImageView
            android:id="@+id/iv_doctor_avatar"
            android:layout_width="300pt"
            android:layout_height="300pt"
            android:layout_marginTop="58pt"
            android:src="@drawable/avatar_placeholder"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18pt"
            android:textColor="#333333"
            android:textSize="60pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_doctor_avatar"
            tools:text="韩琦琦"/>

        <TextView
            android:id="@+id/tv_professional_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32pt"
            android:layout_marginTop="496pt"
            tools:text="职    级："
            android:textColor="#999999"
            android:textSize="60pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="496pt"
            tools:text="主治医师"
            android:textColor="#333333"
            android:textSize="60pt"
            app:layout_constraintBottom_toBottomOf="@+id/tv_professional_rank"
            app:layout_constraintLeft_toRightOf="@+id/tv_professional_rank"/>

        <TextView
            android:id="@+id/tv_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32pt"
            android:layout_marginTop="38pt"
            tools:text="擅    长："
            android:textColor="#999999"
            android:textSize="60pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_professional_rank"/>

        <TextView
            android:layout_width="240pt"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="60pt"
            app:layout_constraintLeft_toRightOf="@+id/tv_good"
            app:layout_constraintTop_toTopOf="@+id/tv_good"
            tools:text="高血压、糖尿病"/>

        <TextView
            android:id="@+id/tv_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32pt"
            android:layout_marginTop="38pt"
            tools:text="收费标准："
            android:textColor="#999999"
            android:textSize="60pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_good"/>

        <TextView
            android:layout_width="300pt"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textColor="#3F86FC"
            android:textSize="60pt"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/tv_service"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_service"
            tools:text="10元/分钟"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="1216pt"
        android:layout_height="998pt"
        android:layout_marginLeft="32pt"
        android:layout_marginRight="32pt"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cl_doctor_info"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_check_contract"
            android:layout_width="460pt"
            android:layout_height="444pt"
            android:layout_marginTop="150pt"
            android:src="@drawable/ic_check_contract"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32pt"
            android:text="等待医生审核中"
            android:textColor="#666666"
            android:textSize="44pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_check_contract"/>

        <TextView
            android:id="@+id/tv_cancel_contract"
            android:layout_width="300pt"
            android:layout_height="90pt"
            android:layout_marginBottom="100pt"
            android:background="@drawable/bg_cancel_contract"
            android:gravity="center"
            android:text="取消签约"
            android:textColor="#FFFFFF"
            android:textSize="44pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
