<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trans_content"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/config_color_appthema"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lay_actionbar_left"
        android:layout_width="188dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_actionbar_left"
            android:layout_width="22dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_actionbar_left"
            style="@style/text_white_32"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_actionbar_left"
            android:gravity="center_vertical"
            android:maxLength="2"
            android:singleLine="true"
            android:text="返回"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_actionbar_title"
        style="@style/text_white_36"
        android:layout_centerInParent="true"
        android:text="标 题" />

    <RelativeLayout
        android:id="@+id/lay_actionbar_right"
        android:layout_width="188dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_actionbar_right"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_actionbar_right"
            style="@style/text_white_32"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_actionbar_right"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>