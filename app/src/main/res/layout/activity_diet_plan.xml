<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f5f5f5">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="322pt"
            android:background="@color/white"
            android:layout_marginTop="32pt"
            android:layout_marginLeft="32pt"
            android:layout_marginRight="32pt"
            >
            <TextView
                android:id="@+id/intake_salt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999"
                android:textSize="56pt"
                android:text="每日食盐摄入"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/intake_oil"
                app:layout_constraintHorizontal_chainStyle="packed"
                />
            <TextView
                android:id="@+id/intake_oil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999"
                android:textSize="56pt"
                android:text="每日油脂摄入"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/intake_salt"
                app:layout_constraintRight_toLeftOf="@+id/intake_drink"
                android:layout_marginLeft="182pt"
                />
            <TextView
                android:id="@+id/intake_drink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999"
                android:textSize="56pt"
                android:text="每日饮酒"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/intake_oil"
                app:layout_constraintRight_toLeftOf="@+id/intake_smoke"
                android:layout_marginLeft="182pt"
                />
            <TextView
                android:id="@+id/intake_smoke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999"
                android:textSize="56pt"
                android:text="每日吸烟"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/intake_drink"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="237pt"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="48pt"
                app:layout_constraintLeft_toLeftOf="@id/intake_salt">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="少于"
                    android:textSize="56pt"
                    android:textColor="#333"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_salt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333"
                    android:textSize="140pt"
                    android:text="6g"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="48pt"
                app:layout_constraintLeft_toLeftOf="@id/intake_oil">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="少于"
                    android:textSize="56pt"
                    android:textColor="#333"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_oil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333"
                    android:textSize="140pt"
                    android:text="25g"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="48pt"
                app:layout_constraintLeft_toLeftOf="@id/intake_drink">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="少于"
                    android:textSize="56pt"
                    android:textColor="#333"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_drink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333"
                    android:textSize="140pt"
                    android:text="25ml"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="48pt"
                app:layout_constraintLeft_toLeftOf="@id/intake_smoke">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="少于"
                    android:textSize="56pt"
                    android:textColor="#333"
                    android:textStyle="bold"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tv_smoke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333"
                    android:textSize="100pt"
                    android:text="0"
                    android:textStyle="bold"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_margin="32pt">
            <TextView
                android:id="@+id/tv_tuijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐食物"
                android:textSize="56pt"
                android:textColor="#333"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="73pt"
                android:layout_marginLeft="40pt"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(每天至少食用两种食材)"
                android:textColor="#999"
                android:textSize="40pt"
                app:layout_constraintBottom_toBottomOf="@id/tv_tuijian"
                app:layout_constraintLeft_toRightOf="@id/tv_tuijian"
                android:layout_marginLeft="16pt"/>
            <TextView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="56pt"
                android:textColor="#666"
                android:text="更多"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_tuijian"
                android:paddingRight="40pt"
                android:paddingTop="73pt"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/food_material_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tuijian"
                android:layout_marginTop="40pt"/>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
