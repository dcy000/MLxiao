<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_1"
            android:layout_width="match_parent"
            android:layout_height="322pt"
            android:layout_marginLeft="32pt"
            android:layout_marginRight="32pt"
            android:layout_marginTop="32pt"
            android:background="@color/white">

            <TextView
                android:id="@+id/intake_salt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40pt"
                android:layout_marginTop="48pt"
                android:text="运动强度"
                android:textColor="#999"
                android:textSize="56pt"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/intake_oil"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/intake_oil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最大心率"
                android:textColor="#999"
                android:textSize="56pt"
                app:layout_constraintLeft_toRightOf="@id/intake_salt"
                app:layout_constraintRight_toLeftOf="@+id/intake_drink"
                app:layout_constraintTop_toTopOf="@id/intake_salt" />

            <TextView
                android:id="@+id/intake_drink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运动频率"
                android:textColor="#999"
                android:textSize="56pt"
                app:layout_constraintLeft_toRightOf="@id/intake_oil"
                app:layout_constraintRight_toLeftOf="@+id/intake_smoke"
                app:layout_constraintTop_toTopOf="@id/intake_salt" />

            <TextView
                android:id="@+id/intake_smoke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="95pt"
                android:text="每次运动时间"
                android:textColor="#999"
                android:textSize="56pt"
                app:layout_constraintLeft_toRightOf="@id/intake_drink"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/intake_salt" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48pt"
                android:layout_marginTop="40pt"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/intake_salt"
                app:layout_constraintTop_toBottomOf="@id/intake_salt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="较"
                    android:textColor="#333"
                    android:textSize="56pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/exercise_intensity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="低"
                    android:textColor="#333"
                    android:textSize="120pt"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48pt"
                android:layout_marginTop="40pt"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/intake_oil"
                app:layout_constraintTop_toBottomOf="@id/intake_salt">

                <TextView
                    android:id="@+id/maximum_heart_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="126"
                    android:textColor="#333"
                    android:textSize="140pt"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BPM"
                    android:textColor="#333"
                    android:textSize="56pt"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48pt"
                android:layout_marginTop="40pt"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/intake_drink"
                app:layout_constraintTop_toBottomOf="@id/intake_salt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一周"
                    android:textColor="#333"
                    android:textSize="56pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/exercise_frequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="#333"
                    android:textSize="140pt"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="次"
                    android:textColor="#333"
                    android:textSize="56pt"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48pt"
                android:layout_marginTop="40pt"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/intake_smoke"
                app:layout_constraintTop_toBottomOf="@id/intake_salt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大于"
                    android:textColor="#333"
                    android:textSize="56pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/run_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#333"
                    android:textSize="140pt"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="min"
                    android:textColor="#333"
                    android:textSize="56pt"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="32pt"
            android:background="@color/white"
            android:layout_below="@id/cl_1">

            <TextView
                android:id="@+id/tv_tuijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40pt"
                android:layout_marginTop="73pt"
                android:text="推荐运动项目"
                android:textColor="#333"
                android:textSize="56pt"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/more_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="40pt"
                android:paddingTop="73pt"
                android:text="更多"
                android:textColor="#666"
                android:textSize="56pt"
                app:layout_constraintBottom_toBottomOf="@id/tv_tuijian"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/exercise_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="40pt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tuijian" />
        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
