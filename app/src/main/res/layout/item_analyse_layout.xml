<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="350dp"
             android:layout_height="500dp"
             android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        tools:background="@drawable/bg_item_report0">

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textColor="#686868"
            android:textSize="35sp"
            tools:text="1、脑动脉供血不足"/>

        <View
            android:id="@+id/line_title"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            tools:background="#FFCEA130"
            android:layout_below="@id/tv_item_title"/>

        <TextView
            android:id="@+id/tv_item_probability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:textSize="30sp"
            android:visibility="gone"
            android:layout_below="@id/line_title"/>
        <TextView
            android:id="@+id/btn_details"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:text="查看详情"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_blue"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_item_deal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:textSize="30sp"
            tools:text="常见症状：头晕、脑血管供血不足、反复头晕"
            android:layout_below="@id/tv_item_probability"
            android:layout_above="@id/btn_details"/>

    </RelativeLayout>

</FrameLayout>