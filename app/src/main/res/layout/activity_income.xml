<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.han.referralproject.yiyuan.activity.DrinkInfoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60pt"
        android:layout_marginTop="90pt"
        android:text="您的家庭年收入是多少?"
        android:textColor="#FF333333"
        android:textSize="72pt" />

    <LinearLayout
        android:id="@+id/ll_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="66pt"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_less_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60pt"
            android:clickable="true"
            android:drawableLeft="@drawable/bg_huaiyun_set"
            android:drawablePadding="24pt"
            android:gravity="center"
            android:tag="0"
            android:text="少于10万"
            android:textColor="#666"
            android:textSize="72pt" />

        <TextView
            android:id="@+id/tv_less_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280pt"
            android:clickable="true"
            android:drawableLeft="@drawable/bg_huaiyun_set"
            android:drawablePadding="24pt"
            android:gravity="center"
            android:tag="1"
            android:text="10万~30万"
            android:textColor="#666"
            android:textSize="72pt" />

        <TextView
            android:id="@+id/tv_more_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280pt"
            android:clickable="true"
            android:drawableLeft="@drawable/bg_huaiyun_set"
            android:drawablePadding="24pt"
            android:gravity="center"
            android:tag="2"
            android:text="大于30万"
            android:textColor="#666"
            android:textSize="72pt" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="80pt">

        <TextView
            android:id="@+id/tv_sign_up_go_back"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:background="@drawable/bg_selector_btn_go_back"
            android:gravity="center"
            android:text="上一步"
            android:textColor="#3F85FC"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tv_sign_up_go_forward"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:background="@drawable/bg_selector_btn_go_forward"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@android:color/white"
            android:textSize="35sp" />

    </RelativeLayout>


</LinearLayout>
