<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/food_img"
        android:layout_width="330pt"
        android:layout_height="330pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <com.gcml.lib_widget.JustifyTextView
        android:id="@+id/food_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:textSize="48pt"
        app:layout_constraintLeft_toLeftOf="@id/food_img"
        app:layout_constraintRight_toRightOf="@id/food_img"
        app:layout_constraintTop_toBottomOf="@id/food_img"
        android:layout_marginTop="24pt"/>
</android.support.constraint.ConstraintLayout>