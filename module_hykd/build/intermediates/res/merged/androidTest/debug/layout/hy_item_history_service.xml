<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="40pt"
        android:layout_marginBottom="40pt">
        <View
            android:layout_width="24pt"
            android:layout_height="24pt"
            android:background="#3F86FC"
            android:layout_marginLeft="61pt"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textColor="#333"
            android:textSize="56pt"
            android:textStyle="bold"
            android:layout_marginLeft="24pt"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="#bbb"
        android:layout_marginLeft="57pt"
        android:layout_marginRight="63pt"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="48pt"
        android:textColor="#999"
        android:layout_marginLeft="57pt"
        android:layout_marginRight="63pt"
        android:layout_marginTop="35pt"
        android:layout_marginBottom="35pt"
        android:lineSpacingMultiplier="1.2"/>
</LinearLayout>