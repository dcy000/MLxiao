<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lrc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="64dp"
    android:paddingRight="64dp">

    <com.example.han.referralproject.new_music.AlbumCoverView
        android:id="@+id/mp_album_cover_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#00000000" />

    <me.wcy.lrcview.LrcView
        android:id="@+id/mp_lrc_view_single"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        lrc:lrcAnimationDuration="1000"
        lrc:lrcCurrentTextColor="@color/mp_white"
        lrc:lrcDividerHeight="10dp"
        lrc:lrcNormalTextColor="@color/mp_white"
        lrc:lrcTextSize="19sp" />
</LinearLayout>