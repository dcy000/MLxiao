<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="120pt"
    android:layout_centerVertical="true"
    android:background="@drawable/common_bg_input_gray"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_question_name"
        android:layout_width="392pt"
        android:layout_height="120pt"
        android:gravity="center_vertical"
        android:text="一级标题"
        android:textColor="#ff333333"
        android:textSize="56pt"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/rl_entry_box"
        android:layout_width="1300pt"
        android:layout_height="120pt"
        android:layout_centerVertical="true"
        android:background="@drawable/common_bg_input_gray"
        android:orientation="horizontal"
        android:paddingRight="20pt">

        <TextView
            android:id="@+id/tv_question_level2_name"
            android:layout_width="wrap_content"
            android:layout_height="120pt"
            android:layout_marginLeft="20pt"
            android:gravity="center_vertical"
            android:text="二级标题"
            android:textColor="#ff666666"
            android:textSize="56pt" />

        <View
            android:layout_width="2pt"
            android:layout_height="80pt"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30pt"
            android:background="#ffbbbbbb" />

        <EditText
            android:id="@+id/et_value"
            android:layout_width="0pt"
            android:layout_height="120pt"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingLeft="32pt"
            android:paddingRight="32pt"
            android:textSize="56pt" />

        <TextView
            android:id="@+id/tv_question_unit"
            android:layout_width="wrap_content"
            android:layout_height="120pt"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="单位"
            android:textColor="#ff333333"
            android:textSize="56pt" />
    </LinearLayout>

    <!--android:background="@drawable/bg_input_box_detect"-->
    <TextView
        android:id="@+id/tv_input_box_detect"
        android:layout_width="172pt"
        android:layout_height="120pt"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="40pt"
        android:background="#ff3f88fc"
        android:gravity="center"
        android:text="测量"
        android:textColor="#ffffffff"
        android:textSize="56pt" />
</LinearLayout>

