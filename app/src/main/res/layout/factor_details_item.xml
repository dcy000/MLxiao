<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_shadow">
    <TextView
        android:id="@+id/tv_headline_influencing_factors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="影响因素"
        android:textColor="#3F86FC"
        android:textSize="64pt"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56pt"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/decorate_left"
        app:layout_constraintRight_toLeftOf="@id/tv_headline_influencing_factors"
        app:layout_constraintTop_toTopOf="@id/tv_headline_influencing_factors"
        app:layout_constraintBottom_toBottomOf="@id/tv_headline_influencing_factors"
        android:layout_marginRight="12pt"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/decorate_right"
        app:layout_constraintLeft_toRightOf="@id/tv_headline_influencing_factors"
        app:layout_constraintTop_toTopOf="@id/tv_headline_influencing_factors"
        app:layout_constraintBottom_toBottomOf="@id/tv_headline_influencing_factors"
        android:layout_marginLeft="12pt"/>
    <TextView
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_dotted_line"
        android:layerType="software"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_headline_influencing_factors"
        android:layout_marginLeft="40pt"
        android:layout_marginRight="40pt"
        android:layout_marginTop="48pt"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="48pt"
        android:textColor="#666"
        app:layout_constraintTop_toBottomOf="@id/view_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="40pt"
        android:layout_marginLeft="40pt"
        android:layout_marginRight="40pt"
        android:layout_marginBottom="56pt"
        android:text=""
        />
</android.support.constraint.ConstraintLayout>