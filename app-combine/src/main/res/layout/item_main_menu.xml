<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="298pt"
    android:id="@+id/clMenuItem"
    android:layout_height="match_parent">

    <com.gcml.lib_widget.EclipseImageView
        android:id="@+id/ivMenuItem"
        android:layout_width="260pt"
        android:layout_height="260pt"
        android:background="@drawable/main_ic_menu_item"
        android:layout_marginBottom="16pt"
        app:layout_constraintBottom_toTopOf="@+id/tvMenuItem"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvMenuItem"
        android:text="健康测量"
        android:textSize="56pt"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMenuItem" />

</android.support.constraint.ConstraintLayout>