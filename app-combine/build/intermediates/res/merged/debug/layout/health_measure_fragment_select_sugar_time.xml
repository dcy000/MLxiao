<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <ImageView
        android:id="@+id/iv_empty_stomach"
        android:layout_width="518pt"
        android:layout_height="518pt"
        android:layout_margin="20pt"
        android:src="@drawable/health_measure_ic_sugar_empty_stomach"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_two_hours"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_two_hours"
        android:layout_width="518pt"
        android:layout_height="518pt"
        android:layout_margin="20pt"
        android:src="@drawable/health_measure_ic_sugar_two_hours"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_empty_stomach"
        app:layout_constraintRight_toLeftOf="@+id/iv_other_time"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_other_time"
        android:layout_width="518pt"
        android:layout_height="518pt"
        android:layout_margin="20pt"
        android:src="@drawable/health_measure_ic_sugar_other_time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_two_hours"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>