<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.gcml.common.widget.toolbar.TranslucentToolBar
        android:id="@+id/tb_auth_register_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="320pt"
        android:layout_height="320pt"
        android:layout_marginTop="100pt"
        android:background="#999" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40pt"
        android:text="注册成功"
        android:textColor="#FF3F86FC"
        android:textSize="64pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30pt"
        android:text="3秒后自动跳转到问诊建档界面"
        android:textColor="#FFBBBBBB"
        android:textSize="48pt" />

    <TextView
        android:id="@+id/tv_auth_register_success_complete"
        android:layout_width="320pt"
        android:layout_height="100pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200pt"
        android:background="@drawable/bg_btn"
        android:gravity="center"
        android:text="完成"
        android:textColor="#ffffffff"
        android:textSize="48pt" />


</LinearLayout>