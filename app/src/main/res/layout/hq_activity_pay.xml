<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/hq_pay_iv_count_500"
        android:layout_width="564pt"
        android:layout_height="290pt"
        android:layout_marginBottom="250pt"
        android:layout_marginLeft="60pt"
        android:src="@drawable/hq_pay_ic_iv_count_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/hq_pay_iv_count_50"
        android:layout_width="564pt"
        android:layout_height="290pt"
        android:layout_marginBottom="60pt"
        android:layout_marginLeft="60pt"
        android:src="@drawable/hq_pay_ic_iv_count_50"
        app:layout_constraintBottom_toTopOf="@+id/hq_pay_iv_count_500"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/hq_pay_iv_count_100"
        android:layout_width="564pt"
        android:layout_height="290pt"
        android:src="@drawable/hq_pay_ic_iv_count_100"
        app:layout_constraintBottom_toBottomOf="@+id/hq_pay_iv_count_50"
        app:layout_constraintLeft_toRightOf="@+id/hq_pay_iv_count_50"
        app:layout_constraintRight_toLeftOf="@+id/hq_pay_iv_count_200"/>


    <ImageView
        android:id="@+id/hq_pay_iv_count_1000"
        android:layout_width="564pt"
        android:layout_height="290pt"
        android:src="@drawable/hq_pay_ic_iv_count_1000"
        app:layout_constraintBottom_toBottomOf="@+id/hq_pay_iv_count_500"
        app:layout_constraintLeft_toRightOf="@+id/hq_pay_iv_count_500"
        app:layout_constraintRight_toLeftOf="@+id/hq_pay_iv_count_other"/>

    <ImageView
        android:id="@+id/hq_pay_iv_count_200"
        android:layout_width="564pt"
        android:layout_height="290pt"
        android:layout_marginBottom="60pt"
        android:layout_marginRight="60pt"
        android:src="@drawable/hq_pay_ic_iv_count_200"
        app:layout_constraintBottom_toTopOf="@+id/hq_pay_iv_count_other"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/hq_pay_iv_count_other"
        android:layout_width="564pt"
        android:layout_height="290pt"
        android:layout_marginBottom="250pt"
        android:layout_marginRight="60pt"
        android:src="@drawable/hq_pay_ic_iv_count_other"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>