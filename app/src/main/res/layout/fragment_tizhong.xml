<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.han.referralproject.measure.fragment.TizhongFragment">

    <RelativeLayout
        android:id="@+id/rl_tizhong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rl_tizhi"
        app:layout_constraintVertical_chainStyle="packed">

        <TextView
            android:id="@+id/test_tizhong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/tizhong"
            android:textSize="45sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test_tizhong"
            android:layout_marginLeft="5sp"
            android:gravity="center"
            android:text="(kg)"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_tizhong"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/test_tizhong"
            android:background="@drawable/celiang_shape"
            android:gravity="center"
            android:text="0.0"
            android:textSize="50sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_tizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/rl_tizhong"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_tizhong">

        <TextView
            android:id="@+id/test_tizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="体脂"
            android:textSize="45sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test_tizhi"
            android:layout_marginLeft="5sp"
            android:gravity="center"
            android:text="(kg/㎡)"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_tizhi"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/test_tizhi"
            android:background="@drawable/celiang_shape"
            android:gravity="center"
            android:text="0.0"
            android:textSize="50sp" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_tizhong"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@drawable/shape_phone"
        android:gravity="center"
        android:text="历史记录"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="200dp"
        app:layout_constraintTop_toBottomOf="@id/rl_tizhi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:layout_width="550dp"
        android:layout_height="180dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/video_tizhong"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
