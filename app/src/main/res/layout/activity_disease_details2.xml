<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/normal_bg"
    tools:context="com.example.han.referralproject.activity.DiseaseDetails2Activity">
    <LinearLayout
        android:id="@+id/linearlayou"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/icon_back" />
    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/health_message"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/linearlayou"
        app:layout_constraintRight_toLeftOf="@id/icon_home"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ImageView
        android:id="@+id/icon_home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:src="@drawable/icon_home"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/linearlayou"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="36dp"
                android:text="冠心病"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:paddingBottom="32dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.疾病原因"
                android:textStyle="bold"
                android:textSize="34dp"
                android:textColor="#333"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"/>
            <TextView
                android:id="@+id/reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="29dp"
                android:text="@string/disease_reason"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="32dp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.医生建议"
                android:textStyle="bold"
                android:textSize="34dp"
                android:textColor="#333"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"/>
            <TextView
                android:id="@+id/suggest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="29dp"
                android:text="@string/disease_reason"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="32dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.饮食调理"
                android:textStyle="bold"
                android:textSize="34dp"
                android:textColor="#333"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"/>
            <TextView
                android:id="@+id/eating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="29dp"
                android:text="@string/disease_reason"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="32dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.运动建议"
                android:textStyle="bold"
                android:textSize="34dp"
                android:textColor="#333"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"/>
            <TextView
                android:id="@+id/sport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="29dp"
                android:text="@string/disease_reason"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="32dp"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>
