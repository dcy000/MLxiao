<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Main3Activity">

    <FrameLayout
        android:id="@+id/fl_status_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clToolbar"
        android:layout_width="0dp"
        android:layout_height="120pt"
        android:layout_marginTop="120pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvSearch"
            android:layout_width="586pt"
            android:layout_height="100pt"
            android:layout_marginLeft="80pt"
            android:background="@drawable/main_bg_search"
            android:drawableLeft="@drawable/main_ic_search"
            android:drawablePadding="8pt"
            android:gravity="left|center"
            android:paddingLeft="44pt"
            android:text="请输入搜索内容"
            android:textColor="#bbbbbb"
            android:textSize="48pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/clUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="27pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvLogout"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="120pt"
                android:layout_height="120pt"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tvUserName"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="90pt"
                android:drawableRight="@drawable/main_ic_nav"
                android:drawablePadding="11pt"
                android:gravity="left|center"
                android:maxWidth="400pt"
                android:maxLines="1"
                android:paddingLeft="24pt"
                android:paddingRight="24pt"
                android:textColor="#333333"
                android:textSize="48pt"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/ivAvatar"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Ray" />
        </android.support.constraint.ConstraintLayout>


        <TextView
            android:id="@+id/tvLogout"
            android:layout_width="210pt"
            android:layout_height="90pt"
            android:layout_marginRight="80pt"
            android:background="@drawable/main_bg_logout"
            android:drawableLeft="@drawable/main_ic_logout"
            android:drawablePadding="16pt"
            android:gravity="left|center"
            android:paddingLeft="28pt"
            android:text="退出"
            android:textColor="#FFFFFF"
            android:textSize="40pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <com.gcml.common.widget.recyclerview.banner.BannerRecyclerView
        android:id="@+id/rvBanner"
        android:layout_width="0dp"
        android:layout_height="424pt"
        android:layout_marginTop="40pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clToolbar">

    </com.gcml.common.widget.recyclerview.banner.BannerRecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvMenuItems"
        android:layout_width="0dp"
        android:layout_height="386pt"
        android:layout_marginTop="37pt"
        android:overScrollMode="never"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvBanner">

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>