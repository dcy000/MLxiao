<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:visibility="visible"
    android:visibility="gone">

    <ImageView
        android:id="@+id/iv_empty_data_illustration"
        android:layout_width="360pt"
        android:layout_height="279pt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50pt"
        android:src="@drawable/icon_empty_data_illustration" />

    <TextView
        android:id="@+id/tv_empty_data_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_empty_data_illustration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50pt"
        android:text="啊哦!还没有数据"
        android:textColor="#666666"
        android:textSize="44pt" />

    <TextView
        android:id="@+id/btn_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80pt"
        android:background="@drawable/selector_empty_data_btn"
        android:clickable="true"
        android:text="马上去测量"
        android:textColor="@color/white"
        android:textSize="54pt"
        android:gravity="center"/>
</RelativeLayout>