<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/call_activity_call">


    <LinearLayout
        android:id="@+id/ll_control_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <!--另还有个音视频切换， 需要时添加-->

        <LinearLayout
            android:id="@+id/ll_float_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_float_window"
                android:layout_width="160pt"
                android:layout_height="160pt"
                android:layout_margin="8pt"
                android:scaleType="centerInside"
                android:src="@drawable/call_ic_mute_vedio" />

            <TextView
                android:id="@+id/tv_float_window"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8pt"
                android:text="悬浮窗"
                android:textColor="#ffffff"
                android:textSize="56pt" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_switch_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_switch_camera"
                android:layout_width="160pt"
                android:layout_height="160pt"
                android:layout_margin="8pt"
                android:scaleType="centerInside"
                android:src="@drawable/call_ic_switch_camera" />

            <TextView
                android:id="@+id/tv_switch_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8pt"
                android:text="切换相机"
                android:textColor="#ffffff"
                android:textSize="56pt" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mute_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_mute_video"
                android:layout_width="160pt"
                android:layout_height="160pt"
                android:layout_margin="8pt"
                android:scaleType="centerInside"
                android:src="@drawable/call_ic_mute_vedio" />

            <TextView
                android:id="@+id/tv_mute_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8pt"
                android:text="关闭视频"
                android:textColor="#ffffff"
                android:textSize="56pt" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mute_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_mute_audio"
                android:layout_width="160pt"
                android:layout_height="160pt"
                android:layout_margin="8pt"
                android:scaleType="centerInside"
                android:src="@drawable/call_ic_mute_audio" />

            <TextView
                android:id="@+id/tv_mute_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8pt"
                android:text="静音"
                android:textColor="#ffffff"
                android:textSize="56pt" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_hangup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_hangup"
                android:layout_width="160pt"
                android:layout_height="160pt"
                android:layout_margin="8pt"
                android:background="@drawable/call_bg_hang_up"
                android:scaleType="centerInside"
                android:src="@drawable/call_ic_hang_up" />

            <TextView
                android:id="@+id/tv_hangup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8pt"
                android:text="挂断"
                android:textColor="#ffffff"
                android:textSize="56pt" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_receive"
                android:layout_width="160pt"
                android:layout_height="160pt"
                android:layout_margin="8pt"
                android:background="@drawable/call_bg_receive"
                android:scaleType="centerInside"
                android:src="@drawable/call_ic_hang_up" />

            <TextView
                android:id="@+id/tv_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8pt"
                android:text="接听"
                android:textColor="#ffffff"
                android:textSize="56pt" />

        </LinearLayout>

    </LinearLayout>
</merge>