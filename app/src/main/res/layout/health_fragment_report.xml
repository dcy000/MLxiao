<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.han.referralproject.health.HealthReportFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/health_diary_cl_top_bar"
        android:layout_width="0dp"
        android:layout_height="128pt"
        android:background="#3F86FC"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/health_diary_more_items_tv_top_back"
            android:layout_width="wrap_content"
            android:layout_height="0pt"
            android:background="@drawable/health_diary_tv_more_items_back"
            android:drawableLeft="@drawable/icon_back"
            android:drawablePadding="20pt"
            android:gravity="center"
            android:paddingLeft="60pt"
            android:paddingRight="60pt"
            android:text="返回"
            android:textColor="#FFFFFF"
            android:textSize="64pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/health_diary_tv_more_items_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周 目 标 差 距"
            android:textColor="#FFFFFF"
            android:textSize="64pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/health_diary_more_items_tv_top_action"
            android:layout_width="wrap_content"
            android:layout_height="0pt"
            android:background="@drawable/health_diary_tv_more_items_back"
            android:gravity="center"
            android:paddingLeft="60pt"
            android:paddingRight="60pt"
            android:text="完成"
            android:textColor="#FFFFFF"
            android:textSize="64pt"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/health_diary_rv_targets"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15pt"
        android:layout_marginTop="30pt"
        app:layout_constraintBottom_toTopOf="@+id/health_diary_tv_action"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/health_diary_cl_top_bar">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/health_diary_tv_action"
        android:layout_width="360pt"
        android:layout_height="120pt"
        android:layout_marginBottom="15pt"
        android:background="@drawable/health_diary_bg_tv_action"
        android:gravity="center"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="56pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>
