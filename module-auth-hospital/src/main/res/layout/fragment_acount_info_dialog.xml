<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="1200pt"
        android:layout_height="800pt"
        android:background="@drawable/shape_bg_account_info">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="身份证未注册，是否直接注册？"
            android:textColor="#ff4c4c4c"
            android:textSize="64pt"
            app:layout_constraintBottom_toTopOf="@+id/tv_cancle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_bg" />

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="1200pt"
            android:layout_height="266pt"
            android:background="@drawable/bg_accout_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="320pt"
            android:layout_height="100pt"
            android:layout_marginBottom="60pt"
            android:layout_marginStart="220pt"
            android:background="@drawable/shape_bg_stroke"
            android:gravity="center"
            android:text="否"
            android:textColor="#ff3f86fc"
            android:textSize="56pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="320pt"
            android:layout_height="100pt"
            android:layout_marginLeft="121pt"
            android:background="@drawable/shape_blue_ranctancle"
            android:gravity="center"
            android:text="是"
            android:textColor="@color/white"
            android:textSize="56pt"
            app:layout_constraintBottom_toBottomOf="@+id/tv_cancle"
            app:layout_constraintLeft_toRightOf="@+id/tv_cancle"
            app:layout_constraintTop_toTopOf="@+id/tv_cancle" />


    </android.support.constraint.ConstraintLayout>
</FrameLayout>