            android:layout_below="@+id/test_xueyang"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="@string/xue_yang1"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/xue_yang"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/test_xueyang"
            android:background="@drawable/celiang_shape"
            android:gravity="center"
            android:text="0.0"
            android:textSize="50sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout_xueyang"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/test_maibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/maibo"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test_maibo"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="@string/maibo1"
            android:textSize="18sp" />


        <TextView

            android:id="@+id/maibo"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_marginLeft="90dp"
            android:layout_toRightOf="@+id/test_maibo"
            android:background="@drawable/celiang_shape"
            android:gravity="center"
            android:text="0.0"
            android:textSize="50sp" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/test_3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="200dp"
        android:clickable="true"
        android:src="@drawable/tests"
