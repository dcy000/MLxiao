<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ce_common_item_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ce_poems_tv_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="56pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="01"/>

    <TextView
        android:id="@+id/ce_poems_tv_item_poem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12pt"
        android:layout_marginLeft="40pt"
        android:layout_marginTop="45pt"
        android:textColor="#ffffff"
        android:textSize="56pt"
        app:layout_constraintBottom_toTopOf="@+id/ce_poems_tv_item_author"
        app:layout_constraintLeft_toRightOf="@+id/ce_poems_tv_item_number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="夜曲"/>

    <TextView
        android:id="@+id/ce_poems_tv_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45pt"
        android:layout_marginLeft="40pt"
        android:layout_marginTop="12pt"
        android:textColor="#ffffff"
        android:textSize="48pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ce_poems_tv_item_number"
        app:layout_constraintTop_toBottomOf="@+id/ce_poems_tv_item_poem_title"
        tools:text="结巴"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"/>
</android.support.constraint.ConstraintLayout>