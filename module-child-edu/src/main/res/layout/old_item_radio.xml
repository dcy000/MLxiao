<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120pt"
    android:background="#495462"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/old_radio_indicator"
        android:layout_width="24pt"
        android:layout_height="24pt"
        android:layout_marginLeft="40pt"
        android:background="@drawable/old_ic_radio_indicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/old_radio_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16pt"
        android:maxLength="12"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textSize="56pt"
        tools:text="1121321"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/old_radio_indicator"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:layout_marginRight="80pt"
        tools:text="FM 40.0"
        android:id="@+id/old_tv_fm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="56pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>