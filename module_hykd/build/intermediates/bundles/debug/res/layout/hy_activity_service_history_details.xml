<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_service_time"
            android:layout_width="match_parent"
            android:layout_height="168pt"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="60pt"
            android:text=""
            android:textColor="#999"
            android:textSize="48pt" />

        <View
            android:layout_width="match_parent"
            android:layout_height="32pt"
            android:background="#f5f5f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="548pt"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="57pt"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务医生："
                    android:textColor="#999"
                    android:textSize="56pt" />

                <TextView
                    android:id="@+id/tv_service_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#333"
                    android:textSize="56pt" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:layout_marginLeft="57pt"
                android:layout_marginRight="63pt"
                android:background="#bbb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="57pt"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="既往健康状况："
                    android:textColor="#999"
                    android:textSize="56pt" />

                <TextView
                    android:id="@+id/tv_disease_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#333"
                    android:textSize="56pt" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:layout_marginLeft="57pt"
                android:layout_marginRight="63pt"
                android:background="#bbb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="57pt"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务方式："
                    android:textColor="#999"
                    android:textSize="56pt" />

                <TextView
                    android:id="@+id/tv_service_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#333"
                    android:textSize="56pt" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:layout_marginLeft="57pt"
                android:layout_marginRight="63pt"
                android:background="#bbb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="57pt"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务类别："
                    android:textColor="#999"
                    android:textSize="56pt" />

                <TextView
                    android:id="@+id/tv_service_classic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#333"
                    android:textSize="56pt" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136pt"
            android:background="#f5f5f5"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="60pt">
            <View
                android:layout_width="12pt"
                android:layout_height="56pt"
                android:background="@drawable/line_shit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务内容"
                android:textColor="#333"
                android:textSize="56pt"
                android:textStyle="bold"
                android:layout_marginLeft="24pt"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_service_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
