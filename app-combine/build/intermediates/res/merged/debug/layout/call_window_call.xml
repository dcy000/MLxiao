<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/call_cl_small_container"
    android:layout_width="576dp"
    android:layout_height="324dp">

    <include layout="@layout/call_include_call_surface_small" />

    <Button
        android:id="@+id/call_btn_full_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全屏"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/call_btn_close"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/call_btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭"
        android:textSize="36sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/call_btn_full_screen" />


</android.support.constraint.ConstraintLayout>