<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.han.referralproject.health.DetectResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="572pt"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/detect_tv_person_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60pt"
                    android:layout_marginTop="60pt"
                    android:text="个人信息"
                    android:textColor="#999999"
                    android:textSize="56pt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/detect_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60pt"
                    android:layout_marginTop="40pt"
                    android:text="姓名： "
                    android:textColor="#999999"
                    android:textSize="70pt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detect_tv_person_info"/>

                <TextView
                    android:id="@+id/detect_tv_name_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="72pt"
                    app:layout_constraintBottom_toBottomOf="@+id/detect_tv_name"
                    app:layout_constraintLeft_toRightOf="@+id/detect_tv_name"
                    tools:text="11"/>

                <TextView
                    android:id="@+id/detect_tv_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40pt"
                    android:text="身高： "
                    android:textColor="#999999"
                    android:textSize="70pt"
                    app:layout_constraintLeft_toLeftOf="@+id/detect_tv_name"
                    app:layout_constraintTop_toBottomOf="@+id/detect_tv_name"/>

                <TextView
                    android:id="@+id/detect_tv_height_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="72pt"
                    app:layout_constraintBottom_toBottomOf="@+id/detect_tv_height"
                    app:layout_constraintLeft_toRightOf="@+id/detect_tv_height"
                    tools:text="175cm"/>

                <TextView
                    android:id="@+id/detect_tv_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40pt"
                    android:text="体重： "
                    android:textColor="#999999"
                    android:textSize="70pt"
                    app:layout_constraintLeft_toLeftOf="@+id/detect_tv_name"
                    app:layout_constraintTop_toBottomOf="@+id/detect_tv_height"/>

                <TextView
                    android:id="@+id/detect_tv_weight_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="72pt"
                    app:layout_constraintBottom_toBottomOf="@+id/detect_tv_weight"
                    app:layout_constraintLeft_toRightOf="@+id/detect_tv_weight"
                    tools:text="60kg"/>


                <TextView
                    android:id="@+id/detect_tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1000pt"
                    android:layout_marginTop="40pt"
                    android:text="性别： "
                    android:textColor="#999999"
                    android:textSize="70pt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detect_tv_person_info"/>

                <TextView
                    android:id="@+id/detect_tv_gender_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="72pt"
                    app:layout_constraintBottom_toBottomOf="@+id/detect_tv_gender"
                    app:layout_constraintLeft_toRightOf="@+id/detect_tv_gender"
                    tools:text="男"/>

                <TextView
                    android:id="@+id/detect_tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40pt"
                    android:text="年龄： "
                    android:textColor="#999999"
                    android:textSize="70pt"
                    app:layout_constraintBottom_toBottomOf="@+id/detect_tv_height"
                    app:layout_constraintLeft_toLeftOf="@+id/detect_tv_gender"/>

                <TextView
                    android:id="@+id/detect_tv_age_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="70pt"
                    app:layout_constraintBottom_toBottomOf="@+id/detect_tv_age"
                    app:layout_constraintLeft_toRightOf="@+id/detect_tv_age"
                    tools:text="25"/>

                <TextView
                    android:id="@+id/detect_tv_blood_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="血型： "
                    android:textColor="#999999"
                    android:textSize="70pt"
                    app:layout_constraintBottom_toBottomOf="@+id/detect_tv_weight"
                    app:layout_constraintLeft_toLeftOf="@+id/detect_tv_age"/>

                <TextView
                    android:id="@+id/detect_tv_blood_type_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="72pt"
                    app:layout_constraintBottom_toBottomOf="@+id/detect_tv_blood_type"
                    app:layout_constraintLeft_toRightOf="@+id/detect_tv_blood_type"
                    tools:text="O型"/>
            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="32pt"
                android:background="#F5F5F5"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/detect_tv_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60pt"
                    android:layout_marginTop="60pt"
                    android:text="体检结果"
                    android:textColor="#999999"
                    android:textSize="56pt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/detect_tv_result_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60pt"
                    android:layout_marginTop="40pt"
                    android:text="体重:  "
                    android:textColor="#999999"
                    android:textSize="72pt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detect_tv_result"/>

                <TextView
                    android:id="@+id/detect_tv_result_weight_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60pt"
                    android:textColor="#333333"
                    android:textSize="72pt"
                    app:layout_constraintBottom_toBottomOf="@+id/detect_tv_result_weight"
                    app:layout_constraintLeft_toRightOf="@+id/detect_tv_result_weight"
                    tools:text="62kg"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="132pt"
                    android:background="#FFE7E7"
                    app:layout_constraintBottom_toBottomOf="@+id/detect_tv_result_oxygen_info"
                    app:layout_constraintTop_toTopOf="@+id/detect_tv_result_oxygen_info"/>

                <TextView
                    android:id="@+id/detect_tv_result_oxygen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40pt"
                    android:text="血氧饱和度： "
                    android:textColor="#999999"
                    android:textSize="72pt"
                    app:layout_constraintLeft_toLeftOf="@+id/detect_tv_result_weight"
                    app:layout_constraintTop_toBottomOf="@+id/detect_tv_result_weight"/>

                <TextView
                    android:id="@+id/detect_tv_result_oxygen_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60pt"
                    android:textColor="#D13B39"
                    android:textSize="72pt"
                    app:layout_constraintBottom_toBottomOf="@+id/detect_tv_result_oxygen"
                    app:layout_constraintLeft_toRightOf="@+id/detect_tv_result_oxygen"
                    tools:text="80mmHg"/>

                <TextView
                    android:id="@+id/detect_tv_result_oxygen_info_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60pt"
                    android:textColor="#D13B39"
                    android:textSize="72pt"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/detect_tv_result_oxygen"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="偏高"/>

                <TextView
                    android:id="@+id/detect_tv_result_high_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60pt"
                    android:layout_marginTop="40pt"
                    android:text="收缩压： "
                    android:textColor="#999999"
                    android:textSize="72pt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detect_tv_result_oxygen"/>

                <TextView
                    android:id="@+id/detect_tv_result_high_pressure_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="72pt"
                    tools:text="0.0"
                    app:layout_constraintBottom_toBottomOf="@+id/detect_tv_result_high_pressure"
                    app:layout_constraintLeft_toRightOf="@+id/detect_tv_result_high_pressure"/>

                <TextView
                    android:id="@+id/detect_tv_result_high_pressure_info_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60pt"
                    android:textColor="#D13B39"
                    android:textSize="72pt"
                    android:visibility="gone"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detect_tv_result_high_pressure"/>

                <TextView
                    android:id="@+id/detect_tv_result_low_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60pt"
                    android:layout_marginTop="40pt"
                    android:text="舒张压： "
                    android:textColor="#999999"
                    android:textSize="72pt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detect_tv_result_high_pressure"/>

                <TextView
                    android:id="@+id/detect_tv_result_low_pressure_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#D13B39"
                    android:textSize="72pt"
                    tools:text="0.0"
                    app:layout_constraintBottom_toBottomOf="@+id/detect_tv_result_low_pressure"
                    app:layout_constraintLeft_toRightOf="@+id/detect_tv_result_low_pressure"/>

                <TextView
                    android:id="@+id/detect_tv_result_temperate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60pt"
                    android:layout_marginTop="40pt"
                    android:text="体温： "
                    android:textColor="#999999"
                    android:textSize="72pt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detect_tv_result_low_pressure"/>

                <TextView
                    android:id="@+id/detect_tv_result_temperate_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="72pt"
                    app:layout_constraintBottom_toBottomOf="@+id/detect_tv_result_temperate"
                    app:layout_constraintLeft_toRightOf="@+id/detect_tv_result_temperate"/>

                <TextView
                    android:id="@+id/detect_tv_result_sugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60pt"
                    android:layout_marginTop="40pt"
                    android:text="血糖： "
                    android:textColor="#999999"
                    android:textSize="72pt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detect_tv_result_temperate"/>

                <TextView
                    android:id="@+id/detect_tv_result_sugar_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="72pt"
                    app:layout_constraintBottom_toBottomOf="@+id/detect_tv_result_sugar"
                    app:layout_constraintLeft_toRightOf="@+id/detect_tv_result_sugar"/>

                <TextView
                    android:id="@+id/detect_tv_result_ecg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60pt"
                    android:layout_marginTop="60pt"
                    android:text="心电： "
                    android:textColor="#999999"
                    android:textSize="72pt"
                    android:layout_marginBottom="40pt"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detect_tv_result_sugar"/>

                <TextView
                    android:id="@+id/detect_tv_result_ecg_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="72pt"
                    app:layout_constraintBottom_toBottomOf="@+id/detect_tv_result_ecg"
                    app:layout_constraintLeft_toRightOf="@+id/detect_tv_result_ecg"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
