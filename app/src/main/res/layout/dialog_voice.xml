<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="1920pt"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_bg_clear_reset_dialog"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_yuyin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40pt"
            android:background="@drawable/iv_yuyin_baike_set" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30pt">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8pt"
                android:gravity="center"
                android:text="按下请说话"
                android:textColor="#FF333333"
                android:textSize="28sp" />

            <com.gcml.lib_widget.VoiceLineView
                android:id="@+id/vl_voice_wave"
                android:layout_width="300pt"
                android:layout_height="40pt"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25pt"
                android:layout_marginTop="8pt"
                android:visibility="gone" />

        </FrameLayout>


    </LinearLayout>


</LinearLayout>