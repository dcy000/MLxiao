<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号码验证"
        android:textColor="#ff333333"
        android:textSize="64pt" />

    <RelativeLayout
        android:layout_width="880pt"
        android:layout_height="132pt"
        android:layout_marginTop="37pt">

        <EditText
            android:id="@+id/tv_phone"
            android:layout_width="880pt"
            android:layout_height="132pt"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:hint="请输入手机号码"
            android:textColor="#ff333333"
            android:textSize="56pt" />

        <View
            android:layout_width="880pt"
            android:layout_height="1pt"
            android:layout_alignParentBottom="true"
            android:background="#ff333333" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_delete"
            android:layout_width="48pt"
            android:layout_height="48pt"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_et_delete" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="880pt"
        android:layout_height="132pt"
        android:layout_marginTop="18pt">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="880pt"
            android:layout_height="132pt"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="number"
            android:maxLength="6"
            android:hint="请输入验证码"
            android:textColor="#ff333333"
            android:textSize="56pt" />

        <View
            android:layout_width="880pt"
            android:layout_height="1pt"
            android:layout_alignParentBottom="true"
            android:background="#ff333333" />

        <TextView
            android:id="@+id/tv_send_code"
            android:layout_width="260pt"
            android:layout_height="100pt"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_phone_code_send"
            android:clickable="true"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="#ffffffff"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>