<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                           
            
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.witspring.unitdisease.MedicineDetailActivity" android:tag="layout/wsdise_activity_medicine_detail_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:fresco="http://schemas.android.com/apk/res-auto">

        <include
            android:id="@+id/toolbar"
            layout="@layout/ws_toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ws_white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ws_white"
                    android:padding="5dp">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/wsdise_iv_detail"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        fresco:placeholderImageScaleType="fitCenter"
                        fresco:actualImageScaleType="fitCenter"
                        fresco:failureImageScaleType="fitCenter"
                        fresco:placeholderImage="@mipmap/wsdise_ic_loading"
                        fresco:failureImage="@mipmap/ws_no_img"/>

                    <TextView
                        android:id="@+id/wsdise_tv_medicine_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@id/wsdise_iv_detail"
                        android:text="@string/wsdise_medicine_name"
                        android:layout_marginTop="5dp"
                        style="@style/ws_txt_main_large"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/wsdise_tv_cfy"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/wsdise_tv_medicine_name"
                        android:layout_alignLeft="@id/wsdise_tv_medicine_name"
                        android:gravity="center"
                        android:layout_marginTop="16dp"
                        android:textSize="@dimen/ws_font_medium"
                        android:textStyle="bold"
                        android:background="@mipmap/wsdise_tag_no_prescription"
                        android:textColor="@color/ws_white" />

                    <TextView
                        android:id="@+id/wsdise_tv_support"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignTop="@id/wsdise_tv_cfy"
                        android:layout_toRightOf="@id/wsdise_tv_cfy"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/ws_white"
                        android:textSize="@dimen/ws_font_medium"
                        android:background="@mipmap/wsdise_bg_bzhyb"/>

                    <TextView
                        android:id="@+id/wsdise_tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/wsdise_tv_cfy"
                        android:layout_below="@id/wsdise_tv_cfy"
                        android:layout_marginTop="6dp"
                        android:text="@string/wsdise__price_demo"
                        android:textColor="@color/ws_orange"
                        android:textStyle="bold"
                        android:textSize="@dimen/ws_font_largest" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/ws_white"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:paddingTop="8dp">
                    <TextView
                        android:id="@+id/wsdise_tv_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wsdise_gnzz"
                        style="@style/ws_txt_main_medium"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:drawableLeft="@mipmap/wsdise_ic_indications"
                        android:drawablePadding="2dp"/>

                    <TextView
                        android:id="@+id/wsdise_tv_indications"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        style="@style/ws_txt_main_medium"
                        android:lineSpacingMultiplier="1.4" />


                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/ws_gray_line_e5" />

                    <TextView
                        android:id="@+id/wsdise_tv_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wsdise_gg"
                        style="@style/ws_txt_main_medium"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:drawableLeft="@mipmap/wsdise_ic_gg"
                        android:drawablePadding="2dp"/>

                    <TextView
                        android:id="@+id/wsdise_tv_specification"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:lineSpacingMultiplier="1.4"
                        style="@style/ws_txt_main_medium" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/ws_gray_line_e5" />

                    <TextView
                        android:id="@+id/wsdise_tv_title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wsdise_cf"
                        style="@style/ws_txt_main_medium"
                        android:textStyle="bold"
                        android:drawableLeft="@mipmap/wsdise_ic_speicifiation"
                        android:drawablePadding="2dp"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/wsdise_tv_component"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:lineSpacingMultiplier="1.4"
                        style="@style/ws_txt_main_medium" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/ws_gray_line_e5" />

                    <TextView
                        android:id="@+id/wsdise_tv_title4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wsdise_adverse_effect"
                        android:textStyle="bold"
                        android:drawableLeft="@mipmap/wsdise_ic_blfy"
                        android:drawablePadding="2dp"
                        android:gravity="center_vertical"
                        style="@style/ws_txt_main_medium"/>

                    <TextView
                        android:id="@+id/wsdise_tv_adverse_effect"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:lineSpacingMultiplier="1.4"
                        style="@style/ws_txt_main_medium" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/ws_gray_line_e5" />

                    <TextView
                        android:id="@+id/wsdise_tv_title5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wsdise_taboo"
                        android:drawableLeft="@mipmap/wsdise_ic_forbidden"
                        android:drawablePadding="2dp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        style="@style/ws_txt_main_medium" />

                    <TextView
                        android:id="@+id/wsdise_tv_taboo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:lineSpacingMultiplier="1.4"
                        style="@style/ws_txt_main_medium" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/ws_gray_line_e5" />


                    <TextView
                        android:id="@+id/wsdise_tv_title6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wsdise_usage"
                        style="@style/ws_txt_main_medium"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:drawableLeft="@mipmap/wsdise_ic_yfyl"
                        android:drawablePadding="2dp"/>

                    <TextView
                        android:id="@+id/wsdise_tv_usage"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:lineSpacingMultiplier="1.4"
                        style="@style/ws_txt_main_medium" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/ws_gray_line_e5" />

                    <TextView
                        android:id="@+id/wsdise_tv_title7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wsdise_interction"
                        android:drawableLeft="@mipmap/wsdise_ic_xhzy"
                        android:drawablePadding="2dp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        style="@style/ws_txt_main_medium" />

                    <TextView
                        android:id="@+id/wsdise_tv_interaction"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:lineSpacingMultiplier="1.4"
                        style="@style/ws_txt_main_medium" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/ws_gray_line_e5" />

                    <TextView
                        android:id="@+id/wsdise_tv_title8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wsdise_attention"
                        android:textStyle="bold"
                        android:drawableLeft="@mipmap/wsdise_ic_medicine_warn"
                        android:drawablePadding="2dp"
                        android:gravity="center_vertical"
                        style="@style/ws_txt_main_medium" />

                    <TextView
                        android:id="@+id/wsdise_tv_attention"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:lineSpacingMultiplier="1.4"
                        style="@style/ws_txt_main_medium" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/ws_gray_line_e5" />

                    <TextView
                        android:id="@+id/wsdise_tv_title9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wsdise_other"
                        style="@style/ws_txt_main_medium"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:drawableLeft="@mipmap/wsdise_ic_other"
                        android:drawablePadding="2dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="4dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/ws_txt_main_medium"
                            android:text="@string/wsdise_approval_doc"
                            android:padding="3dp"
                            android:background="@mipmap/wsdise_bg_medicine_pzzh"/>

                        <TextView
                            android:id="@+id/wsdise_tv_approval"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            style="@style/ws_txt_main_medium"
                            android:layout_marginLeft="6dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
         