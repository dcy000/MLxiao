<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/old_music_iv_sheet_cover"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/old_music_tv_sheet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#333333"
        android:textSize="28sp"
        android:singleLine="true"
        android:maxLength="8"
        app:layout_constraintLeft_toLeftOf="@+id/old_music_iv_sheet_cover"
        app:layout_constraintTop_toBottomOf="@+id/old_music_iv_sheet_cover"
        tools:text="Jar" />

    <TextView
        android:id="@+id/old_music_tv_sheet_listener_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="9999人听"
        android:visibility="gone"
        android:textColor="#999999"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/old_music_iv_sheet_cover"
        app:layout_constraintTop_toBottomOf="@+id/old_music_iv_sheet_cover"
        tools:text="1024人听" />
</android.support.constraint.ConstraintLayout>