<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lrc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="64dp"
    android:paddingRight="64dp">

    <include layout="@layout/mp_include_play_page_volume_bar" android:visibility="gone"/>

    <me.wcy.lrcview.LrcView
        android:id="@+id/mp_lrc_view_full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        lrc:lrcAnimationDuration="1000"
        lrc:lrcCurrentTextColor="@color/mp_white"
        lrc:lrcDividerHeight="24dp"
        lrc:lrcNormalTextColor="@color/mp_white_50p"
        lrc:lrcTextSize="20sp" />
</LinearLayout>