<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bci_cl_game_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ml.bci.game.BciGameActivity">

    <View
        android:id="@+id/bci_target_apple"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bci_bg_apple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/bci_target_basket"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bci_bg_basket"
        app:layout_constraintBottom_toTopOf="@+id/bci_btn_start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/bci_btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始"
        android:onClick="onStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bci_btn_end"/>

    <Button
        android:onClick="onEnd"
        android:id="@+id/bci_btn_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bci_btn_start"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>
