<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f5f5f5">
    <RadioGroup
        android:id="@+id/rg_health_record"
        android:layout_width="360pt"
        android:layout_height="420pt"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent">

        <RadioButton
            android:id="@+id/rb_build_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/hy_bg_rb_archives"
            android:button="@null"
            android:gravity="center"
            android:text="建档信息"
            android:textColor="@drawable/hy_bg_rb_archives"
            android:textSize="48pt" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/hy_line" />

        <RadioButton
            android:id="@+id/rb_base_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/hy_bg_rb_archives"
            android:button="@null"
            android:gravity="center"
            android:text="基本信息"
            android:textColor="@drawable/hy_bg_rb_archives"
            android:textSize="48pt" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/hy_line" />

        <RadioButton
            android:id="@+id/rb_sign_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/hy_bg_rb_archives"
            android:button="@null"
            android:gravity="center"
            android:text="签约信息"
            android:textColor="@drawable/hy_bg_rb_archives"
            android:textSize="48pt" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/hy_line" />

    </RadioGroup>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/hy_health_information"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rg_health_record"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:layout_marginLeft="40pt"/>
</android.support.constraint.ConstraintLayout>