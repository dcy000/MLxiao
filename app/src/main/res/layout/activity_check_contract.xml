<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="com.example.han.referralproject.recyclerview.CheckContractActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="608pt"
        android:layout_height="998pt"
        android:layout_marginStart="32pt"
        android:layout_marginTop="42pt"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout4"
        app:layout_constraintVertical_bias="1.0">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_doctor_info"
            android:layout_width="608pt"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout4"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout4"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="16pt">

            <com.example.han.referralproject.imageview.CircleImageView
                android:id="@+id/iv_doctor_avatar"
                android:layout_width="300pt"
                android:layout_height="300pt"
                android:layout_marginEnd="8pt"
                android:layout_marginStart="8pt"
                android:layout_marginTop="56pt"
                android:src="@drawable/avatar_placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18pt"
                android:textColor="#333333"
                android:textSize="56pt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_doctor_avatar"
                tools:text="韩琦琦" />

            <TextView
                android:id="@+id/tv_professional_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32pt"
                android:layout_marginTop="60pt"
                android:text="职    级："
                android:textColor="#999999"
                android:textSize="56pt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_doctor_name" />

            <TextView
                android:id="@+id/tv_doctor_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60pt"
                android:textColor="#333333"
                android:textSize="56pt"
                app:layout_constraintStart_toEndOf="@+id/tv_professional_rank"
                app:layout_constraintTop_toBottomOf="@+id/tv_doctor_name"
                tools:text="主治医师" />

            <TextView
                android:id="@+id/tv_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38pt"
                android:text="擅    长："
                android:textColor="#999999"
                android:textSize="56pt"
                app:layout_constraintStart_toStartOf="@+id/tv_professional_rank"
                app:layout_constraintTop_toBottomOf="@+id/tv_doctor_level" />

            <TextView
                android:id="@+id/tv_good_at"
                android:layout_width="240pt"
                android:layout_height="wrap_content"
                android:layout_marginTop="38pt"
                android:textColor="#333333"
                android:textSize="56pt"
                app:layout_constraintStart_toEndOf="@+id/tv_good"
                app:layout_constraintTop_toBottomOf="@+id/tv_doctor_level"
                tools:text="高血压、糖尿病" />

            <TextView
                android:id="@+id/tv_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32pt"
                android:text="收费标准："
                android:textColor="#999999"
                android:textSize="56pt"
                app:layout_constraintStart_toStartOf="@+id/tv_good"
                app:layout_constraintTop_toBottomOf="@+id/tv_good_at" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="300pt"
                android:layout_height="wrap_content"
                android:layout_marginTop="32pt"
                android:textColor="#3F86FC"
                android:textSize="56pt"
                app:layout_constraintStart_toEndOf="@+id/tv_service"
                app:layout_constraintTop_toBottomOf="@+id/tv_good_at"
                tools:text="10元/分钟" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="1216pt"
        android:layout_height="998pt"
        android:layout_marginStart="24pt"
        android:layout_marginTop="16pt"
        android:background="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/scrollView2"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_check_contract"
            android:layout_width="456pt"
            android:layout_height="444pt"
            android:layout_marginTop="169pt"
            android:src="@drawable/ic_check_contract"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32pt"
            android:text="等待顾问审核中"
            android:textColor="#666666"
            android:textSize="44pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_check_contract" />

        <TextView
            android:id="@+id/tv_cancel_contract"
            android:layout_width="300pt"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100pt"
            android:background="@drawable/bg_cancel_contract"
            android:gravity="center"
            android:padding="10pt"
            android:text="取消签约"
            android:textColor="#FFFFFF"
            android:textSize="44pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
