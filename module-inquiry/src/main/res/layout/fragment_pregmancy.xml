<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView

        android:id="@+id/tv_sign_up_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90pt"
        android:gravity="center"
        android:text="目前是否怀孕"
        android:textColor="#FF333333"
        android:textSize="72pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_sign_up_man"
        android:layout_width="512pt"
        android:layout_height="512pt"
        android:layout_marginStart="344pt"
        android:layout_marginTop="54pt"
        android:src="@drawable/ic_huaiyun_not"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_gender" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24pt"
        android:text="否"
        android:textColor="#FF666666"
        android:textSize="72pt"
        app:layout_constraintBottom_toBottomOf="@+id/iv_rb_sign_up_man"
        app:layout_constraintStart_toEndOf="@+id/iv_rb_sign_up_man"
        app:layout_constraintTop_toTopOf="@+id/iv_rb_sign_up_man" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24pt"
        android:text="是"
        android:textColor="#FF666666"
        android:textSize="72pt"
        app:layout_constraintBottom_toBottomOf="@+id/iv_rb_sign_up_woman"
        app:layout_constraintStart_toEndOf="@+id/iv_rb_sign_up_woman"
        app:layout_constraintTop_toTopOf="@+id/iv_rb_sign_up_woman" />

    <ImageView
        android:id="@+id/iv_sign_up_woman"
        android:layout_width="512pt"
        android:layout_height="512pt"
        android:layout_marginStart="208pt"
        android:clickable="true"
        android:src="@drawable/ic_huaiyun"
        app:layout_constraintBottom_toBottomOf="@+id/iv_sign_up_man"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/iv_sign_up_man"
        app:layout_constraintTop_toTopOf="@+id/iv_sign_up_man" />

    <ImageView
        android:id="@+id/iv_rb_sign_up_man"
        android:layout_width="60pt"
        android:layout_height="60pt"
        android:layout_marginStart="522pt"
        android:layout_marginTop="53pt"
        android:src="@drawable/bg_huaiyun_set"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_sign_up_man" />

    <ImageView
        android:id="@+id/iv_rb_sign_up_woman"
        android:layout_width="60pt"
        android:layout_height="60pt"
        android:layout_marginStart="563pt"
        android:layout_marginTop="14dp"
        android:src="@drawable/bg_huaiyun_set"
        app:layout_constraintBottom_toBottomOf="@+id/iv_rb_sign_up_man"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/iv_sign_up_woman" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="0pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_sign_up_go_back"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="160pt"
            android:layout_marginLeft="35dp"
            android:background="@drawable/common_bg_selector_btn_go_back"
            android:gravity="center"
            android:text="上一步"
            android:textColor="#3F85FC"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tv_sign_up_go_forward"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="160pt"
            android:layout_marginRight="35dp"
            android:background="@drawable/common_bg_selector_btn_go_forward"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@android:color/white"
            android:textSize="35sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
