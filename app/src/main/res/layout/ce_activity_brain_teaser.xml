<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ce_common_bg"
    tools:context="com.example.han.referralproject.children.study.ChildEduBrainTeaserActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ce_brain_teaser_cl_question_container"
        android:layout_width="1684pt"
        android:layout_height="884pt"
        android:layout_marginTop="165pt"
        android:background="@drawable/ce_study_bg_brain_teaser"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ce_brain_teaser_tv_content"
            android:layout_width="1110pt"
            android:layout_height="500pt"
            android:layout_marginLeft="200pt"
            android:layout_marginTop="300pt"
            android:textColor="#FFFFFF"
            android:textSize="64pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="什么东西没吃的时候是绿的，吃的时候是红的，吐出来的是黑的？"/>
    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/ce_common_iv_back"
        android:layout_width="140pt"
        android:layout_height="126pt"
        android:layout_marginLeft="20pt"
        android:layout_marginTop="10pt"
        android:paddingBottom="20pt"
        android:paddingLeft="30pt"
        android:paddingRight="30pt"
        android:paddingTop="20pt"
        android:src="@drawable/ce_common_ic_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/ce_common_iv_title"
        android:layout_width="507pt"
        android:layout_height="130pt"
        android:layout_marginTop="30pt"
        android:src="@drawable/ce_study_ic_brain_teaser_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>
