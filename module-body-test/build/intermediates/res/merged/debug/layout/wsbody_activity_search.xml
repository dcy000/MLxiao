<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.witspring.unitbody.SearchActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/ws_toolbar" />

    <RelativeLayout
        android:id="@+id/rlSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:padding="16dp"
        android:gravity="center"
        android:background="@color/ws_white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tvSearch"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@id/tvSearch"
            android:layout_alignBottom="@id/tvSearch"
            android:background="@mipmap/wsbody_bg_search_edit"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ws_ic_search_blue"/>

            <com.witspring.view.ClearEditText
                style="@style/ws_txt_main_medium"
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="24dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="哪里不舒服？请输入，如：头痛"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textColorHint="@color/ws_gray_99" />
            <EditText
                android:id="@+id/etBlank"
                android:layout_width="0dp"
                android:layout_height="0dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvSearch"
            style="@style/ws_txt_white_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@mipmap/wsbody_bg_search_btn"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:text="搜索"
            android:onClick="tvSearch"/>
    </RelativeLayout>

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rlSearch"
        android:background="@color/ws_gray_line_e5"/>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/vLine">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rlHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@color/ws_white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:visibility="visible">
                <TextView
                    style="@style/ws_txt_main_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tvClear"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/ws_ic_history_search"
                    android:drawablePadding="8dp"
                    android:text="历史记录"/>
                <TextView
                    style="@style/ws_txt_gray66_medium"
                    android:id="@+id/tvClear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/wsbody_stroke_gray_small_round"
                    android:text="清空"
                    android:onClick="tvClear"/>
                <View
                    android:id="@+id/lineHistory"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tvClear"
                    android:background="@color/ws_gray_line_e5"/>
                <com.nex3z.flowlayout.FlowLayout
                    android:id="@+id/flHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lineHistory"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    app:flChildSpacingForLastRow="align"
                    app:flChildSpacing="24dp"
                    app:flRowSpacing="20dp"
                    app:flMaxRows="3"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlHot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ws_white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:visibility="visible">
                <TextView
                    style="@style/ws_txt_main_medium"
                    android:id="@+id/tvLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@mipmap/ws_ic_hot_search"
                    android:drawablePadding="8dp"
                    android:text="热门诊查"/>
                <View
                    android:id="@+id/lineHot"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tvLeft"
                    android:background="@color/ws_gray_line_e5"/>
                <com.nex3z.flowlayout.FlowLayout
                    android:id="@+id/flHot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lineHot"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/ws_white"
                    app:flChildSpacingForLastRow="align"
                    app:flChildSpacing="24dp"
                    app:flRowSpacing="20dp"
                    app:flMaxRows="3"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/flContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ws_white"
        android:layout_below="@id/vLine"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/llBlank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/vLine"
        android:gravity="center_horizontal"
        android:background="@color/ws_white"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llNoNetwork"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@color/ws_white"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <TextView
                style="@style/ws_txt_gray66_medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="加载失败，请检查你的网络设置"/>

            <Button
                style="@style/ws_txt_main_medium"
                android:id="@+id/btnSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:padding="8dp"
                android:text="设置网络"/>
        </LinearLayout>

        <TextView
            style="@style/ws_txt_gray66_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="暂无相关搜索结果"/>
        <TextView
            style="@style/ws_txt_gray99_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="换个词试试，如将“我的肚子不舒服”换为“腹痛”"/>
    </LinearLayout>

</RelativeLayout>
