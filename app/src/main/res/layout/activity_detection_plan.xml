<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f5f5f5">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_1"
        android:layout_width="match_parent"
        android:layout_height="480pt"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32pt"
        android:layout_marginLeft="32pt"
        android:layout_marginRight="32pt">
        <TextView
            android:id="@+id/tv_detection_frequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检测频率"
            android:textSize="64pt"
            android:textColor="#333"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="40pt"
            android:layout_marginTop="60pt"
            />
        <TextView
            android:id="@+id/tv_xueya_detection_frequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="血压：每天早晨、睡前各一次"
            android:textColor="#333"
            android:textSize="56pt"
            app:layout_constraintTop_toBottomOf="@id/tv_detection_frequency"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40pt"
            android:layout_marginTop="48pt"/>
        <TextView
            android:id="@+id/tv_xuetang_detection_frequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="血压：每天早晨、睡前各一次"
            android:textColor="#333"
            android:textSize="56pt"
            app:layout_constraintTop_toBottomOf="@id/tv_xueya_detection_frequency"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40pt"
            android:layout_marginTop="48pt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设定闹钟提醒"
            android:textSize="56pt"
            android:textColor="@color/white"
            android:background="@drawable/button_shape"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="32pt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="40pt"/>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="344pt"
        android:layout_height="496pt"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/cl_1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32pt"
        android:layout_marginTop="32pt"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体重目标"
            android:textColor="#333"
            android:textSize="60pt"
            android:layout_marginTop="72pt"
            android:layout_marginLeft="40pt"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="140pt"
            android:textColor="#333"
            android:text="67.5"
            android:layout_marginTop="40pt"
            android:layout_marginLeft="40pt"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体重"
            android:textColor="#999"
            android:textSize="56pt"
            android:layout_marginLeft="40pt"
            android:layout_marginTop="24pt"
            />
    </LinearLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_3"
        android:layout_width="536pt"
        android:layout_height="496pt"
        android:background="@color/white"
        app:layout_constraintLeft_toRightOf="@id/ll_2"
        app:layout_constraintTop_toBottomOf="@id/cl_1"
        android:layout_marginTop="32pt"
        android:layout_marginLeft="32pt">
        <TextView
            android:id="@+id/tv_xueya_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="血压目标"
            android:textColor="#333"
            android:textSize="60pt"
            android:layout_marginTop="72pt"
            android:layout_marginLeft="40pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_gaoya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="132"
            android:textStyle="bold"
            android:textSize="140pt"
            android:textColor="#333"
            app:layout_constraintLeft_toLeftOf="@id/tv_xueya_title"
            app:layout_constraintTop_toBottomOf="@id/tv_xueya_title"
            android:layout_marginTop="40pt"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:textSize="56pt"
            android:text="高压"
            app:layout_constraintLeft_toLeftOf="@id/tv_xueya_title"
            app:layout_constraintTop_toBottomOf="@id/tv_gaoya"
            android:layout_marginTop="24pt"
            />
        <TextView
            android:id="@+id/tv_diya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="70"
            android:textStyle="bold"
            android:textSize="140pt"
            android:textColor="#333"
            app:layout_constraintLeft_toRightOf="@id/tv_gaoya"
            app:layout_constraintTop_toBottomOf="@id/tv_xueya_title"
            android:layout_marginTop="40pt"
            android:layout_marginLeft="80pt"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:textSize="56pt"
            android:text="低压"
            app:layout_constraintLeft_toLeftOf="@id/tv_diya"
            app:layout_constraintTop_toBottomOf="@id/tv_gaoya"
            android:layout_marginTop="24pt"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="912pt"
        android:layout_height="496pt"
        android:background="@color/white"
        app:layout_constraintLeft_toRightOf="@id/cl_3"
        app:layout_constraintTop_toBottomOf="@id/cl_1"
        android:layout_marginTop="32pt"
        android:layout_marginLeft="32pt">
        <TextView
            android:id="@+id/tv_xuetang_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="血糖目标"
            android:textColor="#333"
            android:textSize="60pt"
            android:layout_marginTop="72pt"
            android:layout_marginLeft="40pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_xuetang_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.12"
            android:textStyle="bold"
            android:textSize="140pt"
            android:textColor="#333"
            android:layout_marginTop="40pt"
            app:layout_constraintTop_toBottomOf="@id/tv_xuetang_title"
            app:layout_constraintLeft_toLeftOf="@id/tv_xuetang_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:textSize="56pt"
            android:text="空腹"
            android:layout_marginTop="24pt"
            app:layout_constraintLeft_toLeftOf="@id/tv_xuetang_empty"
            app:layout_constraintTop_toBottomOf="@id/tv_xuetang_empty"
            />
        <TextView
            android:id="@+id/tv_xuetang_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.12"
            android:textStyle="bold"
            android:textSize="140pt"
            android:textColor="#333"
            android:layout_marginTop="40pt"
            android:layout_marginLeft="80pt"
            app:layout_constraintLeft_toRightOf="@id/tv_xuetang_empty"
            app:layout_constraintTop_toBottomOf="@id/tv_xuetang_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:textSize="56pt"
            android:text="饭后1小时"
            android:layout_marginTop="24pt"
            app:layout_constraintLeft_toLeftOf="@id/tv_xuetang_one"
            app:layout_constraintTop_toBottomOf="@id/tv_xuetang_one"
            />
        <TextView
            android:id="@+id/tv_xuetang_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.12"
            android:textStyle="bold"
            android:textSize="140pt"
            android:textColor="#333"
            android:layout_marginTop="40pt"
            android:layout_marginLeft="144pt"
            app:layout_constraintLeft_toRightOf="@id/tv_xuetang_one"
            app:layout_constraintTop_toBottomOf="@id/tv_xuetang_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:textSize="56pt"
            android:text="饭后2小时"
            android:layout_marginTop="24pt"
            app:layout_constraintLeft_toLeftOf="@id/tv_xuetang_two"
            app:layout_constraintTop_toBottomOf="@id/tv_xuetang_two"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>