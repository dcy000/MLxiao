<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="1200pt"
        android:layout_height="658pt"
        android:background="@drawable/utils_shape_round_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400pt"
            android:gravity="center"
            android:layout_marginTop="60pt">

            <com.gcml.common.widget.base.dialog.date_picker.WheelView
                android:id="@+id/wheelView_year"
                android:layout_width="300pt"
                android:layout_height="match_parent"
                />

            <com.gcml.common.widget.base.dialog.date_picker.WheelView
                android:id="@+id/wheelView_month"
                android:layout_width="300pt"
                android:layout_height="match_parent"
                android:layout_marginLeft="40pt" />

            <com.gcml.common.widget.base.dialog.date_picker.WheelView
                android:id="@+id/wheelView_day"
                android:layout_width="300pt"
                android:layout_height="match_parent"
                android:layout_marginLeft="40pt" />
        </LinearLayout>
        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:layout_marginTop="60pt"
            android:background="#D9D9D9"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="135pt"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textColor="#3F86FC"
                android:textSize="56pt"
                android:background="?android:attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="1pt"
                android:layout_height="match_parent"
                android:background="#D9D9D9"/>

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="135pt"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#bbbbbb"
                android:textSize="56pt"
                android:background="?android:attr/selectableItemBackground"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
