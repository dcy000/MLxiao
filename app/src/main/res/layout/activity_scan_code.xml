<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.han.referralproject.require3.ScanCodeActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="598pt"
        android:layout_height="598pt"
        android:layout_marginTop="102pt"
        android:src="@drawable/ic_code_wuhan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="1064pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="40pt"
        android:text="请用手机扫描以下的二维码，关注公众号。 了解更多的服务"
        android:textColor="#ff333333"
        android:textSize="56pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="272pt"
        android:layout_height="120pt"
        android:layout_marginBottom="100pt"
        android:layout_marginEnd="70pt"
        android:background="@drawable/bg_wen_jian_tv_skip"
        android:gravity="center"
        android:text="跳过"
        android:textColor="#fff"
        android:textSize="56pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>
