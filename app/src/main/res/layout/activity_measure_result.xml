<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context="com.example.han.referralproject.measure.MeasureXueyaResultActivity">
    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="562pt"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="32pt"
        android:layout_marginLeft="32pt"
        android:layout_marginBottom="32pt">
        <TextView
            android:id="@+id/tv_measure_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本周目标血压"
            android:textSize="56pt"
            android:textColor="#333"
            android:textStyle="bold"
            android:layout_marginTop="48pt"
            />

        <TextView
            android:id="@+id/tv_gao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="50pt"
            android:layout_marginTop="32pt"
            android:text="120"
            android:textColor="#333"
            android:textSize="48pt" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="-20pt">
            <View
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:background="#F4843E"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/high_pressure"
                android:textSize="48pt"
                android:textColor="#666666"
                android:layout_marginLeft="16pt"/>
            <com.example.han.referralproject.view.progress.RxRoundProgressBar
                android:id="@+id/rpb_gao"
                android:layout_width="302pt"
                android:layout_height="48pt"
                app:rcBackgroundColor="#eee"
                app:rcProgressColor="#F4843E"
                app:rcRadius="0pt"
                app:rcMax="100"
                app:rcProgress="0"
                android:layout_marginLeft="36pt"

                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_di"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="48pt"
            android:text="80"
            android:layout_gravity="end"
            android:layout_marginRight="50pt"
            android:layout_marginTop="24pt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="-20pt">
            <View
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:background="#FED235"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/low_pressure"
                android:textSize="48pt"
                android:textColor="#666666"
                android:layout_marginLeft="16pt"/>
            <com.example.han.referralproject.view.progress.RxRoundProgressBar
                android:id="@+id/rpb_di"
                android:layout_width="302pt"
                android:layout_height="48pt"
                app:rcBackgroundColor="#eee"
                app:rcProgressColor="#FED235"
                app:rcRadius="0pt"
                app:rcMax="100"
                app:rcProgress="0"
                android:layout_marginLeft="36pt"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本周平均血压"
            android:textSize="56pt"
            android:textColor="#333"
            android:textStyle="bold"
            android:layout_marginTop="170pt"/>
        <TextView
            android:id="@+id/tv_gaoya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="48pt"
            android:text="120"
            android:layout_gravity="end"
            android:layout_marginRight="50pt"
            android:layout_marginTop="32pt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="-20pt">
            <View
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:background="#F4843E"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/high_pressure"
                android:textSize="48pt"
                android:textColor="#666666"
                android:layout_marginLeft="16pt"/>
            <com.example.han.referralproject.view.progress.RxRoundProgressBar
                android:id="@+id/rpb_gaoya"
                android:layout_width="302pt"
                android:layout_height="48pt"
                app:rcBackgroundColor="#eee"
                app:rcProgressColor="#F4843E"
                app:rcRadius="0pt"
                app:rcMax="100"
                app:rcProgress="0"
                android:layout_marginLeft="36pt"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_diya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="48pt"
            android:text="80"
            android:layout_gravity="end"
            android:layout_marginRight="50pt"
            android:layout_marginTop="24pt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="-20pt">
            <View
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:background="#FED235"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/low_pressure"
                android:textSize="48pt"
                android:textColor="#666666"
                android:layout_marginLeft="16pt"/>
            <com.example.han.referralproject.view.progress.RxRoundProgressBar
                android:id="@+id/rpb_diya"
                android:layout_width="302pt"
                android:layout_height="48pt"
                app:rcBackgroundColor="#eee"
                app:rcProgressColor="#FED235"
                app:rcRadius="0pt"
                app:rcMax="100"
                app:rcProgress="0"
                android:layout_marginLeft="36pt"
                />
        </LinearLayout>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ll_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/ll_left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="32pt"
        android:layout_marginTop="32pt"
        android:layout_marginBottom="32pt"
        android:layout_marginRight="32pt"
        >
        <android.support.constraint.ConstraintLayout
            android:id="@+id/ll_gaodi"
            android:layout_width="0pt"
            android:layout_height="416pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            app:layout_constraintRight_toLeftOf="@+id/ll_fenshu">
            <TextView
                android:id="@+id/tv_result_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本次测量结果"
                android:textSize="40pt"
                android:textColor="#999"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="56pt"
                android:layout_marginLeft="40pt"/>

            <LinearLayout
                android:id="@+id/ll_gaoya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="@id/tv_result_title"
                app:layout_constraintTop_toBottomOf="@id/tv_result_title"
                android:layout_marginTop="67pt">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="56pt"
                    android:textColor="#333"
                    android:text="@string/high_pressure"/>
                <TextView
                    android:id="@+id/current_gao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textSize="120pt"
                    android:textStyle="bold"
                    android:textColor="#F4843E"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@id/ll_gaoya"
                app:layout_constraintTop_toBottomOf="@id/tv_result_title"
                android:layout_marginLeft="95pt"
                android:layout_marginTop="67pt">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="56pt"
                    android:textColor="#333"
                    android:text="@string/low_pressure"/>
                <TextView
                    android:id="@+id/current_di"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80"
                    android:textSize="120pt"
                    android:textStyle="bold"
                    android:textColor="#FFB517"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/ll_fenshu"
            android:layout_width="0pt"
            android:layout_height="416pt"
            app:layout_constraintLeft_toRightOf="@id/ll_gaodi"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="32pt"
            android:background="@color/white">
            <TextView
                android:id="@+id/tv_score_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康分数"
                android:textColor="#999"
                android:textSize="40pt"
                android:layout_marginTop="41pt"
                android:layout_marginLeft="40pt"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <com.littlejie.circleprogress.WaveProgress
                android:id="@+id/wave_progress_bar"
                android:layout_width="293pt"
                android:layout_height="293pt"
                android:layout_gravity="center_horizontal"
                app:cp_darkWaveAnimTime="1000"
                app:cp_darkWaveColor="#B372A7FC"
                app:cp_lightWaveAnimTime="2000"
                app:cp_lightWaveColor="#B372A7FC"
                app:cp_lightWaveDirect="R2L"
                app:cp_lockWave="false"
                app:cp_valueSize="105pt"
                app:cp_waveHeight="30pt"
                app:cp_waveNum="1"
                app:cp_circleColor="#eee"
                app:cp_lockCircle="true"
                app:cp_bgCircleColor="#F1F5FF"
                app:cp_circleWidth="3pt"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="60pt"
                android:layout_marginBottom="40pt"
                />
            <!--<LinearLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal"-->
                <!--android:gravity="center"-->
                <!--app:layout_constraintTop_toBottomOf="@id/tv_score_title">-->
                <!--<ImageView-->
                    <!--android:layout_width="32pt"-->
                    <!--android:layout_height="44pt"-->
                    <!--android:layout_marginLeft="40pt"/>-->
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textSize="56pt"-->
                    <!--android:text="2分"-->
                    <!--android:layout_marginLeft="16pt"-->
                    <!--android:textColor="#333"/>-->
            <!--</LinearLayout>-->
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="560pt"
            app:layout_constraintTop_toBottomOf="@id/ll_gaodi"
            android:background="@color/white"
            android:layout_marginTop="32pt">
            <TextView
                android:id="@+id/tv_suggest_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康建议"

                android:textSize="56pt"
                android:textColor="#333"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="36pt"
                />
            <TextView
                android:id="@+id/tv_suggest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_suggest_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="#333"
                android:textSize="48pt"
                android:layout_marginLeft="60pt"
                android:layout_marginRight="60pt"
                android:layout_marginTop="16pt"
                android:text="主人，您血糖偏低，并有下降趋势，低血糖出现饥饿、头昏眼花、面色苍白、心慌手颤、出冷汗、虚弱无力等症状，低血糖还容易诱发心律失常，心绞痛、心肌梗死以及脑血管意外并发症，请持续测量，必要时及时联系医生。"
                android:lineSpacingMultiplier="1.2"/>
            <TextView
                android:id="@+id/tv_something_advice"
                android:layout_width="340pt"
                android:layout_height="100pt"
                android:background="@drawable/measure_result"
                android:text="周生活报告"
                android:textColor="@color/white"
                android:textSize="48pt"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/health_knowledge"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:layout_marginBottom="50pt"/>
            <TextView
                android:id="@+id/health_knowledge"
                android:layout_width="340pt"
                android:layout_height="100pt"
                android:background="@drawable/measure_result2"
                android:text="月生活报告"
                android:textColor="@color/white"
                android:textSize="48pt"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@id/tv_something_advice"
                app:layout_constraintLeft_toRightOf="@id/tv_something_advice"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="102pt"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
