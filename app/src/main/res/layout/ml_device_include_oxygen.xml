<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_xueyang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/normal_bg"
    android:visibility="gone"
    tools:showIn="@layout/activity_detect">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/test_xueyang"
        android:textColor="@color/white"
        android:textSize="40sp"/>

    <!--  <ImageView
              android:id="@+id/xueyang_video"
              android:layout_width="400dp"
              android:layout_height="300dp"
              android:layout_alignParentRight="true"
              android:layout_marginRight="50dp"
              android:layout_marginTop="200dp"
              android:background="@drawable/xueyang_video"
              android:clickable="true" />-->

    <ImageView
        android:layout_width="550dp"
        android:layout_height="180dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/video_xueyang"/>


    <LinearLayout
        android:id="@+id/detect_ll_nav4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="70dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/history3"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="@drawable/shape_phone"
            android:gravity="center"
            android:text="历史记录"
            android:textColor="#FFFFFF"
            android:textSize="35sp"/>


        <Button
            android:id="@+id/xueyang_video"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/shape_show"
            android:gravity="center"
            android:text="使用演示"
            android:textColor="#FFFFFF"
            android:textSize="35sp"/>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/RelativeLayout_xueyang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="300dp">

        <TextView
            android:id="@+id/test_xueyang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/xue_yang"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test_xueyang"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="@string/xue_yang1"
            android:textSize="20sp"/>


        <TextView
            android:id="@+id/tv_xue_yang"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/test_xueyang"
            android:background="@drawable/celiang_shape"
            android:gravity="center"
            android:text="0.0"
            android:textSize="50sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout_xueyang"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/test_maibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/maibo"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test_maibo"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="@string/maibo1"
            android:textSize="18sp"/>


        <TextView
            android:id="@+id/tv_xueyang_pulse"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_marginLeft="90dp"
            android:layout_toRightOf="@+id/test_maibo"
            android:background="@drawable/celiang_shape"
            android:gravity="center"
            android:text="0.0"
            android:textSize="50sp"/>


    </RelativeLayout>

</RelativeLayout>