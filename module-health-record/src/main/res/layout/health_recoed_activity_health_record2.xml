<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f5f5f5">
    <include layout="@layout/health_record_custom_title_layout" android:id="@+id/toolbar_layout"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_menu"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <LinearLayout
        android:id="@+id/ll_select_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@id/rv_menu"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询日期"
            android:textColor="#333"
            android:textStyle="bold"
            android:textSize="48pt"
            android:layout_marginLeft="44pt"
            android:layout_marginTop="65pt"
            android:layout_marginBottom="65pt"/>
        <TextView
            android:id="@+id/tv_time_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天"
            android:textSize="48pt"
            android:background="@drawable/selector_health_record_btn_corner"
            android:textStyle="bold"
            android:textColor="@color/health_record_white"
            android:drawableRight="@drawable/health_record_guide"
            android:drawablePadding="16pt"
            android:paddingTop="17pt"
            android:paddingBottom="17pt"
            android:paddingLeft="20pt"
            android:paddingRight="20pt"
            android:layout_marginLeft="16pt"
            android:clickable="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/health_record_white"
            android:textStyle="bold"
            android:textSize="48pt"
            android:text="2017年3月22日"
            android:paddingTop="17pt"
            android:paddingBottom="17pt"
            android:paddingLeft="20pt"
            android:paddingRight="20pt"
            android:layout_marginLeft="29pt"
            android:drawableRight="@drawable/health_record_guide"
            android:drawablePadding="16pt"
            android:clickable="true"
            android:background="@drawable/selector_health_record_btn_corner"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="至"
            android:textColor="#333"
            android:textStyle="bold"
            android:textSize="48pt"
            android:layout_marginLeft="32pt"
            android:layout_marginRight="32pt"
            android:layout_marginTop="65pt"
            android:layout_marginBottom="65pt"/>
        <TextView
            android:id="@+id/tv_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/health_record_white"
            android:textStyle="bold"
            android:textSize="48pt"
            android:text="2017年3月22日"
            android:paddingTop="17pt"
            android:paddingBottom="17pt"
            android:paddingLeft="20pt"
            android:paddingRight="20pt"
            android:drawableRight="@drawable/health_record_guide"
            android:drawablePadding="16pt"
            android:clickable="true"
            android:background="@drawable/selector_health_record_btn_corner"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/health_record_fl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/rv_menu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_select_time"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="44pt"
        android:layout_marginRight="44pt"
        android:layout_marginBottom="44pt"
        android:background="@color/health_record_white">
        
    </FrameLayout>

</android.support.constraint.ConstraintLayout>