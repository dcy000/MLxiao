<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.han.referralproject.health.HealthDiaryItemsFragment">

    <TextView
        android:id="@+id/health_diary_tv_items_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56pt"
        android:textColor="#333333"
        android:textSize="56pt"
        app:layout_constraintLeft_toLeftOf="@+id/health_diary_iv_items_indicator"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="选择运动项目"/>

    <FrameLayout
        android:id="@+id/health_diary_fl_items_container"
        android:layout_width="324pt"
        android:layout_height="692pt"
        android:layout_marginTop="64pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/health_diary_tv_items_title"/>

    <ImageView
        android:id="@+id/health_diary_iv_items_indicator"
        android:layout_width="46pt"
        android:layout_height="46pt"
        android:layout_marginRight="32pt"
        android:src="@drawable/health_diary_ic_indicator_ruler_horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/health_diary_fl_items_container"
        app:layout_constraintRight_toLeftOf="@+id/health_diary_fl_items_container"
        app:layout_constraintTop_toTopOf="@+id/health_diary_fl_items_container"/>

    <TextView
        android:id="@+id/health_diary_tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="44pt"
        android:paddingRight="44pt"
        android:paddingTop="44pt"
        android:text="更多项目"
        android:textColor="@color/health_diary_tv_items_more"
        android:textSize="48pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/health_diary_iv_items_indicator"
        app:layout_constraintTop_toBottomOf="@+id/health_diary_fl_items_container"/>
</android.support.constraint.ConstraintLayout>
