    <LinearLayout
        android:id="@+id/linearlayou"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/icon_back" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/person_information"
        android:textColor="@color/white"
        android:textSize="40sp" />


    <ImageView
        android:id="@+id/icon_home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:src="@drawable/icon_home"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayou"
        android:layout_margin="23dp"
        android:padding="23dp">

        <com.example.han.referralproject.imageview.CircleImageView
            android:id="@+id/per_image"
            android:layout_width="205dp"
            android:layout_height="205dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:src="@drawable/avatar_placeholder" />


        <TextView
            android:id="@+id/per_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="23dp"
            android:layout_toRightOf="@id/per_image"
            android:text="王大妈"
            android:textColor="#686868"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btn_record"
            android:layout_width="160dp"
            android:layout_height="58dp"
            android:layout_alignBottom="@id/per_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="72dp"
            android:background="@drawable/health_document"
            android:gravity="center"
            android:text="健康档案"
            android:textColor="#fff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/per_name"
            android:layout_centerInParent="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/per_image"
            android:text="账户余额: 1000元"
            android:textColor="#a2a2a2"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/tv_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_balance"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/per_image"
            android:text="我的积分: 1000分"
            android:textColor="#a2a2a2"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/doctor_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_balance"
            android:layout_marginLeft="350dp"
            android:layout_toRightOf="@id/per_image"
            android:text="签约医生: 赵曼林"
            android:textColor="#a2a2a2"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/tv_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_points"
            android:layout_marginLeft="350dp"
            android:layout_toRightOf="@id/per_image"
            android:text="浙江第二人民医院"
            android:textColor="#a2a2a2"
            android:textSize="27sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/RelativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pay"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/account_recharge" />

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/icon_doctor_message" />

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/icon_check" />

        <!--<ImageView-->
        <!--android:layout_width="125dp"-->
        <!--android:layout_height="125dp"-->
        <!--android:layout_marginLeft="40dp"-->
        <!--android:layout_marginRight="40dp"-->
        <!--android:src="@drawable/my_ordor" />-->
        <ImageView
            android:id="@+id/iv_alarm"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/ic_alarm" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/logout"
        android:textColor="#abcadf"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/view_wifi"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_wifi" />
    <View
        android:id="@+id/view_change"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
