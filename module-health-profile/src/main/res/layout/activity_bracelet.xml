<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.gcml.common.widget.toolbar.TranslucentToolBar
        android:id="@+id/tb_bracelet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="400pt"
            android:layout_height="match_parent"
            android:background="#fff5f5f5">

            <RadioGroup
                android:id="@+id/rg_bracele"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></RadioGroup>
        </ScrollView>

        <com.gcml.common.widget.MLViewPager
            android:id="@+id/vp_bracelet_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:paddingLeft="68pt"
            android:paddingRight="68pt" />

    </LinearLayout>
</LinearLayout>
