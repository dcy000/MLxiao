<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bci_bg_fruit_game"
    tools:context="com.ml.bci.game.BciGameFruitActivity">

    <ImageView
        android:id="@+id/bci_iv_fruit_emitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bci_ic_fruit_emitter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/bci_tv_fruit_indicator"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/bci_ic_fruit_indicator"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="38sp"
        app:layout_constraintBottom_toTopOf="@+id/bci_iv_fruit_emitter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="苹果"/>

    <ImageView
        android:id="@+id/bci_iv_choose_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bci_ic_choose_indicator"
        app:layout_constraintBottom_toTopOf="@+id/bci_iv_fruit_emitter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bci_rv_fruits"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/bci_iv_fruit_emitter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bci_iv_fruit_emitter"/>

    <ImageView
        android:id="@+id/bci_iv_fruit_basket_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bci_ic_fruit_basket_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/bci_iv_choose_fruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/bci_ic_fruit_apple"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bci_iv_fruit_basket_front"/>

    <ImageView
        android:id="@+id/bci_iv_fruit_basket_front"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bci_ic_fruit_basket_front"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/bci_iv_flower"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/bci_bg_flower"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ProgressBar
        android:id="@+id/bci_pb_attention"
        android:layout_width="28dp"
        android:layout_height="258dp"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="60dp"
        android:indeterminateOnly="false"
        android:max="100"
        android:progress="25"
        android:progressDrawable="@drawable/bci_pb_attention"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>
