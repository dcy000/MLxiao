<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_main"
    tools:context="com.example.han.referralproject.Test_mainActivity">

    <LinearLayout
        android:id="@+id/linear_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/test_xueya"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/test_xueya" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/test_xueyang"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/test_xueyang" />
        <ImageView
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black" />

        <ImageView
            android:clickable="true"
            android:id="@+id/test_wendu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/test_wendu" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="345dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:clickable="true"
                android:id="@+id/test_xuetang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/test_xuetang" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@android:color/black" />

            <ImageView
                android:clickable="true"
                android:id="@+id/test_xindian"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/test_xindian" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@android:color/black" />

            <ImageView
                android:clickable="true"
                android:id="@+id/test_qita"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/test_qita" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
